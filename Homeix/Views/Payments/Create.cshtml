@model Homeix.Models.Payment

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["CreatePaymentTitle"];
}

<div class="container-fluid mt-4">

    <!-- ================= PAGE HEADER ================= -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title fw-bold">
                @Localizer["CreatePaymentTitle"]
            </h1>
        </div>
    </div>

    <!-- ================= FORM CARD ================= -->
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">

            <div class="card shadow-sm">
                <div class="card-body">

                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly"
                             class="alert alert-danger mb-3"></div>

                        <!-- USER -->
                        <div class="mb-3">
                            <label asp-for="UserId" class="form-label fw-semibold">
                                @Localizer["UserLabel"]
                            </label>
                            <select asp-for="UserId"
                                    class="form-select"
                                    asp-items="ViewBag.UserId">
                            </select>
                            <span asp-validation-for="UserId" class="text-danger"></span>
                        </div>

                        <!-- SUBSCRIPTION -->
                        <div class="mb-3">
                            <label asp-for="SubscriptionId" class="form-label fw-semibold">
                                @Localizer["SubscriptionLabel"]
                            </label>
                            <select asp-for="SubscriptionId"
                                    class="form-select"
                                    asp-items="ViewBag.SubscriptionId">
                            </select>
                            <span asp-validation-for="SubscriptionId" class="text-danger"></span>
                        </div>

                        <!-- PAYMENT METHOD -->
                        <div class="mb-3">
                            <label asp-for="PaymentMethodId" class="form-label fw-semibold">
                                @Localizer["PaymentMethodLabel"]
                            </label>
                            <select asp-for="PaymentMethodId"
                                    class="form-select"
                                    asp-items="ViewBag.PaymentMethodId">
                            </select>
                            <span asp-validation-for="PaymentMethodId" class="text-danger"></span>
                        </div>

                        <!-- AMOUNT -->
                        <div class="mb-3">
                            <label asp-for="Amount" class="form-label fw-semibold">
                                @Localizer["AmountLabel"]
                            </label>
                            <input asp-for="Amount"
                                   type="number"
                                   step="0.01"
                                   min="0"
                                   class="form-control" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>

                        <!-- PAYMENT DATE -->
                        <div class="mb-3">
                            <label asp-for="PaymentDate" class="form-label fw-semibold">
                                @Localizer["PaymentDateLabel"]
                            </label>
                            <input asp-for="PaymentDate"
                                   type="datetime-local"
                                   class="form-control" />
                            <span asp-validation-for="PaymentDate" class="text-danger"></span>
                        </div>

                        <!-- ================= ACTIONS ================= -->
                        <div class="d-flex justify-content-end gap-2 mt-4">

                            <button type="submit"
                                    class="btn btn-primary btn-sm">
                                <i class="bi bi-check-circle"></i>
                                @Localizer["CreatePaymentButton"]
                            </button>

                            <button type="button"
                                    class="btn btn-secondary btn-sm"
                                    onclick="history.back()">
                                <i class="bi bi-arrow-left"></i>
                                @Localizer["BackButton"]
                            </button>

                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
