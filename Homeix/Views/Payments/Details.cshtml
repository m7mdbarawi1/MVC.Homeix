@model Homeix.Models.Payment

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PaymentDetailsTitle"];
}

<div class="container-fluid mt-4">

    <!-- ================= PAGE HEADER ================= -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title fw-bold">
                @Localizer["PaymentDetailsTitle"]
            </h1>
        </div>
    </div>

    <!-- ================= DETAILS CARD ================= -->
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">

            <div class="card shadow-sm">

                <!-- CARD HEADER -->
                <div class="card-header">
                    <h5 class="mb-0">
                        @Localizer["Details"]
                    </h5>
                </div>

                <!-- CARD BODY -->
                <div class="card-body">
                    <dl class="row mb-0">

                        <dt class="col-sm-4 fw-bold">
                            @Localizer["AmountLabel"]
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Amount)
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            @Localizer["PaymentDateLabel"]
                        </dt>
                        <dd class="col-sm-8">
                            @Model.PaymentDate.ToString("yyyy-MM-dd HH:mm")
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            @Localizer["PaymentMethodLabel"]
                        </dt>
                        <dd class="col-sm-8">
                            @Model.PaymentMethod?.MethodName
                            <span class="text-muted">
                                (@Localizer["IdLabel"]: @Model.PaymentMethodId)
                            </span>
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            @Localizer["SubscriptionLabel"]
                        </dt>
                        <dd class="col-sm-8">
                            @Localizer["SubscriptionIdLabel"]: @Model.SubscriptionId
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            @Localizer["UserLabel"]
                        </dt>
                        <dd class="col-sm-8">
                            @Localizer["UserIdLabel"]: @Model.UserId
                        </dd>

                    </dl>
                </div>

                <!-- ================= ACTIONS ================= -->
                <div class="card-footer d-flex justify-content-end">
                    <button type="button"
                            class="btn btn-secondary btn-sm"
                            onclick="history.back()">
                        <i class="bi bi-arrow-left"></i>
                        @Localizer["BackButton"]
                    </button>
                </div>

            </div>

        </div>
    </div>
</div>
