@model Homeix.Models.Payment

@{
    ViewData["Title"] = "Payment Details";
}

<div class="container-fluid mt-4">

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="fw-bold">Payment Details</h1>
        </div>
    </div>

    <!-- Centered Card -->
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">

            <div class="card shadow-sm">

                <!-- Card Header -->
                <div class="card-header">
                    <h5 class="mb-0">Details</h5>
                </div>

                <!-- Card Body -->
                <div class="card-body">
                    <dl class="row mb-0">

                        <dt class="col-sm-4 fw-bold">
                            @Html.DisplayNameFor(model => model.Amount)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Amount)
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            @Html.DisplayNameFor(model => model.PaymentDate)
                        </dt>
                        <dd class="col-sm-8">
                            @Model.PaymentDate.ToString("yyyy-MM-dd HH:mm")
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            Payment Method
                        </dt>
                        <dd class="col-sm-8">
                            @Model.PaymentMethod?.MethodName
                            <span class="text-muted">
                                (ID: @Model.PaymentMethodId)
                            </span>
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            Subscription
                        </dt>
                        <dd class="col-sm-8">
                            Subscription ID: @Model.SubscriptionId
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            User
                        </dt>
                        <dd class="col-sm-8">
                            User ID: @Model.UserId
                        </dd>

                    </dl>
                </div>

                <!-- Footer -->
                <div class="card-footer text-end">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Back
                    </a>
                </div>

            </div>

        </div>
    </div>
</div>
