@model Homeix.Models.Payment

@{
    ViewData["Title"] = "Payment Details";
}

<div class="container-fluid mt-4">

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="fw-bold">Payment Details</h1>
        </div>
    </div>

    <!-- Centered Card -->
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">

            <div class="card shadow-sm">

                <!-- Card Header -->
                <div class="card-header">
                    <h5 class="mb-0">Details</h5>
                </div>

                <!-- Card Body -->
                <div class="card-body">
                    <dl class="row mb-0">

                        <dt class="col-sm-4 fw-bold">
                            @Html.DisplayNameFor(model => model.Amount)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Amount)
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            @Html.DisplayNameFor(model => model.PaymentDate)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.PaymentDate)
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            @Html.DisplayNameFor(model => model.Status)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Status)
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            @Html.DisplayNameFor(model => model.PaymentMethod)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.PaymentMethod.PaymentMethodId)
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            @Html.DisplayNameFor(model => model.Subscription)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Subscription.SubscriptionId)
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            @Html.DisplayNameFor(model => model.User)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.User.UserId)
                        </dd>

                    </dl>
                </div>

                <!-- Card Footer -->
                <div class="card-footer d-flex justify-content-end gap-2">
                    <a asp-action="Edit" asp-route-id="@Model?.PaymentId" class="btn btn-secondary">
                        Edit
                    </a>
                    <a asp-action="Index" class="btn btn-primary">
                        Back to List
                    </a>
                </div>

            </div>

        </div>
    </div>
</div>
