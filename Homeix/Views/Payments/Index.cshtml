@model IEnumerable<Homeix.Models.Payment>

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PaymentsTitle"];
}

<div class="container-fluid mt-4">

    <!-- ================= HEADER ================= -->
    <div class="row mb-4">
        <div class="col-12 d-flex flex-column flex-md-row justify-content-between align-items-md-center">
            <h1 class="mb-3 mb-md-0">
                @Localizer["PaymentsTitle"]
            </h1>

            <div class="d-flex gap-2">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>
                    @Localizer["CreateNewButton"]
                </a>

                <a asp-action="DownloadReport"
                   class="btn btn-secondary d-inline-flex align-items-center gap-2">
                    <i class="bi bi-download"></i>
                    @Localizer["DownloadReportButton"]
                </a>
            </div>
        </div>
    </div>

    <!-- ================= SEARCH ================= -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <input type="text"
                           id="searchInput"
                           class="form-control"
                           placeholder="@Localizer["SearchPaymentsPlaceholder"]" />
                </div>
            </div>
        </div>
    </div>

    <!-- ================= TABLE ================= -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">

                            <thead class="table-light">
                                <tr>
                                    <th>@Localizer["AmountLabel"]</th>
                                    <th>@Localizer["PaymentDateLabel"]</th>
                                    <th>@Localizer["PaymentMethodLabel"]</th>
                                    <th>@Localizer["SubscriptionLabel"]</th>
                                    <th>@Localizer["UserLabel"]</th>
                                    <th class="text-center">
                                        @Localizer["ActionsLabel"]
                                    </th>
                                </tr>
                            </thead>

                            <tbody id="paymentsTable">
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Amount</td>
                                            <td>@item.PaymentDate.ToString("yyyy-MM-dd HH:mm")</td>
                                            <td>@item.PaymentMethod?.MethodName</td>
                                            <td>@item.Subscription?.SubscriptionId</td>
                                            <td>@item.User?.UserId</td>

                                            <td class="text-center">
                                                <div class="d-flex flex-wrap justify-content-center gap-2">
                                                    <a asp-action="Details"
                                                       asp-route-id="@item.PaymentId"
                                                       class="btn btn-accent btn-sm">
                                                        <i class="bi bi-info-circle"></i>
                                                        @Localizer["DetailsButton"]
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center text-muted">
                                            @Localizer["NoPaymentsFound"]
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const searchInput = document.getElementById("searchInput");
            const rows = document.querySelectorAll("#paymentsTable tr");

            searchInput.addEventListener("input", function () {
                const term = searchInput.value.toLowerCase();
                rows.forEach(row => {
                    row.style.display = row.textContent.toLowerCase().includes(term)
                        ? ""
                        : "none";
                });
            });
        });
    </script>
}
