@model Homeix.Models.Payment

@{
    ViewData["Title"] = "Delete Payment";
}

<div class="container-fluid mt-4">

    <!-- ================= PAGE HEADER ================= -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title text-danger fw-bold">
                Delete Payment
            </h1>
            <p class="text-muted mb-0">
                Are you sure you want to delete this payment?
            </p>
        </div>
    </div>

    <!-- ================= CONFIRMATION CARD ================= -->
    <div class="row justify-content-center">
        <div class="col-md-9 col-lg-8">

            <div class="card shadow-sm border-danger">

                <!-- CARD HEADER -->
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Confirm Deletion</h5>
                </div>

                <!-- CARD BODY -->
                <div class="card-body">
                    <dl class="row mb-0">

                        <dt class="col-sm-4 fw-bold">Amount</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Amount)
                        </dd>

                        <dt class="col-sm-4 fw-bold">Payment Date</dt>
                        <dd class="col-sm-8">
                            @Model.PaymentDate.ToString("yyyy-MM-dd HH:mm")
                        </dd>

                        <dt class="col-sm-4 fw-bold">Payment Method</dt>
                        <dd class="col-sm-8">
                            @Model.PaymentMethod?.MethodName
                            <span class="text-muted">
                                (ID: @Model.PaymentMethodId)
                            </span>
                        </dd>

                        <dt class="col-sm-4 fw-bold">Subscription</dt>
                        <dd class="col-sm-8">
                            Subscription ID: @Model.SubscriptionId
                        </dd>

                        <dt class="col-sm-4 fw-bold">User</dt>
                        <dd class="col-sm-8">
                            User ID: @Model.UserId
                        </dd>

                    </dl>
                </div>

                <!-- ================= ACTIONS ================= -->
                <div class="card-footer d-flex justify-content-end gap-2">

                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" asp-for="PaymentId" />
                        <button type="submit"
                                class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i>
                            Delete
                        </button>
                    </form>

                    <button type="button"
                            class="btn btn-secondary btn-sm"
                            onclick="history.back()">
                        <i class="bi bi-arrow-left"></i>
                        Back
                    </button>

                </div>

            </div>

        </div>
    </div>
</div>
