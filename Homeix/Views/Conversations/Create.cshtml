@model Homeix.Models.Conversation

@{
    ViewData["Title"] = "Create Conversation";
}

<div class="container-fluid mt-4">

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title">Create Conversation</h1>
        </div>
    </div>

    <!-- Centered Form -->
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body">

                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- User 1 -->
                        <div class="mb-3">
                            <label asp-for="User1Id" class="form-label"></label>
                            <select asp-for="User1Id"
                                    class="form-select"
                                    asp-items="ViewBag.User1Id">
                            </select>
                            <span asp-validation-for="User1Id" class="text-danger"></span>
                        </div>

                        <!-- User 2 -->
                        <div class="mb-3">
                            <label asp-for="User2Id" class="form-label"></label>
                            <select asp-for="User2Id"
                                    class="form-select"
                                    asp-items="ViewBag.User2Id">
                            </select>
                            <span asp-validation-for="User2Id" class="text-danger"></span>
                        </div>

                        <!-- Created At -->
                        <div class="mb-3">
                            <label asp-for="CreatedAt" class="form-label"></label>
                            <input asp-for="CreatedAt" type="datetime-local" class="form-control" />
                            <span asp-validation-for="CreatedAt" class="text-danger"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-end gap-2 mt-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Create
                            </button>

                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left-circle"></i> Cancel
                            </a>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
