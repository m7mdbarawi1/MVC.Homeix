@model Homeix.Models.WorkerPost
@using System.Linq

@functions {
    string NormalizePath(string path)
    {
        if (string.IsNullOrWhiteSpace(path))
            return "/images/no-image.png";

        path = path.Replace("\\", "/");

        return path.StartsWith("/")
            ? path
            : "/" + path;
    }
}

@{
    ViewData["Title"] = "Worker Post Details";

    var mediaList = (Model.Media ?? Enumerable.Empty<WorkerPostMedia>())
        .Where(m => !string.IsNullOrWhiteSpace(m.MediaPath))
        .ToList();

    bool hasMedia = mediaList.Any();
    var fallbackImage = "/images/no-image.png";
}

<div class="container mt-4">

    <!-- HEADER -->
    <div class="mb-3">
        <h2 class="fw-bold">@Model.Title</h2>

        <div class="text-muted small">
            <i class="bi bi-geo-alt"></i> @Model.Location
            <span class="mx-2">•</span>
            <i class="bi bi-calendar3"></i> @Model.CreatedAt.ToString("yyyy-MM-dd")
        </div>

        @if (!string.IsNullOrWhiteSpace(Model.PostCategory?.CategoryName))
        {
            <span class="badge bg-primary mt-2">
                <i class="bi bi-tags"></i> @Model.PostCategory.CategoryName
            </span>
        }
    </div>

    <div class="row g-4">

        <!-- IMAGES -->
        <div class="col-lg-7">
            <div class="card shadow-sm overflow-hidden">

                @if (hasMedia && mediaList.Count > 1)
                {
                    <div id="workerPostCarousel"
                         class="carousel slide"
                         data-bs-ride="carousel">

                        <div class="carousel-inner bg-light">
                            @for (int i = 0; i < mediaList.Count; i++)
                            {
                                var imageUrl = NormalizePath(mediaList[i].MediaPath);

                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                    <img src="@imageUrl"
                                         class="d-block w-100 img-fluid"
                                         style="max-height:520px; object-fit:contain;" />
                                </div>
                            }
                        </div>

                        <button class="carousel-control-prev"
                                type="button"
                                data-bs-target="#workerPostCarousel"
                                data-bs-slide="prev">
                            <span class="carousel-control-prev-icon"></span>
                        </button>

                        <button class="carousel-control-next"
                                type="button"
                                data-bs-target="#workerPostCarousel"
                                data-bs-slide="next">
                            <span class="carousel-control-next-icon"></span>
                        </button>
                    </div>
                }
                else
                {
                    var imageUrl = hasMedia
                    ? NormalizePath(mediaList.First().MediaPath)
                    : fallbackImage;

                    <img src="@imageUrl"
                         class="d-block w-100 img-fluid"
                         style="max-height:520px; object-fit:contain;" />
                }

            </div>
        </div>

        <!-- DETAILS -->
        <div class="col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body">

                    <!-- PRICE -->
                    <div class="mb-3">
                        <div class="text-muted small">Price Range</div>
                        <div class="fs-4 fw-bold text-success">
                            @Model.PriceRangeMin JD – @Model.PriceRangeMax JD
                        </div>
                    </div>

                    <hr />

                    <!-- WORKER -->
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <div class="rounded-circle bg-light d-flex align-items-center justify-content-center"
                             style="width:44px; height:44px;">
                            <i class="bi bi-person fs-4 text-muted"></i>
                        </div>

                        <div>
                            <a asp-controller="Users"
                               asp-action="PublicProfile"
                               asp-route-id="@Model.UserId"
                               class="fw-semibold text-decoration-none">
                                @Model.User?.FullName
                            </a>
                        </div>
                    </div>

                    <hr />

                    <!-- DESCRIPTION -->
                    <div class="fw-bold mb-2">Description</div>
                    <p class="text-muted" style="white-space:pre-line;">
                        @Model.Description
                    </p>

                </div>

                <!-- FOOTER -->
                <div class="card-footer d-flex justify-content-between">

                    <button type="button"
                            class="btn btn-outline-secondary btn-sm"
                            onclick="history.back()">
                        <i class="bi bi-arrow-left"></i> Back
                    </button>

                    <div class="d-flex gap-2">
                        <a asp-controller="Ratings"
                           asp-action="Create"
                           asp-route-ratedUserId="@Model.UserId"
                           class="btn btn-outline-warning btn-sm">
                            <i class="bi bi-star"></i> Rate
                        </a>

                        <a asp-controller="Chat"
                           asp-action="Index"
                           asp-route-userId="@Model.UserId"
                           class="btn btn-primary btn-sm">
                            <i class="bi bi-chat-dots"></i> Chat
                        </a>
                    </div>

                </div>

            </div>
        </div>

    </div>
</div>
