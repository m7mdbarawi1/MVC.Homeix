@model Homeix.Models.WorkerPost

@{
    ViewData["Title"] = "Create Worker Post";
}

<div class="container mt-4">

    <!-- HEADER -->
    <div class="text-center mb-4">
        <h1 class="fw-bold">Create Worker Post</h1>
        <p class="text-muted">Fill in the details below to publish a new post</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">

            <div class="card shadow-sm">
                <div class="card-body">

                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- CATEGORY -->
                        <div class="mb-3">
                            <label asp-for="PostCategoryId" class="form-label fw-semibold"></label>
                            <select asp-for="PostCategoryId"
                                    class="form-select"
                                    asp-items="ViewBag.PostCategoryId">
                                <option value="">-- Select Category --</option>
                            </select>
                            <span asp-validation-for="PostCategoryId" class="text-danger"></span>
                        </div>

                        <!-- TITLE -->
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-semibold"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <!-- DESCRIPTION -->
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-semibold"></label>
                            <textarea asp-for="Description"
                                      class="form-control"
                                      rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- LOCATION -->
                        <div class="mb-3">
                            <label asp-for="Location" class="form-label fw-semibold"></label>
                            <input asp-for="Location" class="form-control" />
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>

                        <!-- PRICE RANGE -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PriceRangeMin" class="form-label fw-semibold"></label>
                                <input asp-for="PriceRangeMin"
                                       type="number"
                                       step="0.01"
                                       class="form-control" />
                                <span asp-validation-for="PriceRangeMin" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="PriceRangeMax" class="form-label fw-semibold"></label>
                                <input asp-for="PriceRangeMax"
                                       type="number"
                                       step="0.01"
                                       class="form-control" />
                                <span asp-validation-for="PriceRangeMax" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- IMAGES -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold">
                                Upload Images <span class="text-muted">(optional)</span>
                            </label>

                            <div id="dropZone"
                                 class="border border-2 border-dashed rounded p-4 text-center"
                                 style="cursor:pointer;">

                                <p class="text-muted mb-2">
                                    Drag & drop images here or click to select
                                </p>

                                <input type="file"
                                       id="mediaInput"
                                       name="mediaFiles"
                                       class="d-none"
                                       accept="image/*"
                                       multiple />

                                <div id="preview" class="row g-2 mt-3"></div>

                                <button type="button"
                                        id="clearImagesBtn"
                                        class="btn btn-outline-secondary btn-sm mt-3">
                                    Clear selected images
                                </button>
                            </div>
                        </div>

                        <!-- ACTIONS -->
                        <div class="d-flex justify-content-end gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Create Post
                            </button>

                            <a asp-action="MyPosts" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back
                            </a>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        const dropZone = document.getElementById("dropZone");
        const input = document.getElementById("mediaInput");
        const preview = document.getElementById("preview");
        const clearBtn = document.getElementById("clearImagesBtn");
        const fileMap = new Map();

        const key = f => `${f.name}_${f.size}_${f.lastModified}`;

        function rebuildFiles() {
            const dt = new DataTransfer();
            fileMap.forEach(f => dt.items.add(f));
            input.files = dt.files;
            renderPreview();
        }

        function renderPreview() {
            preview.innerHTML = "";
            fileMap.forEach(file => {
                const col = document.createElement("div");
                col.className = "col-6 col-md-4";

                const img = document.createElement("img");
                img.src = URL.createObjectURL(file);
                img.className = "img-fluid rounded border";
                img.style.maxHeight = "160px";
                img.style.objectFit = "cover";
                img.onload = () => URL.revokeObjectURL(img.src);

                col.appendChild(img);
                preview.appendChild(col);
            });
        }

        function addFiles(files) {
            [...files].forEach(f => {
                if (f.type.startsWith("image/")) {
                    fileMap.set(key(f), f);
                }
            });
            rebuildFiles();
        }

        dropZone.onclick = e => {
            if (e.target !== clearBtn) input.click();
        };

        dropZone.ondragover = e => {
            e.preventDefault();
            dropZone.classList.add("bg-light");
        };

        dropZone.ondragleave = () => dropZone.classList.remove("bg-light");

        dropZone.ondrop = e => {
            e.preventDefault();
            dropZone.classList.remove("bg-light");
            addFiles(e.dataTransfer.files);
        };

        input.onchange = () => {
            addFiles(input.files);
            input.value = "";
        };

        clearBtn.onclick = e => {
            e.preventDefault();
            fileMap.clear();
            rebuildFiles();
        };
    </script>
}
