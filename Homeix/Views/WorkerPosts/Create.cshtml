@model Homeix.Models.WorkerPost

@{
    ViewData["Title"] = "Create Worker Post";
}

<div class="container-fluid mt-4">

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title">Create Worker Post</h1>
        </div>
    </div>

    <!-- Centered Form -->
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="card shadow-sm">
                <div class="card-body">

                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Category -->
                        <div class="mb-3">
                            <label asp-for="PostCategoryId" class="form-label"></label>
                            <select asp-for="PostCategoryId"
                                    class="form-select"
                                    asp-items="ViewBag.PostCategoryId">
                            </select>
                            <span asp-validation-for="PostCategoryId" class="text-danger"></span>
                        </div>

                        <!-- Title -->
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <!-- Description -->
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description"
                                      class="form-control"
                                      rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- Location -->
                        <div class="mb-3">
                            <label asp-for="Location" class="form-label"></label>
                            <input asp-for="Location" class="form-control" />
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>

                        <!-- Price Range -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PriceRangeMin" class="form-label"></label>
                                <input asp-for="PriceRangeMin"
                                       type="number"
                                       step="0.01"
                                       class="form-control" />
                                <span asp-validation-for="PriceRangeMin" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="PriceRangeMax" class="form-label"></label>
                                <input asp-for="PriceRangeMax"
                                       type="number"
                                       step="0.01"
                                       class="form-control" />
                                <span asp-validation-for="PriceRangeMax" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Create Post
                            </button>

                            <a asp-action="MyPosts" class="btn btn-secondary">
                                <i class="bi bi-arrow-left-circle"></i> Back
                            </a>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
