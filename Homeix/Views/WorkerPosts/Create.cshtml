@model Homeix.Models.WorkerPost

@{
    ViewData["Title"] = "Create Worker Post";
}

<div class="container mt-4">

    <!-- HEADER -->
    <div class="text-center mb-4">
        <h1 class="fw-bold">Create Worker Post</h1>
        <p class="text-muted">Fill in the details below to publish a new post</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">

            <div class="card shadow-sm">
                <div class="card-body">

                    <form asp-action="Create"
                          method="post"
                          enctype="multipart/form-data">

                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly"
                             class="text-danger mb-3"></div>

                        <!-- CATEGORY -->
                        <div class="mb-3">
                            <label asp-for="PostCategoryId"
                                   class="form-label fw-semibold"></label>
                            <select asp-for="PostCategoryId"
                                    class="form-select"
                                    asp-items="ViewBag.PostCategoryId">
                                <option value="">-- Select Category --</option>
                            </select>
                            <span asp-validation-for="PostCategoryId"
                                  class="text-danger"></span>
                        </div>

                        <!-- TITLE -->
                        <div class="mb-3">
                            <label asp-for="Title"
                                   class="form-label fw-semibold"></label>
                            <input asp-for="Title"
                                   class="form-control" />
                            <span asp-validation-for="Title"
                                  class="text-danger"></span>
                        </div>

                        <!-- DESCRIPTION -->
                        <div class="mb-3">
                            <label asp-for="Description"
                                   class="form-label fw-semibold"></label>
                            <textarea asp-for="Description"
                                      rows="4"
                                      class="form-control"></textarea>
                            <span asp-validation-for="Description"
                                  class="text-danger"></span>
                        </div>

                        <!-- LOCATION -->
                        <div class="mb-3">
                            <label asp-for="Location"
                                   class="form-label fw-semibold"></label>
                            <input asp-for="Location"
                                   class="form-control" />
                            <span asp-validation-for="Location"
                                  class="text-danger"></span>
                        </div>

                        <!-- PRICE RANGE -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PriceRangeMin"
                                       class="form-label fw-semibold"></label>
                                <input asp-for="PriceRangeMin"
                                       type="number"
                                       step="0.01"
                                       min="0"
                                       class="form-control" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="PriceRangeMax"
                                       class="form-label fw-semibold"></label>
                                <input asp-for="PriceRangeMax"
                                       type="number"
                                       step="0.01"
                                       min="0"
                                       class="form-control" />
                            </div>
                        </div>

                        <!-- ADD IMAGES (WITH REMOVE SUPPORT) -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold">
                                Upload Images <span class="text-muted">(optional)</span>
                            </label>

                            <div id="dropZone"
                                 class="border border-2 border-dashed rounded p-4 text-center"
                                 style="cursor:pointer;">

                                <p class="text-muted mb-2">
                                    Drag & drop images here or click to select
                                </p>

                                <!-- MUST MATCH controller parameter -->
                                <input type="file"
                                       id="mediaInput"
                                       name="mediaFiles"
                                       class="d-none"
                                       accept="image/*"
                                       multiple />

                                <div id="preview" class="row g-2 mt-3"></div>
                            </div>
                        </div>

                        <!-- ACTIONS -->
                        <div class="d-flex justify-content-end gap-2">
                            <button type="submit"
                                    class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Create Post
                            </button>

                            <!-- UNIVERSAL BACK BUTTON -->
                            <button type="button"
                                    class="btn btn-outline-secondary"
                                    onclick="history.back()">
                                <i class="bi bi-arrow-left"></i> Back
                            </button>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        const dropZone = document.getElementById("dropZone");
        const input = document.getElementById("mediaInput");
        const preview = document.getElementById("preview");

        let selectedFiles = [];

        dropZone.onclick = () => input.click();

        dropZone.ondragover = e => {
            e.preventDefault();
            dropZone.classList.add("bg-light");
        };

        dropZone.ondragleave = () => {
            dropZone.classList.remove("bg-light");
        };

        dropZone.ondrop = e => {
            e.preventDefault();
            dropZone.classList.remove("bg-light");
            addFiles(e.dataTransfer.files);
        };

        input.onchange = () => addFiles(input.files);

        function addFiles(files) {
            for (const file of files) {
                if (!file.type.startsWith("image")) continue;
                selectedFiles.push(file);
            }
            renderPreview();
            syncInputFiles();
        }

        function removeFile(index) {
            selectedFiles.splice(index, 1);
            renderPreview();
            syncInputFiles();
        }

        function renderPreview() {
            preview.innerHTML = "";

            selectedFiles.forEach((file, index) => {
                const col = document.createElement("div");
                col.className = "col-6 col-md-4 position-relative";

                const img = document.createElement("img");
                img.src = URL.createObjectURL(file);
                img.className = "img-fluid rounded border";
                img.style.height = "160px";
                img.style.objectFit = "cover";

                img.onload = () => URL.revokeObjectURL(img.src);

                const removeBtn = document.createElement("button");
                removeBtn.type = "button";
                removeBtn.className = "btn btn-danger btn-sm position-absolute top-0 end-0 m-1";
                removeBtn.innerHTML = "&times;";
                removeBtn.onclick = () => removeFile(index);

                col.appendChild(img);
                col.appendChild(removeBtn);
                preview.appendChild(col);
            });
        }

        function syncInputFiles() {
            const dataTransfer = new DataTransfer();
            selectedFiles.forEach(file => dataTransfer.items.add(file));
            input.files = dataTransfer.files;
        }
    </script>
}
