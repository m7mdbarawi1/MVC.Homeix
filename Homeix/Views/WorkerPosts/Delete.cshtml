@model Homeix.Models.WorkerPost

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["DeleteWorkerPostTitle"];
}

<div class="container mt-4">

    <!-- HEADER -->
    <div class="text-center mb-4">
        <h1 class="text-danger fw-bold">
            @Localizer["DeleteWorkerPostTitle"]
        </h1>
        <p class="text-muted">
            @Localizer["DeleteWorkerPostWarning"]
        </p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">

            <div class="card border-danger shadow-sm">

                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i>
                        @Localizer["ConfirmDeletion"]
                    </h5>
                </div>

                <div class="card-body">

                    <dl class="row mb-0">

                        <dt class="col-sm-4 fw-semibold">
                            @Localizer["Title"]
                        </dt>
                        <dd class="col-sm-8">@Model.Title</dd>

                        <dt class="col-sm-4 fw-semibold">
                            @Localizer["Description"]
                        </dt>
                        <dd class="col-sm-8">
                            <div class="text-muted" style="white-space:pre-line;">
                                @Model.Description
                            </div>
                        </dd>

                        <dt class="col-sm-4 fw-semibold">
                            @Localizer["Location"]
                        </dt>
                        <dd class="col-sm-8">@Model.Location</dd>

                        <dt class="col-sm-4 fw-semibold">
                            @Localizer["PriceRange"]
                        </dt>
                        <dd class="col-sm-8">
                            @Model.PriceRangeMin JD – @Model.PriceRangeMax JD
                        </dd>

                        <dt class="col-sm-4 fw-semibold">
                            @Localizer["Category"]
                        </dt>
                        <dd class="col-sm-8">
                            @Model.PostCategory?.CategoryName
                        </dd>

                        <dt class="col-sm-4 fw-semibold">
                            @Localizer["Worker"]
                        </dt>
                        <dd class="col-sm-8">
                            @Model.User?.FullName
                        </dd>

                        <dt class="col-sm-4 fw-semibold">
                            @Localizer["CreatedAt"]
                        </dt>
                        <dd class="col-sm-8">
                            @Model.CreatedAt.ToString("yyyy-MM-dd")
                        </dd>

                    </dl>

                </div>

                <!-- ACTIONS -->
                <div class="card-footer d-flex justify-content-end gap-2">

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="WorkerPostId" />
                        <button type="submit"
                                class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i>
                            @Localizer["Delete"]
                        </button>
                    </form>

                    <button type="button"
                            class="btn btn-secondary btn-sm"
                            onclick="history.back()">
                        <i class="bi bi-arrow-left"></i>
                        @Localizer["Back"]
                    </button>

                </div>

            </div>

        </div>
    </div>
</div>
