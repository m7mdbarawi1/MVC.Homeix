@model Homeix.Models.WorkerPost

@{
    ViewData["Title"] = "Delete Worker Post";
}

<div class="container-fluid mt-4">

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="text-danger">Delete Worker Post</h1>
            <p class="text-muted">Are you sure you want to delete this worker post?</p>
        </div>
    </div>

    <!-- Centered Card -->
    <div class="row justify-content-center">
        <div class="col-md-9 col-lg-8">
            <div class="card shadow-sm border-danger">

                <!-- Card Header -->
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Confirm Deletion</h5>
                </div>

                <!-- Card Body -->
                <div class="card-body">
                    <dl class="row">

                        <dt class="col-sm-4 fw-bold">Title</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Title)
                        </dd>

                        <dt class="col-sm-4 fw-bold">Description</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Description)
                        </dd>

                        <dt class="col-sm-4 fw-bold">Location</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Location)
                        </dd>

                        <dt class="col-sm-4 fw-bold">Price Range (Min)</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.PriceRangeMin)
                        </dd>

                        <dt class="col-sm-4 fw-bold">Price Range (Max)</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.PriceRangeMax)
                        </dd>

                        <dt class="col-sm-4 fw-bold">Created At</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.CreatedAt)
                        </dd>

                        <dt class="col-sm-4 fw-bold">Active</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.IsActive)
                        </dd>

                        <dt class="col-sm-4 fw-bold">Category</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.PostCategory.PostCategoryId)
                        </dd>

                        <dt class="col-sm-4 fw-bold">User</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.User.UserId)
                        </dd>

                    </dl>
                </div>

                <!-- Card Footer -->
                <div class="card-footer d-flex justify-content-end gap-2">
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" asp-for="WorkerPostId" />
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </form>

                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Cancel
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>
