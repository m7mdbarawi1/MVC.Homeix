@model IEnumerable<Homeix.Models.WorkerPost>

@{
    ViewData["Title"] = "Worker Posts";
}

<div class="container-fluid mt-4">

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 d-flex flex-column flex-md-row justify-content-between align-items-md-center">
            <h1 class="mb-3 mb-md-0">@ViewData["Title"]</h1>

            <div class="d-flex gap-2">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i> Create New
                </a>

                <a asp-action="DownloadReport" class="btn btn-outline-secondary">
                    <i class="bi bi-download me-1"></i> Download Report
                </a>
            </div>
        </div>
    </div>

    <!-- Search -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <input type="text"
                           id="searchInput"
                           class="form-control"
                           placeholder="Search worker posts...">
                </div>
            </div>
        </div>
    </div>

    <!-- Table -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th>Location</th>
                                    <th>Min Price</th>
                                    <th>Max Price</th>
                                    <th>Rating</th>
                                    <th>Created</th>
                                    <th>Category</th>
                                    <th>Worker</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>

                            <tbody id="workerPostsTable">
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        var ratings = item.User?.RatingRatedUsers
                                        ?? Enumerable.Empty<Homeix.Models.Rating>();

                                        var avgRating = ratings.Count() > 0
                                        ? ratings.Average(r => r.RatingValue)
                                        : 0;

                                        <tr>
                                            <td>@item.Title</td>

                                            <td class="text-truncate" style="max-width: 250px;">
                                                @item.Description
                                            </td>

                                            <td>@item.Location</td>
                                            <td>@item.PriceRangeMin</td>
                                            <td>@item.PriceRangeMax</td>

                                            <td>
                                                ⭐ @avgRating.ToString("0.0") / 5
                                                <small class="text-muted">
                                                    (@ratings.Count())
                                                </small>
                                            </td>

                                            <td>@item.CreatedAt.ToString("yyyy-MM-dd")</td>

                                            <td>@item.PostCategory?.CategoryName</td>
                                            <td>@item.User?.FullName</td>

                                            <td class="text-center">
                                                <div class="btn-group btn-group-sm">
                                                    <a asp-action="Edit"
                                                       asp-route-id="@item.WorkerPostId"
                                                       class="btn btn-outline-secondary">
                                                        <i class="bi bi-pencil-square"></i>
                                                    </a>

                                                    <a asp-action="Details"
                                                       asp-route-id="@item.WorkerPostId"
                                                       class="btn btn-outline-info">
                                                        <i class="bi bi-info-circle"></i>
                                                    </a>

                                                    <a asp-action="Delete"
                                                       asp-route-id="@item.WorkerPostId"
                                                       class="btn btn-outline-danger">
                                                        <i class="bi bi-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="10" class="text-center p-4">
                                            <div class="alert alert-secondary mb-0">
                                                No worker posts found.
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const searchInput = document.getElementById("searchInput");
            const rows = document.querySelectorAll("#workerPostsTable tr");

            searchInput.addEventListener("input", function () {
                const term = searchInput.value.toLowerCase();
                rows.forEach(row => {
                    row.style.display = row.textContent.toLowerCase().includes(term)
                        ? ""
                        : "none";
                });
            });
        });
    </script>
}
