@model Homeix.Models.WorkerPost
@using Homeix.Models

@{
    ViewData["Title"] = "Edit Worker Post";

    // ✅ Media from ViewBag (correct pattern)
    var mediaLookup =
        ViewBag.PostMedia as Dictionary<int, List<WorkerPostMedia>>
        ?? new Dictionary<int, List<WorkerPostMedia>>();

    var mediaList =
        mediaLookup.TryGetValue(Model.WorkerPostId, out var list)
            ? list
            : new List<WorkerPostMedia>();
}

<div class="container-fluid mt-4">

    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1>Edit Worker Post</h1>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body">

                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <input type="hidden" asp-for="WorkerPostId" />

                        @if (User.IsInRole("admin"))
                        {
                            <div class="mb-3">
                                <label asp-for="UserId" class="form-label"></label>
                                <select asp-for="UserId"
                                        class="form-control"
                                        asp-items="ViewBag.UserId"></select>
                            </div>
                        }
                        else
                        {
                            <input type="hidden" asp-for="UserId" />
                        }

                        <div class="mb-3">
                            <label asp-for="PostCategoryId" class="form-label"></label>
                            <select asp-for="PostCategoryId"
                                    class="form-control"
                                    asp-items="ViewBag.PostCategoryId"></select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label"></label>
                            <input asp-for="Title" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description"
                                      class="form-control"
                                      rows="3"></textarea>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Location" class="form-label"></label>
                            <input asp-for="Location" class="form-control" />
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PriceRangeMin" class="form-label"></label>
                                <input asp-for="PriceRangeMin"
                                       type="number"
                                       step="0.01"
                                       class="form-control" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="PriceRangeMax" class="form-label"></label>
                                <input asp-for="PriceRangeMax"
                                       type="number"
                                       step="0.01"
                                       class="form-control" />
                            </div>
                        </div>

                        @if (User.IsInRole("admin"))
                        {
                            <div class="mb-3">
                                <label asp-for="CreatedAt" class="form-label"></label>
                                <input asp-for="CreatedAt"
                                       type="datetime-local"
                                       class="form-control" />
                            </div>
                        }
                        else
                        {
                            <input type="hidden" asp-for="CreatedAt" />
                        }

                        <div class="form-check mb-4">
                            <input class="form-check-input" asp-for="IsActive" />
                            <label class="form-check-label" asp-for="IsActive"></label>
                        </div>

                        <!-- ✅ CURRENT IMAGES -->
                        <div class="mb-4">
                            <h5 class="mb-2">Current Images</h5>

                            @if (mediaList.Count > 0)
                            {
                                <div class="row g-3">
                                    @foreach (var media in mediaList)
                                    {
                                        <div class="col-6 col-md-4">
                                            <div class="border rounded p-2 h-100">
                                                <img src="@media.MediaPath.Replace("\\", "/")"
                                                     class="img-fluid rounded border"
                                                     style="max-height:160px; object-fit:cover;" />

                                                <div class="form-check mt-2">
                                                    <input class="form-check-input"
                                                           type="checkbox"
                                                           name="deleteMediaIds"
                                                           value="@media.MediaId" />
                                                    <label class="form-check-label">
                                                        Delete
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <p class="text-muted mb-0">No images uploaded for this post.</p>
                            }
                        </div>

                        <!-- ✅ ADD NEW MEDIA -->
                        <div class="mb-4">
                            <label class="form-label">Add New Images</label>

                            <div id="dropZone"
                                 class="border border-2 border-dashed rounded p-4 text-center"
                                 style="cursor:pointer;">
                                <p class="text-muted mb-2">
                                    Drag & drop here or click to select
                                </p>

                                <input type="file"
                                       id="mediaInput"
                                       name="newMediaFiles"
                                       class="d-none"
                                       accept="image/*"
                                       multiple />

                                <div id="preview" class="row g-2 mt-3"></div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Save
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left-circle"></i> Back
                            </a>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        const dropZone = document.getElementById("dropZone");
        const input = document.getElementById("mediaInput");
        const preview = document.getElementById("preview");

        dropZone.onclick = () => input.click();

        dropZone.ondragover = e => {
            e.preventDefault();
            dropZone.classList.add("bg-light");
        };

        dropZone.ondragleave = () => {
            dropZone.classList.remove("bg-light");
        };

        dropZone.ondrop = e => {
            e.preventDefault();
            dropZone.classList.remove("bg-light");
            input.files = e.dataTransfer.files;
            showPreview(input.files);
        };

        input.onchange = () => showPreview(input.files);

        function showPreview(files) {
            preview.innerHTML = "";
            if (!files) return;

            Array.from(files).forEach(file => {
                if (!file.type.startsWith("image")) return;

                const col = document.createElement("div");
                col.className = "col-6 col-md-4";

                const img = document.createElement("img");
                img.src = URL.createObjectURL(file);
                img.className = "img-fluid rounded border";
                img.style.maxHeight = "160px";
                img.style.objectFit = "cover";
                img.onload = () => URL.revokeObjectURL(img.src);

                col.appendChild(img);
                preview.appendChild(col);
            });
        }
    </script>
}
