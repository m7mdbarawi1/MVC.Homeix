@model Homeix.Models.WorkerPost

@{
    ViewData["Title"] = "Edit Worker Post";
}

<div class="container mt-4">

    <!-- HEADER -->
    <div class="mb-4 text-center">
        <h1 class="fw-bold">@ViewData["Title"]</h1>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card shadow-sm">
                <div class="card-body">

                    <form asp-action="Edit"
                          asp-route-id="@Model.WorkerPostId"
                          method="post"
                          enctype="multipart/form-data">

                        <div asp-validation-summary="ModelOnly"
                             class="alert alert-danger"></div>

                        <input type="hidden" asp-for="WorkerPostId" />
                        <input type="hidden" asp-for="UserId" />
                        <input type="hidden" asp-for="CreatedAt" />

                        <!-- CATEGORY -->
                        <div class="mb-3">
                            <label asp-for="PostCategoryId" class="form-label"></label>
                            <select asp-for="PostCategoryId"
                                    class="form-select"
                                    asp-items="ViewBag.PostCategoryId"></select>
                        </div>

                        <!-- TITLE -->
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <!-- DESCRIPTION -->
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description"
                                      rows="4"
                                      class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- LOCATION -->
                        <div class="mb-3">
                            <label asp-for="Location" class="form-label"></label>
                            <input asp-for="Location" class="form-control" />
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>

                        <!-- PRICE -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PriceRangeMin" class="form-label"></label>
                                <input asp-for="PriceRangeMin"
                                       type="number"
                                       step="0.01"
                                       class="form-control" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="PriceRangeMax" class="form-label"></label>
                                <input asp-for="PriceRangeMax"
                                       type="number"
                                       step="0.01"
                                       class="form-control" />
                            </div>
                        </div>

                        <!-- CURRENT MEDIA -->
                        <div class="mb-4">
                            <h5 class="fw-bold mb-3">Current Images</h5>

                            @if (Model.Media.Any())
                            {
                                <div class="row g-3">
                                    @foreach (var media in Model.Media)
                                    {
                                        <div class="col-6 col-md-4">
                                            <div class="border rounded p-2 h-100 text-center">

                                                <img src="@media.MediaPath"
                                                     class="img-fluid rounded mb-2"
                                                     style="height:160px; object-fit:cover" />

                                                <div class="form-check">
                                                    <input class="form-check-input"
                                                           type="checkbox"
                                                           name="deleteMediaIds"
                                                           value="@media.MediaId" />
                                                    <label class="form-check-label">
                                                        Delete
                                                    </label>
                                                </div>

                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <p class="text-muted">No images uploaded.</p>
                            }
                        </div>

                        <!-- ADD NEW MEDIA -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">Add New Images</label>

                            <input type="file"
                                   name="newMediaFiles"
                                   class="form-control"
                                   accept="image/*"
                                   multiple />
                        </div>

                        <!-- ACTIONS -->
                        <div class="d-flex justify-content-end gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-1"></i> Save Changes
                            </button>

                            <a asp-action="MyPosts" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i> Back
                            </a>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
