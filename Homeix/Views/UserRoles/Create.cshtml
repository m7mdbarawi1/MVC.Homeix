@model Homeix.Models.UserRole

@{
    ViewData["Title"] = "Create User Role";
}

<div class="container-fluid mt-4">

    <!-- ================= HEADER ================= -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title fw-bold">Create User Role</h1>
            <p class="text-muted mb-0">
                Define a new role that can be assigned to users.
            </p>
        </div>
    </div>

    <!-- ================= FORM CARD ================= -->
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body">

                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly"
                             class="text-danger mb-3"></div>

                        <!-- ROLE NAME -->
                        <div class="mb-3">
                            <label asp-for="RoleName"
                                   class="form-label fw-semibold"></label>
                            <input asp-for="RoleName"
                                   class="form-control" />
                            <span asp-validation-for="RoleName"
                                  class="text-danger"></span>
                        </div>

                        <!-- ACTIONS -->
                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <button type="submit"
                                    class="btn btn-primary d-inline-flex align-items-center gap-2">
                                <i class="bi bi-check-circle"></i>
                                Create
                            </button>

                            <!-- UNIVERSAL BACK BUTTON -->
                            <button type="button"
                                    class="btn btn-secondary"
                                    onclick="history.back()">
                                <i class="bi bi-arrow-left"></i>
                                Back
                            </button>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
