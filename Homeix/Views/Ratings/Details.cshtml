@model Homeix.Models.Rating

@{
    ViewData["Title"] = "Rating Details";
}

<div class="container-fluid mt-4">

    <!-- ================= HEADER ================= -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="fw-bold">Rating Details</h1>
        </div>
    </div>

    <!-- ================= DETAILS CARD ================= -->
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">

            <div class="card shadow-sm">

                <!-- CARD HEADER -->
                <div class="card-header">
                    <h5 class="mb-0">Details</h5>
                </div>

                <!-- CARD BODY -->
                <div class="card-body">
                    <dl class="row mb-0">

                        <dt class="col-sm-4 fw-bold">
                            @Html.DisplayNameFor(model => model.RatingValue)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.RatingValue)
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            @Html.DisplayNameFor(model => model.Review)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Review)
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            @Html.DisplayNameFor(model => model.CreatedAt)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.CreatedAt)
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            @Html.DisplayNameFor(model => model.RatedUser)
                        </dt>
                        <dd class="col-sm-8">
                            @(Model.RatedUser?.UserId.ToString() ?? "—")
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            @Html.DisplayNameFor(model => model.RaterUser)
                        </dt>
                        <dd class="col-sm-8">
                            @(Model.RaterUser?.UserId.ToString() ?? "—")
                        </dd>

                    </dl>
                </div>

                <!-- ================= ACTIONS ================= -->
                <div class="card-footer d-flex justify-content-end">
                    <button type="button"
                            class="btn btn-secondary"
                            onclick="history.back()">
                        <i class="bi bi-arrow-left"></i> Back
                    </button>
                </div>

            </div>

        </div>
    </div>
</div>
