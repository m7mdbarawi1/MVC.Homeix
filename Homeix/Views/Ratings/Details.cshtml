@model Homeix.Models.Rating

@{
    ViewData["Title"] = "Rating Details";
}

<div class="container-fluid mt-4">

    <!-- ================= PAGE HEADER ================= -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title fw-bold">
                Rating Details
            </h1>
            <p class="text-muted mb-0">
                View rating information
            </p>
        </div>
    </div>

    <!-- ================= DETAILS CARD ================= -->
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">

            <div class="card shadow-sm">

                <!-- CARD HEADER -->
                <div class="card-header">
                    <h5 class="mb-0">Details</h5>
                </div>

                <!-- CARD BODY -->
                <div class="card-body">
                    <dl class="row mb-0">

                        <!-- RATING -->
                        <dt class="col-sm-4 fw-bold">Rating</dt>
                        <dd class="col-sm-8 text-warning fs-5">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <i class="bi @(i <= Model.RatingValue ? "bi-star-fill" : "bi-star")"></i>
                            }
                            <span class="text-muted fs-6 ms-2">
                                (@Model.RatingValue / 5)
                            </span>
                        </dd>

                        <!-- REVIEW -->
                        <dt class="col-sm-4 fw-bold">Review</dt>
                        <dd class="col-sm-8">
                            @(string.IsNullOrWhiteSpace(Model.Review)
                                ? "—"
                                : Model.Review)
                        </dd>

                        <!-- CREATED AT -->
                        <dt class="col-sm-4 fw-bold">Created At</dt>
                        <dd class="col-sm-8">
                            @Model.CreatedAt.ToString("yyyy-MM-dd")
                        </dd>

                        <!-- RATED USER -->
                        <dt class="col-sm-4 fw-bold">Rated User</dt>
                        <dd class="col-sm-8">
                            @(Model.RatedUser?.FullName
                                ?? Model.RatedUser?.UserId.ToString()
                                ?? "—")
                        </dd>

                        <!-- RATED BY -->
                        <dt class="col-sm-4 fw-bold">Rated By</dt>
                        <dd class="col-sm-8">
                            @(Model.RaterUser?.FullName
                                ?? Model.RaterUser?.UserId.ToString()
                                ?? "—")
                        </dd>

                    </dl>
                </div>

                <!-- ================= ACTIONS ================= -->
                <div class="card-footer d-flex justify-content-end">
                    <button type="button"
                            class="btn btn-secondary btn-sm"
                            onclick="history.back()">
                        <i class="bi bi-arrow-left"></i> Back
                    </button>
                </div>

            </div>

        </div>
    </div>
</div>
