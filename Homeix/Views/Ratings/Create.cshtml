@model Homeix.Models.Rating

@{
    ViewData["Title"] = "Create Rating";
}

<div class="container-fluid mt-4">

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title">Create Rating</h1>
        </div>
    </div>

    <!-- Centered Form -->
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body">

                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <!-- Show all validation errors -->
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <!-- Job Progress -->
                        <div class="mb-3">
                            <label asp-for="JobProgressId" class="form-label"></label>
                            <select asp-for="JobProgressId"
                                    class="form-select"
                                    asp-items="ViewBag.JobProgressId">
                                <option value="">-- Select Job --</option>
                            </select>
                            <span asp-validation-for="JobProgressId" class="text-danger"></span>
                        </div>

                        <!-- Rater -->
                        <div class="mb-3">
                            <label asp-for="RaterUserId" class="form-label"></label>
                            <select asp-for="RaterUserId"
                                    class="form-select"
                                    asp-items="ViewBag.RaterUserId">
                                <option value="">-- Select Rater --</option>
                            </select>
                            <span asp-validation-for="RaterUserId" class="text-danger"></span>
                        </div>

                        <!-- Rated User -->
                        <div class="mb-3">
                            <label asp-for="RatedUserId" class="form-label"></label>
                            <select asp-for="RatedUserId"
                                    class="form-select"
                                    asp-items="ViewBag.RatedUserId">
                                <option value="">-- Select Rated User --</option>
                            </select>
                            <span asp-validation-for="RatedUserId" class="text-danger"></span>
                        </div>

                        <!-- Rating Value -->
                        <div class="mb-3">
                            <label asp-for="RatingValue" class="form-label"></label>
                            <input asp-for="RatingValue"
                                   type="number"
                                   min="1"
                                   max="5"
                                   class="form-control" />
                            <span asp-validation-for="RatingValue" class="text-danger"></span>
                        </div>

                        <!-- Review -->
                        <div class="mb-3">
                            <label asp-for="Review" class="form-label"></label>
                            <textarea asp-for="Review"
                                      class="form-control"
                                      rows="3"></textarea>
                            <span asp-validation-for="Review" class="text-danger"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-end gap-2 mt-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Create
                            </button>

                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left-circle"></i> Back
                            </a>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
