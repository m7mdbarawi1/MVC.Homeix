@model Homeix.Models.Rating

@{
    ViewData["Title"] = "Create Rating";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body">

                    <h4 class="text-center mb-4">Rate a User</h4>

                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <!-- 🔍 Search User -->
                        <div class="mb-3">
                            <label class="form-label">User to Rate</label>
                            <input type="text"
                                   id="userSearch"
                                   class="form-control"
                                   placeholder="Search user by name..." />

                            <input type="hidden" asp-for="RatedUserId" />
                            <div id="searchResults" class="list-group mt-1"></div>
                        </div>

                        <!-- ⭐ Star Rating -->
                        <div class="mb-3">
                            <label class="form-label">Rating</label>
                            <div id="starRating" class="fs-3 text-warning">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <i class="bi bi-star star"
                                       data-value="@i"
                                       style="cursor:pointer;"></i>
                                }
                            </div>

                            <input type="hidden" asp-for="RatingValue" />
                            <span asp-validation-for="RatingValue" class="text-danger"></span>
                        </div>

                        <!-- ✍ Optional Review -->
                        <div class="mb-3">
                            <label asp-for="Review" class="form-label"></label>
                            <textarea asp-for="Review"
                                      class="form-control"
                                      rows="3"
                                      placeholder="Optional review..."></textarea>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">
                            Submit Rating
                        </button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // ⭐ STAR RATING
        document.querySelectorAll(".star").forEach(star => {
            star.addEventListener("click", () => {
                const value = star.dataset.value;
                document.querySelector("input[name='RatingValue']").value = value;

                document.querySelectorAll(".star").forEach(s => {
                    s.classList.toggle("bi-star-fill", s.dataset.value <= value);
                    s.classList.toggle("bi-star", s.dataset.value > value);
                });
            });
        });

        // 🔍 USER SEARCH
        const searchInput = document.getElementById("userSearch");
        const results = document.getElementById("searchResults");
        const hiddenUserId = document.querySelector("input[name='RatedUserId']");

        searchInput.addEventListener("input", async () => {
            const term = searchInput.value.trim();
            results.innerHTML = "";
            if (term.length < 2) return;

            const res = await fetch(`/Ratings/SearchUsers?term=${term}`);
            const users = await res.json();

            users.forEach(u => {
                const item = document.createElement("button");
                item.type = "button";
                item.className = "list-group-item list-group-item-action";
                item.textContent = u.fullName;

                item.onclick = () => {
                    searchInput.value = u.fullName;
                    hiddenUserId.value = u.userId;
                    results.innerHTML = "";
                };

                results.appendChild(item);
            });
        });
    </script>
}
