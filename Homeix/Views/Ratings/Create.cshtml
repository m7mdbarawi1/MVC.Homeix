@model Homeix.Models.Rating

@{
    ViewData["Title"] = "Create Rating";

    bool hasPreselectedUser = Model.RatedUserId > 0;
    string ratedUserName = ViewBag.RatedUserName as string ?? "User";
}

<div class="container-fluid mt-4">

    <!-- ================= PAGE HEADER ================= -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title fw-bold">
                @(hasPreselectedUser ? $"Rate {ratedUserName}" : "Rate a User")
            </h1>
            <p class="text-muted mb-0">
                Share your experience to help others make better decisions
            </p>
        </div>
    </div>

    <!-- ================= FORM CARD ================= -->
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">

            <div class="card shadow-sm">
                <div class="card-body">

                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <!-- ================= GLOBAL ERRORS ================= -->
                        @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ContainsKey(""))
                        {
                                <div class="alert alert-danger">
                                @foreach (var err in ViewData.ModelState[""].Errors)
                                {
                                            <div>@err.ErrorMessage</div>
                                }
                                </div>
                        }

                        <!-- ================= USER TO RATE ================= -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold">
                                User to Rate
                            </label>

                            @if (hasPreselectedUser)
                            {
                                    <input type="text"
                                           class="form-control"
                                           value="@ratedUserName"
                                           readonly />

                                    <input type="hidden" asp-for="RatedUserId" />
                            }
                            else
                            {
                                    <input type="text"
                                           id="userSearch"
                                           class="form-control"
                                           placeholder="Search user by name..." />

                                    <input type="hidden" asp-for="RatedUserId" />
                                    <span asp-validation-for="RatedUserId"
                                          class="text-danger"></span>

                                    <div id="searchResults"
                                         class="list-group mt-2 shadow-sm"></div>
                            }
                        </div>

                        <!-- ================= STAR RATING ================= -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold">
                                Rating
                            </label>

                            <div class="fs-3 text-warning user-select-none">
                                @for (int i = 1; i <= 5; i++)
                                {
                                        <i class="bi bi-star star me-1"
                                           data-value="@i"
                                           style="cursor:pointer;"></i>
                                }
                            </div>

                            <input type="hidden" asp-for="RatingValue" />
                            <span asp-validation-for="RatingValue"
                                  class="text-danger"></span>
                        </div>

                        <!-- ================= REVIEW ================= -->
                        <div class="mb-4">
                            <label asp-for="Review"
                                   class="form-label fw-semibold"></label>
                            <textarea asp-for="Review"
                                      class="form-control"
                                      rows="3"
                                      placeholder="Optional review..."></textarea>
                        </div>

                        <!-- ================= ACTIONS ================= -->
                        <div class="d-flex justify-content-end gap-2">
                            <button type="submit"
                                    class="btn btn-primary btn-sm">
                                <i class="bi bi-check-circle"></i> Submit Rating
                            </button>

                            <button type="button"
                                    class="btn btn-secondary btn-sm"
                                    onclick="history.back()">
                                <i class="bi bi-arrow-left"></i> Back
                            </button>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />

        <script>
            // ⭐ STAR SELECTION
            document.querySelectorAll(".star").forEach(star => {
                star.addEventListener("click", () => {
                    const value = star.dataset.value;
                    document.querySelector("input[name='RatingValue']").value = value;

                    document.querySelectorAll(".star").forEach(s => {
                        s.classList.toggle("bi-star-fill", s.dataset.value <= value);
                        s.classList.toggle("bi-star", s.dataset.value > value);
                    });
                });
            });

            // 🔍 USER SEARCH
            const searchInput = document.getElementById("userSearch");
            const results = document.getElementById("searchResults");
            const hiddenUserId = document.querySelector("input[name='RatedUserId']");

            if (searchInput) {
                searchInput.addEventListener("input", async () => {
                    const term = searchInput.value.trim();
                    results.innerHTML = "";

                    if (term.length < 2) return;

                    const res = await fetch(`/Ratings/SearchUsers?term=${encodeURIComponent(term)}`);
                    const users = await res.json();

                    users.forEach(u => {
                        const item = document.createElement("button");
                        item.type = "button";
                        item.className = "list-group-item list-group-item-action";
                        item.textContent = u.fullName;

                        item.onclick = () => {
                            searchInput.value = u.fullName;
                            hiddenUserId.value = u.userId;
                            results.innerHTML = "";
                        };

                        results.appendChild(item);
                    });
                });
            }
        </script>
}
