@model Homeix.Models.Rating

@{
    ViewData["Title"] = "Create Rating";

    bool hasPreselectedUser = Model.RatedUserId > 0;
    string ratedUserName = ViewBag.RatedUserName as string ?? "";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body">

                    <h4 class="text-center mb-4">
                        @(hasPreselectedUser ? $"Rate {ratedUserName}" : "Rate a User")
                    </h4>

                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <!-- 🔔 GLOBAL ERROR -->
                        @if (!ViewData.ModelState.IsValid &&
                        ViewData.ModelState.ContainsKey(""))
                        {
                            <div class="alert alert-danger">
                                @foreach (var err in ViewData.ModelState[""].Errors)
                                {
                                    <div>@err.ErrorMessage</div>
                                }
                            </div>
                        }

                        <!-- 👤 USER TO RATE -->
                        <div class="mb-3">
                            <label class="form-label">User to Rate</label>

                            @if (hasPreselectedUser)
                            {
                                <input type="text"
                                       class="form-control"
                                       value="@ratedUserName"
                                       readonly />

                                <input type="hidden" asp-for="RatedUserId" />
                            }
                            else
                            {
                                <input type="text"
                                       id="userSearch"
                                       class="form-control"
                                       placeholder="Search user by name..." />

                                <input type="hidden" asp-for="RatedUserId" />
                                <span asp-validation-for="RatedUserId" class="text-danger"></span>

                                <div id="searchResults" class="list-group mt-1"></div>
                            }
                        </div>

                        <!-- ⭐ STAR RATING -->
                        <div class="mb-3">
                            <label class="form-label">Rating</label>

                            <div class="fs-3 text-warning">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <i class="bi bi-star star"
                                       data-value="@i"
                                       style="cursor:pointer;"></i>
                                }
                            </div>

                            <input type="hidden" asp-for="RatingValue" />
                            <span asp-validation-for="RatingValue" class="text-danger"></span>
                        </div>

                        <!-- ✍ REVIEW -->
                        <div class="mb-3">
                            <label asp-for="Review" class="form-label"></label>
                            <textarea asp-for="Review"
                                      class="form-control"
                                      rows="3"
                                      placeholder="Optional review..."></textarea>
                        </div>

                        <!-- ACTIONS -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                Submit Rating
                            </button>

                            <button type="button"
                                    class="btn btn-outline-secondary"
                                    onclick="history.back()">
                                <i class="bi bi-arrow-left"></i> Back
                            </button>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.querySelectorAll(".star").forEach(star => {
            star.addEventListener("click", () => {
                const value = star.dataset.value;
                document.querySelector("input[name='RatingValue']").value = value;

                document.querySelectorAll(".star").forEach(s => {
                    s.classList.toggle("bi-star-fill", s.dataset.value <= value);
                    s.classList.toggle("bi-star", s.dataset.value > value);
                });
            });
        });

        const searchInput = document.getElementById("userSearch");
        const results = document.getElementById("searchResults");
        const hiddenUserId = document.querySelector("input[name='RatedUserId']");

        if (searchInput) {
            searchInput.addEventListener("input", async () => {
                const term = searchInput.value.trim();
                results.innerHTML = "";

                if (term.length < 2) return;

                const res = await fetch(`/Ratings/SearchUsers?term=${encodeURIComponent(term)}`);
                const users = await res.json();

                users.forEach(u => {
                    const item = document.createElement("button");
                    item.type = "button";
                    item.className = "list-group-item list-group-item-action";
                    item.textContent = u.fullName;

                    item.onclick = () => {
                        searchInput.value = u.fullName;
                        hiddenUserId.value = u.userId;
                        results.innerHTML = "";
                    };

                    results.appendChild(item);
                });
            });
        }
    </script>
}
