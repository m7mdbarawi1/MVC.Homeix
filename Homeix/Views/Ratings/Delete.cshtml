@model Homeix.Models.Rating

@{
    ViewData["Title"] = "Delete Rating";
}

<div class="container-fluid mt-4">

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="text-danger">Delete Rating</h1>
            <p class="text-muted">Are you sure you want to delete this rating?</p>
        </div>
    </div>

    <!-- Centered Card -->
    <div class="row justify-content-center">
        <div class="col-md-9 col-lg-8">
            <div class="card shadow-sm border-danger">

                <!-- Card Header -->
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Confirm Deletion</h5>
                </div>

                <!-- Card Body -->
                <div class="card-body">
                    <dl class="row mb-0">

                        <dt class="col-sm-4 fw-bold">Rating Value</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.RatingValue)
                        </dd>

                        <dt class="col-sm-4 fw-bold">Review</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Review)
                        </dd>

                        <dt class="col-sm-4 fw-bold">Created At</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.CreatedAt)
                        </dd>

                        <dt class="col-sm-4 fw-bold">Rated User</dt>
                        <dd class="col-sm-8">
                            @(Model.RatedUser?.UserId.ToString() ?? "—")
                        </dd>

                        <dt class="col-sm-4 fw-bold">Rater User</dt>
                        <dd class="col-sm-8">
                            @(Model.RaterUser?.UserId.ToString() ?? "—")
                        </dd>

                    </dl>
                </div>

                <!-- Card Footer -->
                <div class="card-footer d-flex justify-content-end gap-2">
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" asp-for="RatingId" />
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </form>

                    <button type="button"
                            class="btn btn-secondary"
                            onclick="history.back()">
                        <i class="bi bi-arrow-left"></i> Back
                    </button>
                </div>

            </div>
        </div>
    </div>
</div>
