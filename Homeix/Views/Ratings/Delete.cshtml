@model Homeix.Models.Rating

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["DeleteRatingTitle"].Value;
}

<div class="container-fluid mt-4">

    <!-- ================= PAGE HEADER ================= -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title text-danger fw-bold">
                @Localizer["DeleteRatingTitle"]
            </h1>
            <p class="text-muted mb-0">
                @Localizer["DeleteRatingSubtitle"]
            </p>
        </div>
    </div>

    <!-- ================= CONFIRMATION CARD ================= -->
    <div class="row justify-content-center">
        <div class="col-md-9 col-lg-8">

            <div class="card shadow-sm border-danger">

                <!-- CARD HEADER -->
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        @Localizer["ConfirmDeletion"]
                    </h5>
                </div>

                <!-- CARD BODY -->
                <div class="card-body">
                    <dl class="row mb-0">

                        <!-- RATING -->
                        <dt class="col-sm-4 fw-bold">
                            @Localizer["RatingLabel"]
                        </dt>
                        <dd class="col-sm-8 text-warning fs-5">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <i class="bi @(i <= Model.RatingValue ? "bi-star-fill" : "bi-star")"></i>
                            }
                            <span class="text-muted fs-6 ms-2">
                                (@Model.RatingValue / 5)
                            </span>
                        </dd>

                        <!-- REVIEW -->
                        <dt class="col-sm-4 fw-bold">
                            @Localizer["ReviewLabel"]
                        </dt>
                        <dd class="col-sm-8">
                            @(
                                string.IsNullOrWhiteSpace(Model.Review)
                                ? Localizer["EmptyValue"].Value
                                : Model.Review
                                )
                        </dd>

                        <!-- CREATED AT -->
                        <dt class="col-sm-4 fw-bold">
                            @Localizer["CreatedAtLabel"]
                        </dt>
                        <dd class="col-sm-8">
                            @Model.CreatedAt.ToString("yyyy-MM-dd")
                        </dd>

                        <!-- RATED USER -->
                        <dt class="col-sm-4 fw-bold">
                            @Localizer["RatedUserLabel"]
                        </dt>
                        <dd class="col-sm-8">
                            @(
                                Model.RatedUser?.FullName
                                ?? Model.RatedUser?.UserId.ToString()
                                ?? Localizer["EmptyValue"].Value
                                )
                        </dd>

                        <!-- RATED BY -->
                        <dt class="col-sm-4 fw-bold">
                            @Localizer["RatedByLabel"]
                        </dt>
                        <dd class="col-sm-8">
                            @(
                                Model.RaterUser?.FullName
                                ?? Model.RaterUser?.UserId.ToString()
                                ?? Localizer["EmptyValue"].Value
                                )
                        </dd>

                    </dl>
                </div>

                <!-- ================= ACTIONS ================= -->
                <div class="card-footer d-flex justify-content-end gap-2">

                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" asp-for="RatingId" />
                        <button type="submit"
                                class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i>
                            @Localizer["DeleteButton"]
                        </button>
                    </form>

                    <button type="button"
                            class="btn btn-secondary btn-sm"
                            onclick="history.back()">
                        <i class="bi bi-arrow-left"></i>
                        @Localizer["BackButton"]
                    </button>

                </div>

            </div>

        </div>
    </div>
</div>
