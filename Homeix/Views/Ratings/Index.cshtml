@model IEnumerable<Homeix.Models.Rating>

@{
    ViewData["Title"] = "Customer Ratings Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 mb-5">

    <!-- ================= HEADER ================= -->
    <div class="text-center mb-5">
        <h1 class="fw-bold mb-2">
            <i class="bi bi-star-half me-2"></i> Customer Ratings Management
        </h1>
        <p class="text-muted">
            Monitor, manage, and analyze customer ratings and reviews for service posts.
        </p>
    </div>

    <!-- ================= ACTIONS BAR ================= -->
    <div class="card bg-light border-0 shadow-sm mb-4">
        <div class="card-body p-3">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <span class="badge bg-primary rounded-pill p-2">
                        <i class="bi bi-stars me-1"></i> Total Ratings: @Model.Count()
                    </span>
                    <span class="ms-3 text-muted">
                        <i class="bi bi-info-circle me-1"></i> Track feedback and service quality ratings
                    </span>
                </div>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>Add New Rating
                </a>
            </div>
        </div>
    </div>

    <!-- ================= RATINGS TABLE ================= -->
    <div class="card border-0 shadow-lg">
        <div class="card-header bg-primary text-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="bi bi-table me-2"></i>Customer Service Ratings
                </h5>
                <div class="d-flex gap-2">
                    <div class="dropdown">
                        <button class="btn btn-light btn-sm dropdown-toggle" type="button" id="ratingFilter" data-bs-toggle="dropdown">
                            <i class="bi bi-funnel me-1"></i>Rating Filter
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">All Ratings</a></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-star-fill text-warning me-2"></i>5 Stars</a></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-star-fill text-warning me-2"></i>4 Stars</a></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-star-fill text-warning me-2"></i>3 Stars</a></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-star-fill text-warning me-2"></i>2 Stars</a></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-star-fill text-warning me-2"></i>1 Star</a></li>
                        </ul>
                    </div>
                    <button class="btn btn-light btn-sm">
                        <i class="bi bi-search me-1"></i>Search
                    </button>
                </div>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4 py-3">
                                <i class="bi bi-star me-1"></i>
                                Rating & Review
                            </th>
                            <th class="py-3">
                                <i class="bi bi-people me-1"></i>
                                Users
                            </th>
                            <th class="py-3">
                                <i class="bi bi-briefcase me-1"></i>
                                Job Progress
                            </th>
                            <th class="py-3">
                                <i class="bi bi-calendar me-1"></i>
                                Created At
                            </th>
                            <th class="pe-4 py-3 text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="border-top">
                                <td class="ps-4 py-3">
                                    <div class="d-flex align-items-start">
                                        <div class="flex-shrink-0">
                                            <div class="bg-warning bg-opacity-10 rounded-circle p-2">
                                                <i class="bi bi-star-fill text-warning"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <div class="d-flex align-items-center mb-2">
                                                <div class="rating-stars me-3">
                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        if (i <= item.RatingValue)
                                                        {
                                                            <i class="bi bi-star-fill text-warning"></i>
                                                        }
                                                        else
                                                        {
                                                            <i class="bi bi-star text-muted"></i>
                                                        }
                                                    }
                                                </div>
                                                <span class="fw-bold">@item.RatingValue/5</span>
                                            </div>
                                            @if (!string.IsNullOrEmpty(item.Review))
                                            {
                                                <p class="mb-0 text-muted small bg-light bg-opacity-50 p-2 rounded border-start border-warning border-3">
                                                    @if (item.Review.Length > 80)
                                                    {
                                                        @item.Review.Substring(0, 80)
                                                        <text>...</text>
                                                    }
                                                    else
                                                    {
                                                        @item.Review
                                                    }
                                                </p>
                                            }
                                            else
                                            {
                                                <small class="text-muted">No review text</small>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td class="py-3">
                                    <div class="row g-2">
                                        <div class="col-12">
                                            <div class="d-flex align-items-center">
                                                <div class="bg-success bg-opacity-10 rounded-circle p-1 me-2">
                                                    <i class="bi bi-person-check text-success"></i>
                                                </div>
                                                <div>
                                                    <small class="fw-semibold">Rated User:</small>
                                                    <div>User @Html.DisplayFor(modelItem => item.RatedUser.UserId)</div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="d-flex align-items-center">
                                                <div class="bg-primary bg-opacity-10 rounded-circle p-1 me-2">
                                                    <i class="bi bi-person-plus text-primary"></i>
                                                </div>
                                                <div>
                                                    <small class="fw-semibold">Rated By:</small>
                                                    <div>User @Html.DisplayFor(modelItem => item.RaterUser.UserId)</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td class="py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            <div class="bg-info bg-opacity-10 rounded-circle p-2">
                                                <i class="bi bi-briefcase text-info"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="fw-bold mb-0">Job #@Html.DisplayFor(modelItem => item.JobProgress.JobProgressId)</h6>
                                            <small class="text-muted">Service Completion</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            <div class="bg-primary bg-opacity-10 rounded-circle p-2">
                                                <i class="bi bi-calendar3 text-primary"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="fw-bold mb-0">@item.CreatedAt.ToString("MMM dd, yyyy")</h6>
                                            <small class="text-muted">@item.CreatedAt.ToString("hh:mm tt")</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="pe-4 py-3 text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.RatingId" class="btn btn-outline-primary btn-sm" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.RatingId" class="btn btn-outline-info btn-sm" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.RatingId" class="btn btn-outline-danger btn-sm" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                    <div class="mt-2">
                                        @{
                                            var ratingColor = item.RatingValue switch
                                            {
                                                >= 4 => "bg-success",
                                                3 => "bg-warning",
                                                _ => "bg-danger"
                                            };
                                        }
                                        <span class="badge @ratingColor bg-opacity-10 border border-@ratingColor.Replace("bg-", "") border-opacity-25 rounded-pill px-2 py-1">
                                            <i class="bi bi-star-fill me-1"></i>@item.RatingValue Stars
                                        </span>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card-footer bg-light py-3">
            <div class="d-flex justify-content-between align-items-center">
                <div class="text-muted small">
                    <i class="bi bi-graph-up me-1"></i>
                    Average Rating: @(Model.Any() ? Model.Average(r => r.RatingValue).ToString("0.0") : "0.0")/5 •
                    @Model.Select(r => r.RatedUser.UserId).Distinct().Count() rated users
                </div>
                <nav aria-label="Table navigation">
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">Next</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>

    <!-- ================= QUICK STATS ================= -->
    @if (Model.Any())
    {
        <div class="row g-4 mt-4">
            <div class="col-lg-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Total Ratings</h6>
                                <h3 class="fw-bold">@Model.Count()</h3>
                            </div>
                            <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                                <i class="bi bi-stars text-primary fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Avg. Rating</h6>
                                <h3 class="fw-bold">
                                    @Model.Average(r => r.RatingValue).ToString("0.0")/5
                                </h3>
                            </div>
                            <div class="bg-warning bg-opacity-10 rounded-circle p-3">
                                <i class="bi bi-star-fill text-warning fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">5-Star Ratings</h6>
                                <h3 class="fw-bold">
                                    @Model.Count(r => r.RatingValue == 5)
                                </h3>
                            </div>
                            <div class="bg-success bg-opacity-10 rounded-circle p-3">
                                <i class="bi bi-star-fill text-success fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">With Reviews</h6>
                                <h3 class="fw-bold">
                                    @Model.Count(r => !string.IsNullOrEmpty(r.Review))
                                </h3>
                            </div>
                            <div class="bg-info bg-opacity-10 rounded-circle p-3">
                                <i class="bi bi-chat-text text-info fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- ================= RATING ANALYSIS ================= -->
        <div class="row mt-4">
            <div class="col-lg-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-bar-chart me-2"></i>Rating Distribution
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            @for (int star = 5; star >= 1; star--)
                            {
                                var starCount = Model.Count(r => r.RatingValue == star);
                                var percentage = Model.Any() ? (starCount * 100) / Model.Count() : 0;
                                var starColor = star switch
                                {
                                    5 => "success",
                                    4 => "success",
                                    3 => "warning",
                                    2 => "warning",
                                    1 => "danger",
                                    _ => "secondary"
                                };

                                <div class="list-group-item border-0 px-0 py-3">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <div class="d-flex align-items-center">
                                            <div class="rating-stars me-2">
                                                @for (int i = 1; i <= star; i++)
                                                {
                                                    <i class="bi bi-star-fill text-warning"></i>
                                                }
                                            </div>
                                            <span class="fw-semibold">@star Star@(star != 1 ? "s" : "")</span>
                                        </div>
                                        <div>
                                            <span class="fw-bold me-2">@starCount ratings</span>
                                            <span class="text-muted">(@percentage%)</span>
                                        </div>
                                    </div>
                                    <div class="progress" style="height: 10px;">
                                        <div class="progress-bar bg-@starColor" role="progressbar" style="width: @percentage%"
                                             aria-valuenow="@percentage" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-trophy me-2"></i>Top Rated Users
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            @{
                                var topRatedUsers = Model
                                .GroupBy(r => r.RatedUser.UserId)
                                .Select(g => new
                                {
                                    UserId = g.Key,
                                    RatingCount = g.Count(),
                                    AvgRating = g.Average(r => r.RatingValue)
                                })
                                .Where(u => u.RatingCount >= 3) // Only users with at least 3 ratings
                                .OrderByDescending(u => u.AvgRating)
                                .Take(5);

                                int userRank = 1;
                            }
                            @foreach (var user in topRatedUsers)
                            {
                                var rankClass = userRank <= 3 ? "bg-warning bg-opacity-10" : "bg-secondary bg-opacity-10";

                                <div class="list-group-item border-0 px-0 py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            <div class="rounded-circle p-2 @rankClass">
                                                @if (userRank <= 3)
                                                {
                                                    <i class="bi bi-award-fill text-warning"></i>
                                                }
                                                else
                                                {
                                                    <span class="fw-bold">#@userRank</span>
                                                }
                                            </div>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <h6 class="mb-0">User @user.UserId</h6>
                                                <div>
                                                    <span class="badge bg-warning me-1">@user.AvgRating.ToString("0.0")/5</span>
                                                    <span class="badge bg-primary">@user.RatingCount ratings</span>
                                                </div>
                                            </div>
                                            <div class="rating-stars mt-1">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    if (i <= Math.Round(user.AvgRating))
                                                    {
                                                        <i class="bi bi-star-fill text-warning"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="bi bi-star text-muted"></i>
                                                    }
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                userRank++;
                            }
                            @if (!topRatedUsers.Any())
                            {
                                <div class="list-group-item border-0 px-0 py-3 text-center text-muted">
                                    <i class="bi bi-info-circle me-2"></i>
                                    Not enough ratings to determine top users
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- ================= RECENT RATINGS ================= -->
        <div class="card border-0 shadow-sm mt-4">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="card-title mb-0">
                    <i class="bi bi-clock-history me-2"></i>Recent Ratings
                </h5>
            </div>
            <div class="card-body">
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                    @foreach (var item in Model.OrderByDescending(r => r.CreatedAt).Take(6))
                    {
                        var ratingColor = item.RatingValue switch
                        {
                            >= 4 => "success",
                            3 => "warning",
                            _ => "danger"
                        };

                        <div class="col">
                            <div class="card border h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-warning bg-opacity-10 rounded-circle p-2 me-3">
                                                <i class="bi bi-star-fill text-warning"></i>
                                            </div>
                                            <div>
                                                <h6 class="fw-bold mb-0">@item.RatingValue/5 Rating</h6>
                                                <small class="text-muted">Rating #@item.RatingId</small>
                                            </div>
                                        </div>
                                        <span class="badge bg-@ratingColor bg-opacity-10 border border-@ratingColor border-opacity-25">
                                            @item.RatingValue Stars
                                        </span>
                                    </div>
                                    <div class="mb-3">
                                        <div class="rating-stars mb-2">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= item.RatingValue)
                                                {
                                                    <i class="bi bi-star-fill text-warning"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-star text-muted"></i>
                                                }
                                            }
                                        </div>
                                        @if (!string.IsNullOrEmpty(item.Review))
                                        {
                                            <p class="mb-2 text-muted small" style="line-height: 1.4;">
                                                @if (item.Review.Length > 60)
                                                {
                                                    @item.Review.Substring(0, 60)
                                                    <text>...</text>
                                                }
                                                else
                                                {
                                                    @item.Review
                                                }
                                            </p>
                                        }
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-people text-muted me-2"></i>
                                            <small class="text-muted">User @item.RaterUser.UserId → User @item.RatedUser.UserId</small>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">
                                            <i class="bi bi-clock me-1"></i>
                                            @item.CreatedAt.ToString("hh:mm tt")
                                        </small>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@item.RatingId" class="btn btn-outline-primary btn-sm">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.RatingId" class="btn btn-outline-secondary btn-sm">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- ================= REVIEW SUMMARY ================= -->
        <div class="card border-0 shadow-sm mt-4">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="card-title mb-0">
                    <i class="bi bi-chat-quote me-2"></i>Recent Reviews
                </h5>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    @foreach (var item in Model.Where(r => !string.IsNullOrEmpty(r.Review)).OrderByDescending(r => r.CreatedAt).Take(4))
                    {
                        <div class="list-group-item border-0 px-0 py-3">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <div class="bg-warning bg-opacity-10 rounded-circle p-2">
                                        <i class="bi bi-chat-left-quote text-warning"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <div>
                                            <span class="fw-bold">User @item.RaterUser.UserId</span>
                                            <span class="text-muted mx-2">→</span>
                                            <span class="fw-bold">User @item.RatedUser.UserId</span>
                                        </div>
                                        <div class="d-flex align-items-center">
                                            <span class="badge bg-warning bg-opacity-10 border border-warning border-opacity-25 rounded-pill px-2 py-1 me-2">
                                                @item.RatingValue/5
                                            </span>
                                            <small class="text-muted">@item.CreatedAt.ToString("MMM dd")</small>
                                        </div>
                                    </div>
                                    <p class="mb-1 text-muted" style="line-height: 1.5;">
                                        @if (item.Review.Length > 120)
                                        {
                                            @item.Review.Substring(0, 120)
                                            <text>...</text>
                                        }
                                        else
                                        {
                                            @item.Review
                                        }
                                    </p>
                                    <small class="text-muted">
                                        <i class="bi bi-briefcase me-1"></i>
                                        Job #@item.JobProgress.JobProgressId
                                    </small>
                                </div>
                            </div>
                        </div>
                    }
                    @if (Model.Count(r => !string.IsNullOrEmpty(r.Review)) == 0)
                    {
                        <div class="list-group-item border-0 px-0 py-3 text-center text-muted">
                            <i class="bi bi-chat-left me-2"></i>
                            No written reviews available
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    <!-- ================= EMPTY STATE ================= -->
    @if (!Model.Any())
    {
        <div class="card border-0 shadow-lg">
            <div class="card-body p-5 text-center">
                <div class="py-5">
                    <div class="bg-light rounded-circle d-inline-flex p-4 mb-4">
                        <i class="bi bi-star-half text-muted fs-1"></i>
                    </div>
                    <h3 class="fw-bold mb-3">No Ratings Found</h3>
                    <p class="text-muted mb-4">
                        No customer ratings have been submitted yet. Ratings will appear here once users start rating completed services.
                    </p>
                    <a asp-action="Create" class="btn btn-primary btn-lg">
                        <i class="bi bi-plus-circle me-2"></i>Add First Rating
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .rating-stars {
        display: inline-flex;
        align-items: center;
    }

        .rating-stars i {
            margin-right: 2px;
            font-size: 1rem;
        }
</style>