@model IEnumerable<Homeix.Models.Rating>

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["RatingsTitle"].Value;
}

<div class="container-fluid mt-4">

    <!-- ================= HEADER ================= -->
    <div class="row mb-4">
        <div class="col-12 d-flex flex-column flex-md-row justify-content-between align-items-md-center">
            <h1 class="mb-3 mb-md-0">
                @Localizer["RatingsTitle"]
            </h1>

            <div class="d-flex gap-2">
                <a asp-action="DownloadReport"
                   class="btn btn-secondary d-inline-flex align-items-center gap-2">
                    <i class="bi bi-download"></i>
                    @Localizer["DownloadReport"]
                </a>
            </div>
        </div>
    </div>

    <!-- ================= SEARCH ================= -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <input type="text"
                           id="searchInput"
                           class="form-control"
                           placeholder="@Localizer["SearchRatingsPlaceholder"]" />
                </div>
            </div>
        </div>
    </div>

    <!-- ================= TABLE ================= -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">

                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>@Localizer["RatingLabel"]</th>
                                    <th>@Localizer["ReviewLabel"]</th>
                                    <th>@Localizer["CreatedAtLabel"]</th>
                                    <th>@Localizer["RatedUserLabel"]</th>
                                    <th>@Localizer["RatedByLabel"]</th>
                                    <th class="text-center">
                                        @Localizer["ActionsLabel"]
                                    </th>
                                </tr>
                            </thead>

                            <tbody id="ratingsTable">
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-warning text-dark">
                                                    @item.RatingValue ★
                                                </span>
                                            </td>

                                            <td class="text-truncate" style="max-width:300px;">
                                                @(string.IsNullOrWhiteSpace(item.Review)
                                                    ? Localizer["EmptyValue"].Value
                                                    : item.Review)
                                            </td>

                                            <td>
                                                @item.CreatedAt.ToString("yyyy-MM-dd")
                                            </td>

                                            <td>
                                                @(
                                                    item.RatedUser?.FullName
                                                    ?? Localizer["EmptyValue"].Value
                                                    )
                                            </td>

                                            <td>
                                                @(
                                                    item.RaterUser?.FullName
                                                    ?? Localizer["EmptyValue"].Value
                                                    )
                                            </td>

                                            <td class="text-center">
                                                <div class="d-flex justify-content-center gap-2">

                                                    <a asp-action="Details"
                                                       asp-route-id="@item.RatingId"
                                                       class="btn btn-accent btn-sm">
                                                        <i class="bi bi-info-circle"></i>
                                                        @Localizer["DetailsButton"]
                                                    </a>

                                                    <a asp-action="Delete"
                                                       asp-route-id="@item.RatingId"
                                                       class="btn btn-danger btn-sm">
                                                        <i class="bi bi-trash"></i>
                                                        @Localizer["DeleteButton"]
                                                    </a>

                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center p-4">
                                            <div class="alert alert-secondary mb-0">
                                                @Localizer["NoRatingsFound"]
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const searchInput = document.getElementById("searchInput");
            const rows = document.querySelectorAll("#ratingsTable tr");

            searchInput.addEventListener("input", function () {
                const term = searchInput.value.toLowerCase();
                rows.forEach(row => {
                    row.style.display =
                        row.textContent.toLowerCase().includes(term)
                            ? ""
                            : "none";
                });
            });
        });
    </script>
}
