@model Homeix.Models.Rating

@{
    ViewData["Title"] = "Edit Rating";
    string ratedUserName = ViewBag.RatedUserName as string ?? "User";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body">

                    <h4 class="text-center mb-4">
                        Edit Rating for @ratedUserName
                    </h4>

                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <input type="hidden" asp-for="RatingId" />
                        <input type="hidden" asp-for="RatedUserId" />

                        <!-- ⭐ STAR RATING -->
                        <div class="mb-3">
                            <label class="form-label">Rating</label>

                            <div class="fs-3 text-warning">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <i class="bi @(i <= Model.RatingValue ? "bi-star-fill" : "bi-star") star"
                                       data-value="@i"
                                       style="cursor:pointer;"></i>
                                }
                            </div>

                            <input type="hidden" asp-for="RatingValue" />
                        </div>

                        <!-- ✍ REVIEW -->
                        <div class="mb-3">
                            <label asp-for="Review" class="form-label"></label>
                            <textarea asp-for="Review"
                                      class="form-control"
                                      rows="3"></textarea>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                Save Changes
                            </button>

                            <button type="button"
                                    class="btn btn-outline-secondary"
                                    onclick="history.back()">
                                Back
                            </button>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.querySelectorAll(".star").forEach(star => {
            star.addEventListener("click", () => {
                const value = star.dataset.value;
                document.querySelector("input[name='RatingValue']").value = value;

                document.querySelectorAll(".star").forEach(s => {
                    s.classList.toggle("bi-star-fill", s.dataset.value <= value);
                    s.classList.toggle("bi-star", s.dataset.value > value);
                });
            });
        });
    </script>
}
