@model IEnumerable<Homeix.Models.WorkerApproval>

@{
    ViewData["Title"] = "Worker Approvals";
}

<div class="container-fluid mt-4">

    <!-- ================= HEADER ================= -->
    <div class="row mb-4">
        <div class="col-12 d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
            <h1 class="page-title mb-0">
                @ViewData["Title"]
            </h1>

            <div class="d-flex gap-2">
                <a asp-action="DownloadReport"
                   class="btn btn-secondary d-inline-flex align-items-center gap-2">
                    <i class="bi bi-download"></i>
                    Download Report
                </a>
            </div>
        </div>
    </div>

    <!-- ================= SEARCH ================= -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <input type="text"
                           id="searchInput"
                           class="form-control"
                           placeholder="Search worker approvals..." />
                </div>
            </div>
        </div>
    </div>

    <!-- ================= TABLE ================= -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">

                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Worker</th>
                                    <th>Notes</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>

                            <tbody id="approvalsTable">
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <!-- WORKER -->
                                            <td>
                                                @item.User?.FullName
                                            </td>

                                            <!-- NOTES -->
                                            <td class="text-truncate" style="max-width: 350px;">
                                                @(
                                                    string.IsNullOrWhiteSpace(item.Notes)
                                                    ? "—"
                                                    : item.Notes
                                                    )
                                            </td>

                                            <!-- ACTIONS -->
                                            <td class="text-center">
                                                <div class="d-flex flex-wrap justify-content-center gap-2">
                                                    <a asp-action="Details"
                                                       asp-route-id="@item.ApprovalId"
                                                       class="btn btn-accent btn-sm">
                                                        <i class="bi bi-info-circle"></i> Details
                                                    </a>

                                                    <a asp-action="Delete"
                                                       asp-route-id="@item.ApprovalId"
                                                       class="btn btn-danger btn-sm">
                                                        <i class="bi bi-trash"></i> Delete
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="3"
                                            class="text-center text-muted py-4">
                                            No worker approvals found
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const searchInput = document.getElementById("searchInput");
            const rows = document.querySelectorAll("#approvalsTable tr");

            searchInput.addEventListener("input", function () {
                const term = searchInput.value.toLowerCase();

                rows.forEach(row => {
                    row.style.display =
                        row.textContent.toLowerCase().includes(term)
                            ? ""
                            : "none";
                });
            });
        });
    </script>
}
