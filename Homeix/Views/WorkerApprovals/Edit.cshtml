@model Homeix.Models.WorkerApproval

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["EditWorkerApprovalTitle"];
}

<div class="container-fluid mt-4">

    <!-- ================= PAGE HEADER ================= -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title">
                @Localizer["EditWorkerApprovalTitle"]
            </h1>
            <p class="text-muted mb-0">
                @Localizer["EditWorkerApprovalSubtitle"]
            </p>
        </div>
    </div>

    <!-- ================= FORM CARD ================= -->
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body">

                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly"
                             class="text-danger mb-3"></div>

                        <!-- IMPLICIT KEYS -->
                        <input type="hidden" asp-for="ApprovalId" />
                        <!-- UserId is NOT exposed (implicitly preserved in controller) -->
                        <!-- NOTES -->
                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label">
                                @Localizer["NotesOptional"]
                            </label>

                            <textarea asp-for="Notes"
                                      class="form-control"
                                      rows="4"
                                      placeholder="@Localizer["NotesPlaceholder"]"></textarea>

                            <span asp-validation-for="Notes"
                                  class="text-danger"></span>
                        </div>

                        <!-- ACTIONS -->
                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <button type="submit"
                                    class="btn btn-primary btn-sm">
                                <i class="bi bi-check-circle"></i>
                                @Localizer["SaveChanges"]
                            </button>

                            <button type="button"
                                    class="btn btn-secondary btn-sm"
                                    onclick="history.back()">
                                <i class="bi bi-arrow-left"></i>
                                @Localizer["Back"]
                            </button>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
