@model Homeix.Models.WorkerApproval

@{
    ViewData["Title"] = "Edit Worker Approval";
}

<div class="container-fluid mt-4">

    <!-- ================= PAGE HEADER ================= -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title">
                Edit Worker Approval
            </h1>
        </div>
    </div>

    <!-- ================= FORM CARD ================= -->
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body">

                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly"
                             class="text-danger mb-3"></div>

                        <!-- APPROVAL ID -->
                        <input type="hidden" asp-for="ApprovalId" />

                        <!-- USER -->
                        <div class="mb-3">
                            <label asp-for="UserId" class="form-label">
                                Worker
                            </label>

                            <select asp-for="UserId"
                                    class="form-select"
                                    asp-items="ViewBag.UserId">
                                <option value="">-- Select Worker --</option>
                            </select>

                            <span asp-validation-for="UserId"
                                  class="text-danger"></span>
                        </div>

                        <!-- NOTES -->
                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label">
                                Notes
                            </label>

                            <textarea asp-for="Notes"
                                      class="form-control"
                                      rows="4"
                                      placeholder="Optional notes..."></textarea>

                            <span asp-validation-for="Notes"
                                  class="text-danger"></span>
                        </div>

                        <!-- ACTIONS -->
                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <button type="submit"
                                    class="btn btn-primary d-inline-flex align-items-center gap-2">
                                <i class="bi bi-check-circle"></i>
                                Save
                            </button>

                            <a asp-action="Index"
                               class="btn btn-secondary d-inline-flex align-items-center gap-2">
                                <i class="bi bi-arrow-left-circle"></i>
                                Back
                            </a>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
