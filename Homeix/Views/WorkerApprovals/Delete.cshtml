@model Homeix.Models.WorkerApproval

@{
    ViewData["Title"] = "Delete Worker Approval";
}

<div class="container-fluid mt-4">

    <!-- ================= PAGE HEADER ================= -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="text-danger page-title">
                Delete Worker Approval
            </h1>
            <p class="text-muted mb-0">
                Are you sure you want to delete this worker approval record?
            </p>
        </div>
    </div>

    <!-- ================= CONFIRMATION CARD ================= -->
    <div class="row justify-content-center">
        <div class="col-md-9 col-lg-8">
            <div class="card shadow-sm border-danger">

                <!-- CARD HEADER -->
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Confirm Deletion</h5>
                </div>

                <!-- CARD BODY -->
                <div class="card-body">
                    <dl class="row mb-0">

                        <!-- WORKER -->
                        <dt class="col-sm-4 fw-bold">
                            Worker
                        </dt>
                        <dd class="col-sm-8">
                            @Model?.User?.FullName ?? "—"
                        </dd>

                        <!-- NOTES -->
                        <dt class="col-sm-4 fw-bold">
                            Notes
                        </dt>
                        <dd class="col-sm-8">
                            @(
                                string.IsNullOrWhiteSpace(Model?.Notes)
                                ? "—"
                                : Model!.Notes
                                )
                        </dd>

                    </dl>
                </div>

                <!-- ================= ACTIONS ================= -->
                <div class="card-footer d-flex justify-content-end gap-2">
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" asp-for="ApprovalId" />

                        <button type="submit"
                                class="btn btn-danger d-inline-flex align-items-center gap-2">
                            <i class="bi bi-trash"></i>
                            Delete
                        </button>
                    </form>

                    <a asp-action="Index"
                       class="btn btn-secondary d-inline-flex align-items-center gap-2">
                        <i class="bi bi-arrow-left-circle"></i>
                        Cancel
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>
