@model Homeix.Models.WorkerApproval

@{
    ViewData["Title"] = "Delete Worker Approval Request";
}

<div class="container-fluid mt-4">

    <!-- ================= PAGE HEADER ================= -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="text-danger page-title">
                Delete Worker Approval Request
            </h1>
            <p class="text-muted mb-0">
                Are you sure you want to delete this customer's request to become a worker?
            </p>
        </div>
    </div>

    <!-- ================= CONFIRMATION CARD ================= -->
    <div class="row justify-content-center">
        <div class="col-md-9 col-lg-8">
            <div class="card shadow-sm border-danger">

                <!-- CARD HEADER -->
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Confirm Deletion</h5>
                </div>

                <!-- CARD BODY -->
                <div class="card-body">
                    <dl class="row mb-0">

                        <!-- CUSTOMER -->
                        <dt class="col-sm-4 fw-bold">
                            Customer Name
                        </dt>
                        <dd class="col-sm-8">
                            @Model.User.FullName
                        </dd>

                        <!-- NOTES -->
                        <dt class="col-sm-4 fw-bold">
                            Notes
                        </dt>
                        <dd class="col-sm-8">
                            @if (string.IsNullOrWhiteSpace(Model.Notes))
                            {
                                <span class="text-muted">—</span>
                            }
                            else
                            {
                                @Model.Notes
                            }
                        </dd>

                    </dl>
                </div>

                <!-- ================= ACTIONS ================= -->
                <div class="card-footer d-flex justify-content-end gap-2">
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" asp-for="ApprovalId" />

                        <button type="submit"
                                class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i>
                            Delete
                        </button>
                    </form>

                    <button type="button"
                            class="btn btn-secondary btn-sm"
                            onclick="history.back()">
                        <i class="bi bi-arrow-left"></i>
                        Back
                    </button>
                </div>

            </div>
        </div>
    </div>
</div>
