@model Homeix.Models.WorkerApproval

@{
    ViewData["Title"] = "Delete Worker Approval";
}

<div class="container-fluid mt-4">

    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="text-danger">Delete Worker Approval</h1>
            <p class="text-muted">Are you sure you want to delete this worker approval record?</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-9 col-lg-8">
            <div class="card shadow-sm border-danger">

                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Confirm Deletion</h5>
                </div>

                <div class="card-body">
                    <dl class="row">

                        <dt class="col-sm-4 fw-bold">Status</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Status)
                        </dd>

                        <dt class="col-sm-4 fw-bold">Notes</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Notes)
                        </dd>

                        <dt class="col-sm-4 fw-bold">Requested At</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.RequestedAt)
                        </dd>

                        <dt class="col-sm-4 fw-bold">Reviewed At</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.ReviewedAt)
                        </dd>

                        <dt class="col-sm-4 fw-bold">Reviewed By</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.ReviewedByUser.UserId)
                        </dd>

                        <dt class="col-sm-4 fw-bold">Worker</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.User.UserId)
                        </dd>

                    </dl>
                </div>

                <div class="card-footer d-flex justify-content-end gap-2">
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" asp-for="ApprovalId" />
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </form>

                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Cancel
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>
