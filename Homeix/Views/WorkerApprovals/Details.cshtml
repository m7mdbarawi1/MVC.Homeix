@model Homeix.Models.WorkerApproval

@{
    ViewData["Title"] = "Worker Approval Details";
}

<div class="container-fluid mt-4">

    <!-- ================= PAGE HEADER ================= -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="fw-bold page-title">
                Worker Approval Details
            </h1>
        </div>
    </div>

    <!-- ================= DETAILS CARD ================= -->
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">

            <div class="card shadow-sm">

                <div class="card-header">
                    <h5 class="mb-0">Details</h5>
                </div>

                <div class="card-body">
                    <dl class="row mb-0">

                        <!-- WORKER -->
                        <dt class="col-sm-4 fw-bold">
                            Worker
                        </dt>
                        <dd class="col-sm-8">
                            @Model.User?.FullName
                        </dd>

                        <!-- NOTES -->
                        <dt class="col-sm-4 fw-bold">
                            Notes
                        </dt>
                        <dd class="col-sm-8">
                            @(
                                string.IsNullOrWhiteSpace(Model.Notes)
                                ? "—"
                                : Model.Notes
                                )
                        </dd>

                    </dl>
                </div>

                <!-- ================= ACTIONS ================= -->
                <div class="card-footer d-flex justify-content-end gap-2">
                    <a asp-action="Index"
                       class="btn btn-secondary d-inline-flex align-items-center gap-2">
                        <i class="bi bi-arrow-left-circle"></i>
                        Back
                    </a>
                </div>

            </div>

        </div>
    </div>
</div>
