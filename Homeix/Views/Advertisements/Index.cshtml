@model IEnumerable<Homeix.Models.Advertisement>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Advertisements"];
}

<div class="container-fluid mt-4">

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 d-flex flex-column flex-md-row justify-content-between align-items-md-center">
            <h1 class="mb-3 mb-md-0">
                @Localizer["Advertisements"]
            </h1>

            <div class="d-flex gap-2">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>
                    @Localizer["CreateNew"]
                </a>

                <a asp-action="DownloadReport"
                   class="btn btn-secondary d-inline-flex align-items-center gap-2">
                    <i class="bi bi-download"></i>
                    @Localizer["DownloadReport"]
                </a>
            </div>
        </div>
    </div>

    <!-- Search -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <input type="text"
                           id="searchInput"
                           class="form-control"
                           placeholder="@Localizer["SearchAdvertisements"]">
                </div>
            </div>
        </div>
    </div>

    <!-- Table -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>@Localizer["Title"]</th>
                                    <th>@Localizer["Image"]</th>
                                    <th>@Localizer["StartDate"]</th>
                                    <th>@Localizer["EndDate"]</th>
                                    <th>@Localizer["Status"]</th>
                                    <th>@Localizer["CreatedBy"]</th>
                                    <th class="text-center">@Localizer["Actions"]</th>
                                </tr>
                            </thead>
                            <tbody id="adsTable">
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Title</td>
                                            <td>@item.ImagePath</td>
                                            <td>@item.StartDate.ToString("d")</td>
                                            <td>@item.EndDate.ToString("d")</td>
                                            <td>
                                                @if (item.IsActive)
                                                {
                                                    <span class="badge bg-success">
                                                        @Localizer["Active"]
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">
                                                        @Localizer["Inactive"]
                                                    </span>
                                                }
                                            </td>
                                            <td>@item.CreatedByUser?.UserId</td>
                                            <td class="text-center">
                                                <div class="d-flex flex-wrap justify-content-center gap-2">
                                                    <a asp-action="Edit"
                                                       asp-route-id="@item.AdId"
                                                       class="btn btn-secondary btn-sm">
                                                        <i class="bi bi-pencil-square"></i>
                                                        @Localizer["Edit"]
                                                    </a>

                                                    <a asp-action="Details"
                                                       asp-route-id="@item.AdId"
                                                       class="btn btn-accent btn-sm">
                                                        <i class="bi bi-info-circle"></i>
                                                        @Localizer["Details"]
                                                    </a>

                                                    <a asp-action="Delete"
                                                       asp-route-id="@item.AdId"
                                                       class="btn btn-danger btn-sm">
                                                        <i class="bi bi-trash"></i>
                                                        @Localizer["Delete"]
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7"
                                            class="text-center text-muted">
                                            @Localizer["NoAdvertisementsFound"]
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const searchInput = document.getElementById("searchInput");
            const rows = document.querySelectorAll("#adsTable tr");

            searchInput.addEventListener("input", function () {
                const term = searchInput.value.toLowerCase();
                rows.forEach(row => {
                    const text = row.textContent.toLowerCase();
                    row.style.display = text.includes(term) ? "" : "none";
                });
            });
        });
    </script>
}
