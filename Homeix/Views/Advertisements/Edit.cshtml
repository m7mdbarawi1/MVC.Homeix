@model Homeix.Models.Advertisement

@{
    ViewData["Title"] = "Edit Advertisement";
}

<div class="container mt-4">

    <!-- HEADER -->
    <div class="text-center mb-4">
        <h1 class="fw-bold">Edit Advertisement</h1>
        <p class="text-muted">Update the details of your advertisement</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">

            <div class="card shadow-sm">
                <div class="card-body">

                    <form asp-action="Edit"
                          method="post"
                          enctype="multipart/form-data">

                        @Html.AntiForgeryToken()

                        <!-- REQUIRED -->
                        <input type="hidden" asp-for="AdId" />

                        <div asp-validation-summary="ModelOnly"
                             class="text-danger mb-3"></div>

                        <!-- CREATED BY -->
                        <div class="mb-3">
                            <label asp-for="CreatedByUserId"
                                   class="form-label fw-semibold"></label>
                            <select asp-for="CreatedByUserId"
                                    class="form-select"
                                    asp-items="ViewBag.CreatedByUserId">
                            </select>
                            <span asp-validation-for="CreatedByUserId"
                                  class="text-danger"></span>
                        </div>

                        <!-- TITLE -->
                        <div class="mb-3">
                            <label asp-for="Title"
                                   class="form-label fw-semibold"></label>
                            <input asp-for="Title"
                                   class="form-control" />
                            <span asp-validation-for="Title"
                                  class="text-danger"></span>
                        </div>

                        <!-- EXISTING IMAGE -->
                        @if (!string.IsNullOrWhiteSpace(Model.ImagePath))
                        {
                            <div class="mb-4">
                                <label class="form-label fw-semibold">
                                    Existing Image
                                </label>

                                <div class="row g-3">
                                    <div class="col-6 col-md-4 text-center">
                                        <img src="@Model.ImagePath"
                                             class="img-fluid rounded border mb-2"
                                             style="height:160px; object-fit:cover;" />
                                    </div>
                                </div>
                            </div>
                        }

                        <!-- ADD / REPLACE IMAGE -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold">
                                Replace Image <span class="text-muted">(optional)</span>
                            </label>

                            <div id="dropZone"
                                 class="border border-2 border-dashed rounded p-4 text-center"
                                 style="cursor:pointer;">

                                <p class="text-muted mb-2">
                                    Drag & drop image here or click to select
                                </p>

                                <input type="file"
                                       id="imageInput"
                                       name="ImageFile"
                                       class="d-none"
                                       accept="image/*" />

                                <div id="preview" class="row g-2 mt-3"></div>
                            </div>
                        </div>

                        <!-- DATE RANGE -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="StartDate"
                                       class="form-label fw-semibold"></label>
                                <input asp-for="StartDate"
                                       type="date"
                                       class="form-control" />
                                <span asp-validation-for="StartDate"
                                      class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="EndDate"
                                       class="form-label fw-semibold"></label>
                                <input asp-for="EndDate"
                                       type="date"
                                       class="form-control" />
                                <span asp-validation-for="EndDate"
                                      class="text-danger"></span>
                            </div>
                        </div>

                        <!-- ACTIVE -->
                        <div class="form-check mb-4">
                            <input class="form-check-input"
                                   asp-for="IsActive" />
                            <label class="form-check-label fw-semibold"
                                   asp-for="IsActive">
                                Active
                            </label>
                        </div>

                        <!-- ACTIONS -->
                        <div class="d-flex justify-content-end gap-2">
                            <button type="submit"
                                    class="btn btn-primary">
                                <i class="bi bi-check-circle"></i>
                                Save Changes
                            </button>

                            <button type="button"
                                    class="btn btn-secondary"
                                    onclick="history.back()">
                                <i class="bi bi-arrow-left"></i>
                                Back
                            </button>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        const dropZone = document.getElementById("dropZone");
        const input = document.getElementById("imageInput");
        const preview = document.getElementById("preview");

        dropZone.onclick = () => input.click();

        dropZone.ondragover = e => {
            e.preventDefault();
            dropZone.classList.add("bg-light");
        };

        dropZone.ondragleave = () => {
            dropZone.classList.remove("bg-light");
        };

        dropZone.ondrop = e => {
            e.preventDefault();
            dropZone.classList.remove("bg-light");
            input.files = e.dataTransfer.files;
            renderPreview(input.files);
        };

        input.onchange = () => renderPreview(input.files);

        function renderPreview(files) {
            preview.innerHTML = "";
            if (!files) return;

            [...files].forEach(file => {
                if (!file.type.startsWith("image")) return;

                const col = document.createElement("div");
                col.className = "col-6 col-md-4";

                const img = document.createElement("img");
                img.src = URL.createObjectURL(file);
                img.className = "img-fluid rounded border";
                img.style.height = "160px";
                img.style.objectFit = "cover";

                img.onload = () => URL.revokeObjectURL(img.src);

                col.appendChild(img);
                preview.appendChild(col);
            });
        }
    </script>
}
