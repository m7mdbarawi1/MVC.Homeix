@model Homeix.Models.Advertisement
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@functions {
    string NormalizePath(string? path)
    {
        return string.IsNullOrWhiteSpace(path)
            ? "/images/no-image.png"
            : path.Replace("\\", "/");
    }
}

@{
    ViewData["Title"] = Localizer["AdvertisementDetails"];
    var imagePath = NormalizePath(Model.ImagePath);
}

<div class="container mt-4 mb-5">

    <!-- ================= IMAGE SECTION ================= -->
    <div class="card shadow-sm mb-4 overflow-hidden">
        <img src="@imagePath"
             class="d-block w-100 img-fluid bg-light"
             style="max-height:520px; object-fit:contain;"
             alt="@Model.Title" />
    </div>

    <!-- ================= DETAILS SECTION ================= -->
    <div class="card shadow-sm">
        <div class="card-body">

            <!-- TITLE -->
            <h3 class="fw-bold mb-1">@Model.Title</h3>

            <!-- META LINE -->
            <div class="text-muted small d-flex align-items-center flex-wrap gap-3 mb-3">

                <span class="d-flex align-items-center gap-1">
                    <i class="bi bi-calendar3"></i>
                    @Model.StartDate.ToString("yyyy-MM-dd")
                    →
                    @Model.EndDate.ToString("yyyy-MM-dd")
                </span>

                <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">
                    <i class="bi bi-bullseye"></i>
                    @(Model.IsActive ? Localizer["Active"] : Localizer["Inactive"])
                </span>

            </div>

            <hr />

            <!-- CREATED BY -->
            <div class="d-flex align-items-center gap-3 mb-3">

                <div class="rounded-circle bg-light d-flex align-items-center justify-content-center"
                     style="width:44px; height:44px;">
                    <i class="bi bi-person fs-4 text-muted"></i>
                </div>

                <div>
                    <div class="text-muted small">
                        @Localizer["CreatedBy"]
                    </div>
                    <div class="fw-semibold">
                        @Model.CreatedByUser?.FullName
                    </div>
                </div>

            </div>

        </div>

        <!-- ================= ACTIONS ================= -->
        <div class="card-footer d-flex justify-content-between flex-wrap gap-2">

            <button type="button"
                    class="btn btn-secondary btn-sm"
                    onclick="history.back()">
                <i class="bi bi-arrow-left"></i>
                @Localizer["Back"]
            </button>

        </div>
    </div>

</div>
