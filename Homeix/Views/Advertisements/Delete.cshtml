@model Homeix.Models.Advertisement

@functions {
    string NormalizePath(string? path)
    {
        return string.IsNullOrWhiteSpace(path)
            ? "/images/no-image.png"
            : path.Replace("\\", "/");
    }
}

@{
    ViewData["Title"] = "Delete Advertisement";
    var imagePath = NormalizePath(Model.ImagePath);
}

<div class="container mt-4 mb-5">

    <!-- HEADER -->
    <div class="text-center mb-4">
        <h1 class="fw-bold text-danger">Delete Advertisement</h1>
        <p class="text-muted">
            Are you sure you want to permanently delete this advertisement?
        </p>
    </div>

    <!-- IMAGE PREVIEW -->
    <div class="card shadow-sm mb-4 overflow-hidden border-danger">
        <img src="@imagePath"
             class="d-block w-100 img-fluid bg-light"
             style="max-height:420px; object-fit:contain;"
             alt="@Model.Title" />
    </div>

    <!-- DETAILS CARD -->
    <div class="card shadow-sm border-danger">
        <div class="card-body">

            <!-- TITLE -->
            <h4 class="fw-bold mb-2">@Model.Title</h4>

            <!-- META -->
            <div class="text-muted small d-flex align-items-center flex-wrap gap-3 mb-3">

                <span class="d-flex align-items-center gap-1">
                    <i class="bi bi-calendar3"></i>
                    @Model.StartDate.ToString("yyyy-MM-dd")
                    →
                    @Model.EndDate.ToString("yyyy-MM-dd")
                </span>

                <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">
                    @(Model.IsActive ? "Active" : "Inactive")
                </span>

            </div>

            <hr />

            <!-- CREATED BY -->
            <div class="d-flex align-items-center gap-3 mb-3">

                <div class="rounded-circle bg-light d-flex align-items-center justify-content-center"
                     style="width:44px; height:44px;">
                    <i class="bi bi-person fs-4 text-muted"></i>
                </div>

                <div>
                    <div class="text-muted small">Created by</div>
                    <div class="fw-semibold">
                        @Model.CreatedByUser?.FullName
                    </div>
                </div>

            </div>

            <div class="alert alert-danger mb-0">
                <i class="bi bi-exclamation-triangle-fill me-1"></i>
                This action <strong>cannot be undone</strong>.
            </div>

        </div>

        <!-- ACTIONS -->
        <div class="card-footer d-flex justify-content-between flex-wrap gap-2">

            <button type="button"
                    class="btn btn-secondary btn-sm"
                    onclick="history.back()">
                <i class="bi bi-arrow-left"></i> Back
            </button>

            <form asp-action="Delete" method="post" class="d-inline">
                <input type="hidden" asp-for="AdId" />
                <button type="submit" class="btn btn-danger btn-sm">
                    <i class="bi bi-trash"></i> Confirm Delete
                </button>
            </form>

        </div>
    </div>

</div>
