@model Homeix.Models.Advertisement

@{
    ViewData["Title"] = "Delete Advertisement";
}

<div class="container-fluid mt-4">

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="text-danger">Delete Advertisement</h1>
            <p class="text-muted">Are you sure you want to delete this advertisement?</p>
        </div>
    </div>

    <!-- Centered Card -->
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="card shadow-sm border-danger">

                <!-- Card Header -->
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Confirm Deletion</h5>
                </div>

                <!-- Card Body -->
                <div class="card-body">
                    <dl class="row">

                        <dt class="col-sm-4 fw-bold">Title</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Title)
                        </dd>

                        <dt class="col-sm-4 fw-bold">Image</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.ImagePath)
                        </dd>

                        <dt class="col-sm-4 fw-bold">Start Date</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.StartDate)
                        </dd>

                        <dt class="col-sm-4 fw-bold">End Date</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.EndDate)
                        </dd>

                        <dt class="col-sm-4 fw-bold">Active</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.IsActive)
                        </dd>

                        <dt class="col-sm-4 fw-bold">Created By</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.CreatedByUser.UserId)
                        </dd>

                    </dl>
                </div>

                <!-- Card Footer -->
                <div class="card-footer d-flex justify-content-end gap-2">
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" asp-for="AdId" />
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </form>

                    <button type="button"
                            class="btn btn-secondary"
                            onclick="history.back()">
                        <i class="bi bi-arrow-left"></i> Back
                    </button>
                </div>

            </div>
        </div>
    </div>
</div>
