@model Homeix.Models.SubscriptionPlan

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["CreateSubscriptionPlanTitle"];
}

<div class="container-fluid mt-4">

    <!-- ================= HEADER ================= -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title">
                @Localizer["CreateSubscriptionPlanTitle"]
            </h1>
        </div>
    </div>

    <!-- ================= FORM ================= -->
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body">

                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly"
                             class="text-danger mb-3"></div>

                        <!-- PLAN NAME -->
                        <div class="mb-3">
                            <label asp-for="PlanName" class="form-label">
                                @Localizer["PlanNameLabel"]
                            </label>
                            <input asp-for="PlanName" class="form-control" />
                            <span asp-validation-for="PlanName" class="text-danger"></span>
                        </div>

                        <!-- PRICE -->
                        <div class="mb-3">
                            <label asp-for="Price" class="form-label">
                                @Localizer["PriceLabel"]
                            </label>
                            <input asp-for="Price"
                                   type="number"
                                   step="0.01"
                                   min="0"
                                   class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <!-- DURATION -->
                        <div class="mb-3">
                            <label asp-for="DurationDays" class="form-label">
                                @Localizer["DurationDaysLabel"]
                            </label>
                            <input asp-for="DurationDays"
                                   type="number"
                                   min="1"
                                   class="form-control" />
                            <span asp-validation-for="DurationDays" class="text-danger"></span>
                        </div>

                        <!-- MAX POSTS PER MONTH -->
                        <div class="mb-3">
                            <label asp-for="MaxPostsPerMonth" class="form-label">
                                @Localizer["MaxPostsPerMonthLabel"]
                            </label>
                            <input asp-for="MaxPostsPerMonth"
                                   type="number"
                                   min="1"
                                   max="1000"
                                   class="form-control" />
                            <small class="text-muted">
                                @Localizer["UnlimitedPostsHint"]
                            </small>
                            <span asp-validation-for="MaxPostsPerMonth" class="text-danger"></span>
                        </div>

                        <!-- ACTIVE -->
                        <div class="form-check mb-4">
                            <input class="form-check-input" asp-for="IsActive" />
                            <label class="form-check-label" asp-for="IsActive">
                                @Localizer["IsActiveLabel"]
                            </label>
                        </div>

                        <!-- ================= ACTIONS ================= -->
                        <div class="d-flex justify-content-end gap-2">
                            <button type="submit"
                                    class="btn btn-primary btn-sm">
                                <i class="bi bi-check-circle"></i>
                                @Localizer["CreateButton"]
                            </button>

                            <button type="button"
                                    class="btn btn-secondary btn-sm"
                                    onclick="history.back()">
                                <i class="bi bi-arrow-left"></i>
                                @Localizer["BackButton"]
                            </button>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
