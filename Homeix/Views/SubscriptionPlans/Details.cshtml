@model Homeix.Models.SubscriptionPlan

@{
    ViewData["Title"] = "Subscription Plan Details";
}

<div class="container-fluid mt-4">

    <!-- ================= HEADER ================= -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="fw-bold page-title">
                Subscription Plan Details
            </h1>
        </div>
    </div>

    <!-- ================= DETAILS CARD ================= -->
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            <div class="card shadow-sm">

                <!-- Card Header -->
                <div class="card-header">
                    <h5 class="mb-0">Details</h5>
                </div>

                <!-- Card Body -->
                <div class="card-body">
                    <dl class="row mb-0">

                        <dt class="col-sm-4 fw-bold">
                            @Html.DisplayNameFor(model => model.PlanName)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.PlanName)
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            @Html.DisplayNameFor(model => model.Price)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Price) JOD
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            @Html.DisplayNameFor(model => model.DurationDays)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.DurationDays) days
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            @Html.DisplayNameFor(model => model.IsActive)
                        </dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">
                                @(Model.IsActive ? "Active" : "Inactive")
                            </span>
                        </dd>

                    </dl>
                </div>

                <button type="button"
                        class="btn btn-secondary"
                        onclick="history.back()">
                    <i class="bi bi-arrow-left"></i> Back
                </button>
            </div>

        </div>
    </div>
</div>
