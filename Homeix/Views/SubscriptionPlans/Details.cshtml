@model Homeix.Models.SubscriptionPlan

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["SubscriptionPlanDetailsTitle"];
}

<div class="container-fluid mt-4">

    <!-- ================= HEADER ================= -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="fw-bold page-title">
                @Localizer["SubscriptionPlanDetailsTitle"]
            </h1>
        </div>
    </div>

    <!-- ================= DETAILS CARD ================= -->
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            <div class="card shadow-sm">

                <!-- CARD HEADER -->
                <div class="card-header">
                    <h5 class="mb-0">
                        @Localizer["DetailsTitle"]
                    </h5>
                </div>

                <!-- CARD BODY -->
                <div class="card-body">
                    <dl class="row mb-0">

                        <dt class="col-sm-4 fw-bold">
                            @Localizer["PlanNameLabel"]
                        </dt>
                        <dd class="col-sm-8">
                            @Model.PlanName
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            @Localizer["PriceLabel"]
                        </dt>
                        <dd class="col-sm-8">
                            @Model.Price.ToString("0.00") JOD
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            @Localizer["DurationLabel"]
                        </dt>
                        <dd class="col-sm-8">
                            @Model.DurationDays @Localizer["DaysText"]
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            @Localizer["PostsPerMonthLabel"]
                        </dt>
                        <dd class="col-sm-8">
                            @(Model.MaxPostsPerMonth.HasValue
                                ? Model.MaxPostsPerMonth.Value.ToString()
                                : Localizer["UnlimitedText"].Value)
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            @Localizer["StatusLabel"]
                        </dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">
                                @(Model.IsActive
                                    ? Localizer["ActiveStatus"].Value
                                    : Localizer["InactiveStatus"].Value)
                            </span>
                        </dd>

                    </dl>
                </div>

                <!-- ================= ACTIONS ================= -->
                <div class="card-footer d-flex justify-content-end">
                    <button type="button"
                            class="btn btn-secondary btn-sm"
                            onclick="history.back()">
                        <i class="bi bi-arrow-left"></i>
                        @Localizer["BackButton"]
                    </button>
                </div>

            </div>

        </div>
    </div>
</div>
