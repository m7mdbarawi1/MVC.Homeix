@model Homeix.Models.SubscriptionPlan

@{
    ViewData["Title"] = "Subscription Plan Details";
}

<div class="container-fluid mt-4">

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="fw-bold">Subscription Plan Details</h1>
        </div>
    </div>

    <!-- Centered Card -->
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            <div class="card shadow-sm">

                <!-- Card Header -->
                <div class="card-header">
                    <h5 class="mb-0">Details</h5>
                </div>

                <!-- Card Body -->
                <div class="card-body">
                    <dl class="row mb-0">

                        <dt class="col-sm-4 fw-bold">
                            @Html.DisplayNameFor(model => model.PlanName)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.PlanName)
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            @Html.DisplayNameFor(model => model.Price)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Price)
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            @Html.DisplayNameFor(model => model.DurationDays)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.DurationDays)
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            @Html.DisplayNameFor(model => model.IsActive)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.IsActive)
                        </dd>

                    </dl>
                </div>

            </div>

        </div>
    </div>
</div>
