@model IEnumerable<Homeix.Models.SubscriptionPlan>

@{
    ViewData["Title"] = "Choose Your Plan";
}

<div class="container mt-5">

    <!-- ================= HEADER ================= -->
    <div class="text-center mb-5">
        <h1 class="page-title">@ViewData["Title"]</h1>
        <p class="text-muted fs-5">
            Simple, transparent pricing. Upgrade or cancel anytime.
        </p>

        <a asp-action="DownloadReport"
           class="btn btn-secondary d-inline-flex align-items-center gap-2 mt-3">
            <i class="bi bi-download"></i>
            Download Report
        </a>
    </div>

    <!-- ================= PLANS ================= -->
    <div class="row justify-content-center g-4">

        @foreach (var plan in Model.Where(p => p.IsActive))
        {
            <div class="col-md-4">
                <div class="card h-100 text-center shadow-sm">

                    <div class="card-body d-flex flex-column p-4">

                        <h3 class="mb-3">@plan.PlanName</h3>

                        <div class="display-6 fw-bold mb-1">
                            @plan.Price JOD
                        </div>

                        <p class="text-muted mb-4">
                            per @plan.DurationDays days
                        </p>

                        <ul class="list-unstyled text-start mb-4">
                            <li class="mb-2">
                                <i class="bi bi-check-circle-fill text-success"></i>
                                @(
                                    plan.MaxPostsPerMonth == null
                                    ? "Unlimited posts"
                                    : $"{plan.MaxPostsPerMonth} posts per month"
                                    )
                            </li>
                            <li class="mb-2">
                                <i class="bi bi-check-circle-fill text-success"></i>
                                Full visibility to customers
                            </li>
                            <li class="mb-2">
                                <i class="bi bi-check-circle-fill text-success"></i>
                                Priority support
                            </li>
                        </ul>

                        <!-- ACTION -->
                        <div class="mt-auto">
                            <a asp-controller="Subscriptions"
                               asp-action="Create"
                               asp-route-planId="@plan.PlanId"
                               class="btn btn-accent btn-lg w-100 d-inline-flex align-items-center justify-content-center gap-2">
                                <i class="bi bi-credit-card"></i>
                                Subscribe
                            </a>
                        </div>

                    </div>

                </div>
            </div>
        }

    </div>

    <!-- ================= ADMIN CTA ================= -->
    @if (User.IsInRole("admin"))
    {
        <div class="text-center mt-5">
            <a asp-action="Create"
               class="btn btn-primary d-inline-flex align-items-center gap-2">
                <i class="bi bi-plus-circle"></i>
                Create New Plan
            </a>
        </div>
    }

</div>
