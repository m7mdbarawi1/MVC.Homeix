@model IEnumerable<Homeix.Models.SubscriptionPlan>

@{
    ViewData["Title"] = "Subscription Plans Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 mb-5">

    <!-- ================= HEADER ================= -->
    <div class="text-center mb-5">
        <h1 class="fw-bold mb-2">
            <i class="bi bi-credit-card me-2"></i> Subscription Plans Management
        </h1>
        <p class="text-muted">
            Manage subscription plans, pricing, and availability for Homeix services.
        </p>
    </div>

    <!-- ================= ACTIONS BAR ================= -->
    <div class="card bg-light border-0 shadow-sm mb-4">
        <div class="card-body p-3">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <span class="badge bg-primary rounded-pill p-2">
                        <i class="bi bi-layers me-1"></i> Total Plans: @Model.Count()
                    </span>
                    <span class="ms-3 text-muted">
                        <i class="bi bi-info-circle me-1"></i> Configure and manage all subscription tiers
                    </span>
                </div>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>Create New Plan
                </a>
            </div>
        </div>
    </div>

    <!-- ================= SUBSCRIPTION PLANS TABLE ================= -->
    <div class="card border-0 shadow-lg">
        <div class="card-header bg-primary text-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="bi bi-table me-2"></i>Available Subscription Plans
                </h5>
                <div class="dropdown">
                    <button class="btn btn-light btn-sm dropdown-toggle" type="button" id="filterDropdown" data-bs-toggle="dropdown">
                        <i class="bi bi-filter me-1"></i>Filter
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">All Plans</a></li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-check-circle text-success me-2"></i>Active Only</a></li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-x-circle text-danger me-2"></i>Inactive Only</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4 py-3">
                                <i class="bi bi-card-heading me-1"></i>
                                Plan Details
                            </th>
                            <th class="py-3">
                                <i class="bi bi-currency-dollar me-1"></i>
                                Price & Duration
                            </th>
                            <th class="py-3">
                                <i class="bi bi-calendar-range me-1"></i>
                                Duration
                            </th>
                            <th class="py-3">
                                <i class="bi bi-power me-1"></i>
                                Status
                            </th>
                            <th class="pe-4 py-3 text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var planColor = item.PlanName switch
                            {
                                "Basic" => "info",
                                "Standard" => "primary",
                                "Premium" => "warning",
                                "Enterprise" => "success",
                                _ => "secondary"
                            };

                            <tr class="border-top">
                                <td class="ps-4 py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            <div class="bg-@planColor bg-opacity-10 rounded-circle p-2">
                                                <i class="bi bi-credit-card text-@planColor"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="fw-bold mb-0">@Html.DisplayFor(modelItem => item.PlanName)</h6>
                                            <small class="text-muted">Plan ID: @item.PlanId</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            <div class="bg-success bg-opacity-10 rounded-circle p-2">
                                                <i class="bi bi-cash text-success"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h5 class="fw-bold mb-0 text-success">
                                                $@Html.DisplayFor(modelItem => item.Price)
                                            </h5>
                                            <small class="text-muted">Per subscription</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            <div class="bg-info bg-opacity-10 rounded-circle p-2">
                                                <i class="bi bi-calendar-check text-info"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="fw-bold mb-0">
                                                @Html.DisplayFor(modelItem => item.DurationDays) days
                                            </h6>
                                            <small class="text-muted">
                                                ≈ @((item.DurationDays / 30.0).ToString("0.#")) months
                                            </small>
                                        </div>
                                    </div>
                                </td>
                                <td class="py-3">
                                    @if (item.IsActive)
                                    {
                                        <span class="badge bg-success bg-opacity-10 border border-success border-opacity-25 rounded-pill px-3 py-2">
                                            <i class="bi bi-check-circle me-1"></i>Active
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger bg-opacity-10 border border-danger border-opacity-25 rounded-pill px-3 py-2">
                                            <i class="bi bi-x-circle me-1"></i>Inactive
                                        </span>
                                    }
                                </td>
                                <td class="pe-4 py-3 text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.PlanId" class="btn btn-outline-primary btn-sm" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.PlanId" class="btn btn-outline-info btn-sm" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.PlanId" class="btn btn-outline-danger btn-sm" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card-footer bg-light py-3">
            <div class="d-flex justify-content-between align-items-center">
                <div class="text-muted small">
                    <i class="bi bi-clock-history me-1"></i>
                    Last updated: @DateTime.Now.ToString("MMMM dd, yyyy h:mm tt")
                </div>
                <nav aria-label="Table navigation">
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">Next</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>

    <!-- ================= QUICK STATS ================= -->
    @if (Model.Any())
    {
        <div class="row g-4 mt-4">
            <div class="col-lg-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Total Plans</h6>
                                <h3 class="fw-bold">@Model.Count()</h3>
                            </div>
                            <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                                <i class="bi bi-layers text-primary fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Active Plans</h6>
                                <h3 class="fw-bold">@Model.Count(p => p.IsActive)</h3>
                            </div>
                            <div class="bg-success bg-opacity-10 rounded-circle p-3">
                                <i class="bi bi-check-circle text-success fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Average Price</h6>
                                <h3 class="fw-bold">
                                    $@Model.Average(p => p.Price).ToString("0.00")
                                </h3>
                            </div>
                            <div class="bg-warning bg-opacity-10 rounded-circle p-3">
                                <i class="bi bi-currency-dollar text-warning fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Avg. Duration</h6>
                                <h3 class="fw-bold">
                                    @Model.Average(p => p.DurationDays).ToString("0") days
                                </h3>
                            </div>
                            <div class="bg-info bg-opacity-10 rounded-circle p-3">
                                <i class="bi bi-calendar text-info fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- ================= PRICE COMPARISON ================= -->
        <div class="row mt-4">
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-graph-up me-2"></i>Plan Price Comparison
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-borderless">
                                <thead>
                                    <tr>
                                        <th>Plan</th>
                                        <th>Price</th>
                                        <th>Duration</th>
                                        <th>Daily Cost</th>
                                        <th>Monthly Cost</th>
                                        <th>Value Score</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var plan in Model.OrderBy(p => p.Price))
                                    {
                                        var dailyCost = plan.Price / plan.DurationDays;
                                        var monthlyCost = (plan.Price / plan.DurationDays) * 30;
                                        var valueScore = (1 / dailyCost) * 100;

                                        <tr>
                                            <td>
                                                <span class="badge bg-opacity-10 bg-@(plan.PlanName switch
                                                {
                                                    "Basic" => "info",
                                                    "Standard" => "primary",
                                                    "Premium" => "warning",
                                                    "Enterprise" => "success",
                                                    _ => "secondary"
                                                }) rounded-pill px-3 py-1">
                                                    @plan.PlanName
                                                </span>
                                            </td>
                                            <td class="fw-bold">$@plan.Price.ToString("0.00")</td>
                                            <td>@plan.DurationDays days</td>
                                            <td>$@dailyCost.ToString("0.00")</td>
                                            <td>$@monthlyCost.ToString("0.00")</td>
                                            <td>
                                                <div class="progress" style="height: 20px;">
                                                    @{
                                                        var progressWidth = Math.Min(valueScore, 100);
                                                    }
                                                    <div class="progress-bar bg-success" role="progressbar"
                                                         style="width: @progressWidth%"
                                                         aria-valuenow="@progressWidth" aria-valuemin="0" aria-valuemax="100">
                                                        @progressWidth.ToString("0")%
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-lightbulb me-2"></i>Quick Actions
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            <a href="#" class="list-group-item list-group-item-action border-0 py-3">
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                                        <i class="bi bi-rocket text-primary"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0">Create Promo Plan</h6>
                                        <small class="text-muted">Add limited-time promotional pricing</small>
                                    </div>
                                </div>
                            </a>
                            <a href="#" class="list-group-item list-group-item-action border-0 py-3">
                                <div class="d-flex align-items-center">
                                    <div class="bg-success bg-opacity-10 rounded-circle p-2 me-3">
                                        <i class="bi bi-arrow-repeat text-success"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0">Renewal Settings</h6>
                                        <small class="text-muted">Configure auto-renewal options</small>
                                    </div>
                                </div>
                            </a>
                            <a href="#" class="list-group-item list-group-item-action border-0 py-3">
                                <div class="d-flex align-items-center">
                                    <div class="bg-warning bg-opacity-10 rounded-circle p-2 me-3">
                                        <i class="bi bi-bar-chart text-warning"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0">View Analytics</h6>
                                        <small class="text-muted">Subscription performance reports</small>
                                    </div>
                                </div>
                            </a>
                            <a href="#" class="list-group-item list-group-item-action border-0 py-3">
                                <div class="d-flex align-items-center">
                                    <div class="bg-info bg-opacity-10 rounded-circle p-2 me-3">
                                        <i class="bi bi-gear text-info"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0">Plan Features</h6>
                                        <small class="text-muted">Manage plan features & limits</small>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- ================= PLAN CARDS VIEW ================= -->
        <div class="card border-0 shadow-sm mt-4">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="card-title mb-0">
                    <i class="bi bi-grid me-2"></i>Plan Overview
                </h5>
            </div>
            <div class="card-body">
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
                    @foreach (var plan in Model)
                    {
                        var planColor = plan.PlanName switch
                        {
                            "Basic" => "info",
                            "Standard" => "primary",
                            "Premium" => "warning",
                            "Enterprise" => "success",
                            _ => "secondary"
                        };

                        <div class="col">
                            <div class="card border h-100 @(plan.IsActive ? "border-success border-2" : "border-danger")">
                                <div class="card-body text-center p-4">
                                    <div class="mb-3">
                                        <div class="bg-@planColor bg-opacity-10 rounded-circle d-inline-flex p-3">
                                            <i class="bi bi-credit-card text-@planColor fs-2"></i>
                                        </div>
                                    </div>
                                    <h4 class="card-title fw-bold mb-2">@plan.PlanName</h4>
                                    <h2 class="fw-bold text-success mb-3">$@plan.Price</h2>
                                    <div class="mb-3">
                                        <span class="badge bg-@planColor bg-opacity-10 text-@planColor border border-@planColor border-opacity-25 rounded-pill px-3 py-1">
                                            @plan.DurationDays days
                                        </span>
                                    </div>
                                    <div class="mb-4">
                                        @if (plan.IsActive)
                                        {
                                            <span class="badge bg-success bg-opacity-10 border border-success border-opacity-25 rounded-pill px-3 py-2">
                                                <i class="bi bi-check-circle me-1"></i>Active
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger bg-opacity-10 border border-danger border-opacity-25 rounded-pill px-3 py-2">
                                                <i class="bi bi-x-circle me-1"></i>Inactive
                                            </span>
                                        }
                                    </div>
                                    <div class="d-grid gap-2">
                                        <a asp-action="Edit" asp-route-id="@plan.PlanId" class="btn btn-outline-primary btn-sm">
                                            <i class="bi bi-pencil me-2"></i>Edit
                                        </a>
                                        <a asp-action="Details" asp-route-id="@plan.PlanId" class="btn btn-outline-secondary btn-sm">
                                            <i class="bi bi-eye me-2"></i>View Details
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    <!-- ================= EMPTY STATE ================= -->
    @if (!Model.Any())
    {
        <div class="card border-0 shadow-lg">
            <div class="card-body p-5 text-center">
                <div class="py-5">
                    <div class="bg-light rounded-circle d-inline-flex p-4 mb-4">
                        <i class="bi bi-credit-card text-muted fs-1"></i>
                    </div>
                    <h3 class="fw-bold mb-3">No Subscription Plans Found</h3>
                    <p class="text-muted mb-4">
                        You haven't created any subscription plans yet. Start monetizing your platform by creating your first subscription plan.
                    </p>
                    <a asp-action="Create" class="btn btn-primary btn-lg">
                        <i class="bi bi-plus-circle me-2"></i>Create First Plan
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .progress-bar {
        font-size: 0.75rem;
        line-height: 20px;
        padding: 0 5px;
    }

    .list-group-item:hover {
        background-color: rgba(var(--primary-rgb), 0.05);
    }
</style>