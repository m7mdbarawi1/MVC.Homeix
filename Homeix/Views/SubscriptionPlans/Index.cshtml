@model IEnumerable<Homeix.Models.SubscriptionPlan>

@{
    ViewData["Title"] = "Subscription Plans";
}

<div class="container-fluid mt-4">

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 d-flex flex-column flex-md-row justify-content-between align-items-md-center">
            <h1 class="mb-3 mb-md-0">@ViewData["Title"]</h1>

            <div class="d-flex gap-2">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i> Create New
                </a>

                <a asp-action="DownloadReport"
                   class="btn btn-secondary d-inline-flex align-items-center gap-2">
                    <i class="bi bi-download"></i>
                    Download Report
                </a>
            </div>
        </div>
    </div>

    <!-- Search -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <input type="text"
                           id="searchInput"
                           class="form-control"
                           placeholder="Search subscription plans...">
                </div>
            </div>
        </div>
    </div>

    <!-- Table -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Plan Name</th>
                                    <th>Price</th>
                                    <th>Duration (Days)</th>
                                    <th>Max Posts / Month</th>
                                    <th>Status</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>

                            <tbody id="subscriptionPlansTable">
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.PlanName</td>

                                            <td>
                                                @item.Price.ToString("0.00")
                                            </td>

                                            <td>@item.DurationDays</td>

                                            <td>
                                                @(item.MaxPostsPerMonth.HasValue
                                                    ? item.MaxPostsPerMonth.ToString()
                                                    : "Unlimited")
                                            </td>

                                            <td>
                                                @if (item.IsActive)
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Inactive</span>
                                                }
                                            </td>

                                            <td class="text-center">
                                                <div class="d-flex flex-wrap justify-content-center gap-2">
                                                    <a asp-action="Edit"
                                                       asp-route-id="@item.PlanId"
                                                       class="btn btn-secondary btn-sm">
                                                        <i class="bi bi-pencil-square"></i> Edit
                                                    </a>

                                                    <a asp-action="Details"
                                                       asp-route-id="@item.PlanId"
                                                       class="btn btn-accent btn-sm">
                                                        <i class="bi bi-info-circle"></i> Details
                                                    </a>

                                                    <a asp-action="Delete"
                                                       asp-route-id="@item.PlanId"
                                                       class="btn btn-danger btn-sm">
                                                        <i class="bi bi-trash"></i> Delete
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center p-4">
                                            <div class="alert alert-secondary mb-0">
                                                No subscription plans found.
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const searchInput = document.getElementById("searchInput");
            const rows = document.querySelectorAll("#subscriptionPlansTable tr");

            searchInput.addEventListener("input", function () {
                const term = searchInput.value.toLowerCase();
                rows.forEach(row => {
                    row.style.display = row.textContent.toLowerCase().includes(term)
                        ? ""
                        : "none";
                });
            });
        });
    </script>
}
