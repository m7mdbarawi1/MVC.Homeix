@model Homeix.Models.SubscriptionPlan

@{
    ViewData["Title"] = "Delete Subscription Plan";
}

<div class="container-fluid mt-4">

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="text-danger">Delete Subscription Plan</h1>
            <p class="text-muted">Are you sure you want to delete this subscription plan?</p>
        </div>
    </div>

    <!-- Centered Card -->
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="card shadow-sm border-danger">

                <!-- Card Header -->
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Confirm Deletion</h5>
                </div>

                <!-- Card Body -->
                <div class="card-body">
                    <dl class="row">

                        <dt class="col-sm-4 fw-bold">Plan Name</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.PlanName)
                        </dd>

                        <dt class="col-sm-4 fw-bold">Price</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Price)
                        </dd>

                        <dt class="col-sm-4 fw-bold">Duration (Days)</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.DurationDays)
                        </dd>

                        <dt class="col-sm-4 fw-bold">Active</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.IsActive)
                        </dd>

                    </dl>
                </div>

                <!-- Card Footer -->
                <div class="card-footer d-flex justify-content-end gap-2">
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" asp-for="PlanId" />
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </form>

                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Cancel
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>
