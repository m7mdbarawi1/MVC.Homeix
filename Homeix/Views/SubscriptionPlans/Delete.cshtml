@model Homeix.Models.SubscriptionPlan

@{
    ViewData["Title"] = "Delete Subscription Plan";
}

<div class="container-fluid mt-4">

    <!-- ================= PAGE HEADER ================= -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="text-danger page-title">
                Delete Subscription Plan
            </h1>
            <p class="text-muted">
                Are you sure you want to delete this subscription plan?
            </p>
        </div>
    </div>

    <!-- ================= CONFIRMATION CARD ================= -->
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="card shadow-sm border-danger">

                <!-- CARD HEADER -->
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Confirm Deletion</h5>
                </div>

                <!-- CARD BODY -->
                <div class="card-body">
                    <dl class="row mb-0">

                        <dt class="col-sm-4 fw-bold">
                            Plan Name
                        </dt>
                        <dd class="col-sm-8">
                            @Model.PlanName
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            Price
                        </dt>
                        <dd class="col-sm-8">
                            @Model.Price JOD
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            Duration
                        </dt>
                        <dd class="col-sm-8">
                            @Model.DurationDays days
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            Status
                        </dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">
                                @(Model.IsActive ? "Active" : "Inactive")
                            </span>
                        </dd>

                    </dl>
                </div>

                <!-- ================= ACTIONS ================= -->
                <div class="card-footer d-flex justify-content-end gap-2">
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" asp-for="PlanId" />
                        <button type="submit"
                                class="btn btn-danger d-inline-flex align-items-center gap-2">
                            <i class="bi bi-trash"></i>
                            Delete
                        </button>
                    </form>

                    <button type="button"
                            class="btn btn-outline-secondary d-inline-flex align-items-center gap-2"
                            onclick="history.back()">
                        <i class="bi bi-arrow-left"></i>
                        Back
                    </button>
                </div>

            </div>
        </div>
    </div>
</div>
