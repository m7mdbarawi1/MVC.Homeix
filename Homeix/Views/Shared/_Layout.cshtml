<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Homeix</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-main fixed-top shadow-sm">
            <div class="container-fluid">

                <!-- Brand Logo -->
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="~/homeixlogo.jpg" class="logo-3d" alt="Homeix Logo" />
                </a>

                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">

                    <!-- LEFT NAVIGATION -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <!-- DIRECT LINKS FOR ALL INDEX PAGES -->
                        <li class="nav-item"><a class="nav-link" asp-controller="Advertisements" asp-action="Index">Advertisements</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Conversations" asp-action="Index">Conversations</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="CustomerPosts" asp-action="Index">Customer Posts</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="FavoritePosts" asp-action="Index">Favorites</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="JobProgresses" asp-action="Index">Job Progress</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Messages" asp-action="Index">Messages</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Offers" asp-action="Index">Offers</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="PaymentMethods" asp-action="Index">Payment Methods</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Payments" asp-action="Index">Payments</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="PostCategories" asp-action="Index">Categories</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="PostMediums" asp-action="Index">Media</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="RatingCustomerPosts" asp-action="Index">Customer Ratings</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Ratings" asp-action="Index">Worker Ratings</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="SubscriptionPlans" asp-action="Index">Plans</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Subscriptions" asp-action="Index">Subscriptions</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="UserRoles" asp-action="Index">Roles</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Users" asp-action="Index">Users</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="WorkerApprovals" asp-action="Index">Worker Approvals</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="WorkerPosts" asp-action="Index">Worker Posts</a></li>

                    </ul>

                    <!-- RIGHT SIDE -->
                    <ul class="navbar-nav ms-auto">
                        <partial name="_LoginPartial" />
                    </ul>

                </div>

            </div>
        </nav>
    </header>

    <main class="container page-content">
        @RenderBody()
    </main>

    <!-- FIXED FOOTER -->
    <footer class="footer bg-black text-white text-center">
        <div class="container py-3">
            © 2025 - Homeix
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
