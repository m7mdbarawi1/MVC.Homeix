<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Homeix</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Homeix.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-main border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Brand with Modern 3D Logo -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="position: relative; display: inline-block;">
                    <img src="~/homeixlogo.jpg" alt="Homeix Logo" class="logo-3d">
                </a>

                <style>
                    /* Modern 3D Logo Effect */
                    .logo-3d {
                        height: 50px;
                        transition: transform 0.3s ease, box-shadow 0.3s ease;
                        box-shadow: 0 4px 8px rgba(0,0,0,0.4), 0 6px 20px rgba(0,0,0,0.2);
                        border-radius: 8px;
                    }

                        /* Slight lift and glow on hover */
                        .logo-3d:hover {
                            transform: translateY(-3px) rotateX(3deg) rotateY(3deg) scale(1.05);
                            box-shadow: 0 8px 16px rgba(0,0,0,0.5), 0 12px 25px rgba(255,215,0,0.3);
                        }
                </style>


                <!-- Toggler for mobile -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar links -->
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                        <li class="nav-item">
                            <a class="nav-link text-white hover-yellow" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white hover-yellow" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>

                    <!-- Login/Register -->
                    <ul class="navbar-nav ms-auto mb-2 mb-sm-0">
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto py-3 border-top bg-black text-white text-center">
        <div class="container">
            &copy; 2025 - Homeix -
            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-yellow">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
