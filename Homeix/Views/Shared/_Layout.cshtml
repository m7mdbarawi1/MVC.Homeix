<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Homeix</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Homeix.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-main border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/homeixlogo.jpg" alt="Homeix Logo" class="logo-3d">
                </a>

                <style>
                    .logo-3d {
                        height: 50px;
                        transition: transform 0.3s ease, box-shadow 0.3s ease;
                        box-shadow: 0 4px 8px rgba(0,0,0,0.4), 0 6px 20px rgba(0,0,0,0.2);
                        border-radius: 8px;
                    }

                        .logo-3d:hover {
                            transform: translateY(-3px) rotateX(3deg) rotateY(3deg) scale(1.05);
                            box-shadow: 0 8px 16px rgba(0,0,0,0.5), 0 12px 25px rgba(255,215,0,0.3);
                        }
                </style>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">

                    <!-- LEFT NAVIGATION -->
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">

                        <li class="nav-item">
                            <a class="nav-link text-white hover-yellow" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <!-- DIRECT LINKS TO ALL INDEX PAGES (NO DROPDOWN) -->

                        <li class="nav-item"><a class="nav-link text-white hover-yellow" asp-controller="Advertisements" asp-action="Index">Advertisements</a></li>

                        <li class="nav-item"><a class="nav-link text-white hover-yellow" asp-controller="Conversations" asp-action="Index">Conversations</a></li>

                        <li class="nav-item"><a class="nav-link text-white hover-yellow" asp-controller="CustomerPosts" asp-action="Index">Customer Posts</a></li>

                        <li class="nav-item"><a class="nav-link text-white hover-yellow" asp-controller="FavoritePosts" asp-action="Index">Favorite Posts</a></li>

                        <li class="nav-item"><a class="nav-link text-white hover-yellow" asp-controller="JobProgresses" asp-action="Index">Job Progress</a></li>

                        <li class="nav-item"><a class="nav-link text-white hover-yellow" asp-controller="Messages" asp-action="Index">Messages</a></li>

                        <li class="nav-item"><a class="nav-link text-white hover-yellow" asp-controller="Offers" asp-action="Index">Offers</a></li>

                        <li class="nav-item"><a class="nav-link text-white hover-yellow" asp-controller="PaymentMethods" asp-action="Index">Payment Methods</a></li>

                        <li class="nav-item"><a class="nav-link text-white hover-yellow" asp-controller="Payments" asp-action="Index">Payments</a></li>

                        <li class="nav-item"><a class="nav-link text-white hover-yellow" asp-controller="PostCategories" asp-action="Index">Post Categories</a></li>

                        <li class="nav-item"><a class="nav-link text-white hover-yellow" asp-controller="PostMediums" asp-action="Index">Post Media</a></li>

                        <li class="nav-item"><a class="nav-link text-white hover-yellow" asp-controller="RatingCustomerPosts" asp-action="Index">Customer Ratings</a></li>

                        <li class="nav-item"><a class="nav-link text-white hover-yellow" asp-controller="Ratings" asp-action="Index">Worker Ratings</a></li>

                        <li class="nav-item"><a class="nav-link text-white hover-yellow" asp-controller="SubscriptionPlans" asp-action="Index">Subscription Plans</a></li>

                        <li class="nav-item"><a class="nav-link text-white hover-yellow" asp-controller="Subscriptions" asp-action="Index">Subscriptions</a></li>

                        <li class="nav-item"><a class="nav-link text-white hover-yellow" asp-controller="UserRoles" asp-action="Index">User Roles</a></li>

                        <li class="nav-item"><a class="nav-link text-white hover-yellow" asp-controller="Users" asp-action="Index">Users</a></li>

                        <li class="nav-item"><a class="nav-link text-white hover-yellow" asp-controller="WorkerApprovals" asp-action="Index">Worker Approvals</a></li>

                        <li class="nav-item"><a class="nav-link text-white hover-yellow" asp-controller="WorkerPosts" asp-action="Index">Worker Posts</a></li>
                    </ul>


                    <!-- RIGHT SIDE LOGIN -->
                    <ul class="navbar-nav ms-auto mb-2 mb-sm-0">
                        <partial name="_LoginPartial" />
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto py-3 border-top bg-black text-white text-center">
        <div class="container">
            &copy; 2025 - Homeix
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
