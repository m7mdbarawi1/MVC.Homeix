@model ErrorViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["ErrorTitle"];
}

<div class="container mt-5">

    <!-- HEADER -->
    <div class="text-center mb-4">
        <h1 class="text-danger fw-bold">
            <i class="bi bi-bug-fill"></i>
            @Localizer["ErrorTitle"]
        </h1>

        <h5 class="text-danger mt-2">
            @Localizer["ErrorSubtitle"]
        </h5>
    </div>

    <!-- REQUEST ID -->
    @if (Model.ShowRequestId)
    {
        <div class="alert alert-secondary text-center">
            <strong>@Localizer["RequestIdLabel"]</strong>
            <code>@Model.RequestId</code>
        </div>
    }

    <!-- DEVELOPMENT INFO -->
    <div class="card shadow-sm mt-4">
        <div class="card-body">

            <h5 class="fw-bold mb-3">
                <i class="bi bi-tools"></i>
                @Localizer["DevelopmentModeTitle"]
            </h5>

            <p class="text-muted">
                @Localizer["DevelopmentModeDescription"]
            </p>

            <div class="alert alert-warning mb-0">
                <strong>@Localizer["WarningTitle"]</strong>
                @Localizer["WarningDescription"]
            </div>

        </div>
    </div>

    <!-- ACTION -->
    <div class="text-center mt-4">
        <button type="button"
                class="btn btn-secondary"
                onclick="history.back()">
            <i class="bi bi-arrow-left"></i>
            @Localizer["GoBack"]
        </button>
    </div>

</div>
