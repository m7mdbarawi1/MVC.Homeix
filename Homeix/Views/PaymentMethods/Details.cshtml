@model Homeix.Models.PaymentMethod

@{
    ViewData["Title"] = "Payment Method Details";
}

<div class="container-fluid mt-4">

    <!-- ================= HEADER ================= -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="mb-0 fw-bold">Payment Method Details</h1>
        </div>
    </div>

    <!-- ================= DETAILS CARD ================= -->
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">

            <div class="card shadow-sm">

                <!-- Card Header -->
                <div class="card-header">
                    <h5 class="mb-0">Details</h5>
                </div>

                <!-- Card Body -->
                <div class="card-body">
                    <dl class="row mb-0">

                        <dt class="col-sm-4 fw-bold">
                            @Html.DisplayNameFor(model => model.MethodName)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.MethodName)
                        </dd>

                    </dl>
                </div>

                <!-- Card Footer -->
                <div class="card-footer d-flex justify-content-end">
                    <a asp-action="Index"
                       class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left-circle me-1"></i>
                        Back
                    </a>
                </div>

            </div>

        </div>
    </div>

</div>
