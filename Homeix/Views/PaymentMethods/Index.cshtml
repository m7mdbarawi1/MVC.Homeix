@model IEnumerable<Homeix.Models.PaymentMethod>

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PaymentMethodsTitle"];
}

<div class="container-fluid mt-4">

    <!-- ================= HEADER ================= -->
    <div class="row mb-4">
        <div class="col-12 d-flex flex-column flex-md-row justify-content-between align-items-md-center">
            <h1 class="mb-3 mb-md-0">
                @Localizer["PaymentMethodsTitle"]
            </h1>

            <div class="d-flex gap-2">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i>
                    @Localizer["CreateNewButton"]
                </a>

                <a asp-action="DownloadReport"
                   class="btn btn-secondary d-inline-flex align-items-center gap-2">
                    <i class="bi bi-download"></i>
                    @Localizer["DownloadReportButton"]
                </a>
            </div>
        </div>
    </div>

    <!-- ================= SEARCH ================= -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <input type="text"
                           id="searchInput"
                           class="form-control"
                           placeholder="@Localizer["SearchPlaceholder"]" />
                </div>
            </div>
        </div>
    </div>

    <!-- ================= TABLE ================= -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">

                            <thead class="table-light">
                                <tr>
                                    <th>
                                        @Localizer["MethodNameHeader"]
                                    </th>
                                    <th class="text-center">
                                        @Localizer["ActionsHeader"]
                                    </th>
                                </tr>
                            </thead>

                            <tbody id="paymentMethodsTable">
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @item.MethodName
                                            </td>

                                            <td class="text-center">
                                                <div class="d-flex flex-wrap justify-content-center gap-2">
                                                    <a asp-action="Edit"
                                                       asp-route-id="@item.PaymentMethodId"
                                                       class="btn btn-secondary btn-sm">
                                                        <i class="bi bi-pencil-square"></i>
                                                        @Localizer["EditButton"]
                                                    </a>

                                                    <a asp-action="Details"
                                                       asp-route-id="@item.PaymentMethodId"
                                                       class="btn btn-accent btn-sm">
                                                        <i class="bi bi-info-circle"></i>
                                                        @Localizer["DetailsButton"]
                                                    </a>

                                                    <a asp-action="Delete"
                                                       asp-route-id="@item.PaymentMethodId"
                                                       class="btn btn-danger btn-sm">
                                                        <i class="bi bi-trash"></i>
                                                        @Localizer["DeleteButton"]
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="2" class="text-center p-4 text-muted">
                                            @Localizer["NoPaymentMethods"]
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {

            const searchInput = document.getElementById("searchInput");
            const tableBody = document.getElementById("paymentMethodsTable");

            searchInput.addEventListener("input", function () {
                const term = searchInput.value.toLowerCase();
                const rows = tableBody.querySelectorAll("tr");

                rows.forEach(row => {
                    row.style.display = row.textContent.toLowerCase().includes(term)
                        ? ""
                        : "none";
                });
            });

        });
    </script>
}
