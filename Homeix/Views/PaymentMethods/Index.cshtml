@model IEnumerable<Homeix.Models.PaymentMethod>

@{
    ViewData["Title"] = "Payment Methods Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 mb-5">

    <!-- ================= HEADER ================= -->
    <div class="text-center mb-5">
        <h1 class="fw-bold mb-2">
            <i class="bi bi-credit-card me-2"></i> Payment Methods Management
        </h1>
        <p class="text-muted">
            Configure and manage payment methods, gateways, and transaction options.
        </p>
    </div>

    <!-- ================= ACTIONS BAR ================= -->
    <div class="card bg-light border-0 shadow-sm mb-4">
        <div class="card-body p-3">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <span class="badge bg-primary rounded-pill p-2">
                        <i class="bi bi-wallet2 me-1"></i> Total Methods: @Model.Count()
                    </span>
                    <span class="ms-3 text-muted">
                        <i class="bi bi-info-circle me-1"></i> Configure payment options for your platform
                    </span>
                </div>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>Add New Payment Method
                </a>
            </div>
        </div>
    </div>

    <!-- ================= PAYMENT METHODS TABLE ================= -->
    <div class="card border-0 shadow-lg">
        <div class="card-header bg-primary text-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="bi bi-table me-2"></i>Available Payment Methods
                </h5>
                <button class="btn btn-light btn-sm">
                    <i class="bi bi-arrow-clockwise me-1"></i>Refresh
                </button>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4 py-3">
                                <i class="bi bi-credit-card me-1"></i>
                                @Html.DisplayNameFor(model => model.MethodName)
                            </th>
                            <th class="py-3">
                                <i class="bi bi-tags me-1"></i>
                                Method Type
                            </th>
                            <th class="py-3">
                                <i class="bi bi-shield-check me-1"></i>
                                Security Status
                            </th>
                            <th class="pe-4 py-3 text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="border-top">
                                <td class="ps-4 py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            @{
                                                var methodIcon = item.MethodName switch
                                                {
                                                    string s when s.Contains("Credit", StringComparison.OrdinalIgnoreCase) => "credit-card",
                                                    string s when s.Contains("Debit", StringComparison.OrdinalIgnoreCase) => "credit-card-2-front",
                                                    string s when s.Contains("PayPal", StringComparison.OrdinalIgnoreCase) => "paypal",
                                                    string s when s.Contains("Bank", StringComparison.OrdinalIgnoreCase) || s.Contains("Transfer", StringComparison.OrdinalIgnoreCase) => "bank",
                                                    string s when s.Contains("Cash", StringComparison.OrdinalIgnoreCase) => "cash-coin",
                                                    string s when s.Contains("Wallet", StringComparison.OrdinalIgnoreCase) => "wallet2",
                                                    _ => "credit-card"
                                                };
                                            }
                                            <div class="bg-primary bg-opacity-10 rounded-circle p-2">
                                                <i class="bi bi-@methodIcon text-primary"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="fw-bold mb-0">@Html.DisplayFor(modelItem => item.MethodName)</h6>
                                            <small class="text-muted">Method ID: @item.PaymentMethodId</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="py-3">
                                    @{
                                        var methodType = item.MethodName switch
                                        {
                                            string s when s.Contains("Credit", StringComparison.OrdinalIgnoreCase) => "Card",
                                            string s when s.Contains("Debit", StringComparison.OrdinalIgnoreCase) => "Card",
                                            string s when s.Contains("PayPal", StringComparison.OrdinalIgnoreCase) => "Digital Wallet",
                                            string s when s.Contains("Bank", StringComparison.OrdinalIgnoreCase) || s.Contains("Transfer", StringComparison.OrdinalIgnoreCase) => "Bank Transfer",
                                            string s when s.Contains("Cash", StringComparison.OrdinalIgnoreCase) => "Cash",
                                            string s when s.Contains("Wallet", StringComparison.OrdinalIgnoreCase) => "Digital Wallet",
                                            _ => "Other"
                                        };

                                        var typeBadgeClass = methodType switch
                                        {
                                            "Card" => "bg-info",
                                            "Digital Wallet" => "bg-success",
                                            "Bank Transfer" => "bg-warning",
                                            "Cash" => "bg-secondary",
                                            _ => "bg-primary"
                                        };
                                    }
                                    <span class="badge @typeBadgeClass bg-opacity-10 border border-@typeBadgeClass.Replace("bg-", "") border-opacity-25 rounded-pill px-3 py-2">
                                        <i class="bi bi-tag me-1"></i>@methodType
                                    </span>
                                </td>
                                <td class="py-3">
                                    @{
                                        var securityLevel = item.MethodName switch
                                        {
                                            string s when s.Contains("Credit", StringComparison.OrdinalIgnoreCase) || s.Contains("Debit", StringComparison.OrdinalIgnoreCase) => "High",
                                            string s when s.Contains("PayPal", StringComparison.OrdinalIgnoreCase) => "High",
                                            string s when s.Contains("Bank", StringComparison.OrdinalIgnoreCase) || s.Contains("Transfer", StringComparison.OrdinalIgnoreCase) => "Medium",
                                            string s when s.Contains("Cash", StringComparison.OrdinalIgnoreCase) => "Low",
                                            _ => "Medium"
                                        };

                                        var securityBadgeClass = securityLevel switch
                                        {
                                            "High" => "bg-success",
                                            "Medium" => "bg-warning",
                                            "Low" => "bg-danger",
                                            _ => "bg-secondary"
                                        };

                                        var securityIcon = securityLevel switch
                                        {
                                            "High" => "shield-check",
                                            "Medium" => "shield",
                                            "Low" => "shield-exclamation",
                                            _ => "shield"
                                        };
                                    }
                                    <span class="badge @securityBadgeClass bg-opacity-10 border border-@securityBadgeClass.Replace("bg-", "") border-opacity-25 rounded-pill px-3 py-2">
                                        <i class="bi bi-@securityIcon me-1"></i>@securityLevel Security
                                    </span>
                                </td>
                                <td class="pe-4 py-3 text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.PaymentMethodId" class="btn btn-outline-primary btn-sm" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.PaymentMethodId" class="btn btn-outline-info btn-sm" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.PaymentMethodId" class="btn btn-outline-danger btn-sm" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                    <div class="mt-2">
                                        <span class="badge bg-primary bg-opacity-10 border border-primary border-opacity-25 rounded-pill px-2 py-1">
                                            <i class="bi bi-credit-card me-1"></i>Payment Method
                                        </span>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card-footer bg-light py-3">
            <div class="d-flex justify-content-between align-items-center">
                <div class="text-muted small">
                    <i class="bi bi-gear me-1"></i>
                    @Model.Select(m => m.MethodName).Distinct().Count() unique payment methods configured
                </div>
                <nav aria-label="Table navigation">
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">Next</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>

    <!-- ================= QUICK STATS ================= -->
    @if (Model.Any())
    {
        <div class="row g-4 mt-4">
            <div class="col-lg-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Total Methods</h6>
                                <h3 class="fw-bold">@Model.Count()</h3>
                            </div>
                            <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                                <i class="bi bi-wallet2 text-primary fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Card Methods</h6>
                                <h3 class="fw-bold">
                                    @Model.Count(m => m.MethodName.Contains("Credit", StringComparison.OrdinalIgnoreCase) || m.MethodName.Contains("Debit", StringComparison.OrdinalIgnoreCase))
                                </h3>
                            </div>
                            <div class="bg-info bg-opacity-10 rounded-circle p-3">
                                <i class="bi bi-credit-card text-info fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Digital Wallets</h6>
                                <h3 class="fw-bold">
                                    @Model.Count(m => m.MethodName.Contains("PayPal", StringComparison.OrdinalIgnoreCase) || m.MethodName.Contains("Wallet", StringComparison.OrdinalIgnoreCase))
                                </h3>
                            </div>
                            <div class="bg-success bg-opacity-10 rounded-circle p-3">
                                <i class="bi bi-wallet text-success fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">High Security</h6>
                                <h3 class="fw-bold">
                                    @Model.Count(m =>
                                             m.MethodName.Contains("Credit", StringComparison.OrdinalIgnoreCase) ||
                                             m.MethodName.Contains("Debit", StringComparison.OrdinalIgnoreCase) ||
                                             m.MethodName.Contains("PayPal", StringComparison.OrdinalIgnoreCase))
                                </h3>
                            </div>
                            <div class="bg-warning bg-opacity-10 rounded-circle p-3">
                                <i class="bi bi-shield-check text-warning fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- ================= METHOD DISTRIBUTION ================= -->
        <div class="row mt-4">
            <div class="col-lg-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-pie-chart me-2"></i>Payment Method Distribution
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            @{
                                var methodTypes = Model.Select(m =>
                                {
                                    if (m.MethodName.Contains("Credit", StringComparison.OrdinalIgnoreCase) || m.MethodName.Contains("Debit", StringComparison.OrdinalIgnoreCase))
                                        return "Card Payments";
                                    else if (m.MethodName.Contains("PayPal", StringComparison.OrdinalIgnoreCase))
                                        return "PayPal";
                                    else if (m.MethodName.Contains("Bank", StringComparison.OrdinalIgnoreCase) || m.MethodName.Contains("Transfer", StringComparison.OrdinalIgnoreCase))
                                        return "Bank Transfer";
                                    else if (m.MethodName.Contains("Cash", StringComparison.OrdinalIgnoreCase))
                                        return "Cash";
                                    else if (m.MethodName.Contains("Wallet", StringComparison.OrdinalIgnoreCase))
                                        return "Digital Wallet";
                                    else
                                        return "Other";
                                }).GroupBy(t => t)
                                .Select(g => new { Type = g.Key, Count = g.Count() })
                                .OrderByDescending(g => g.Count);
                            }
                            @foreach (var typeGroup in methodTypes)
                            {
                                var typeColor = typeGroup.Type switch
                                {
                                    "Card Payments" => "info",
                                    "PayPal" => "success",
                                    "Bank Transfer" => "warning",
                                    "Cash" => "secondary",
                                    "Digital Wallet" => "primary",
                                    _ => "dark"
                                };

                                var percentage = (typeGroup.Count * 100) / Model.Count();

                                <div class="list-group-item border-0 px-0 py-3">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <div class="d-flex align-items-center">
                                            <span class="badge bg-@typeColor me-2">●</span>
                                            <span class="fw-semibold">@typeGroup.Type</span>
                                        </div>
                                        <span class="fw-bold">@typeGroup.Count methods</span>
                                    </div>
                                    <div class="progress" style="height: 8px;">
                                        <div class="progress-bar bg-@typeColor" role="progressbar" style="width: @percentage%"
                                             aria-valuenow="@percentage" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-shield-check me-2"></i>Security Level Overview
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            @{
                                var securityLevels = Model.Select(m =>
                                {
                                    if (m.MethodName.Contains("Credit", StringComparison.OrdinalIgnoreCase) ||
                                    m.MethodName.Contains("Debit", StringComparison.OrdinalIgnoreCase) ||
                                    m.MethodName.Contains("PayPal", StringComparison.OrdinalIgnoreCase))
                                        return "High";
                                    else if (m.MethodName.Contains("Bank", StringComparison.OrdinalIgnoreCase) ||
                                    m.MethodName.Contains("Transfer", StringComparison.OrdinalIgnoreCase))
                                        return "Medium";
                                    else if (m.MethodName.Contains("Cash", StringComparison.OrdinalIgnoreCase))
                                        return "Low";
                                    else
                                        return "Medium";
                                }).GroupBy(s => s)
                                .Select(g => new { Level = g.Key, Count = g.Count() })
                                .OrderByDescending(g => g.Count);
                            }
                            @foreach (var levelGroup in securityLevels)
                            {
                                var levelColor = levelGroup.Level switch
                                {
                                    "High" => "success",
                                    "Medium" => "warning",
                                    "Low" => "danger",
                                    _ => "secondary"
                                };

                                var levelIcon = levelGroup.Level switch
                                {
                                    "High" => "shield-check",
                                    "Medium" => "shield",
                                    "Low" => "shield-exclamation",
                                    _ => "shield"
                                };

                                var percentage = (levelGroup.Count * 100) / Model.Count();

                                <div class="list-group-item border-0 px-0 py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            <div class="bg-@levelColor bg-opacity-10 rounded-circle p-2 me-3">
                                                <i class="bi bi-@levelIcon text-@levelColor"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1">
                                            <div class="d-flex justify-content-between align-items-center mb-2">
                                                <span class="fw-semibold">@levelGroup.Level Security</span>
                                                <span class="fw-bold">@levelGroup.Count methods</span>
                                            </div>
                                            <div class="progress" style="height: 8px;">
                                                <div class="progress-bar bg-@levelColor" role="progressbar" style="width: @percentage%"
                                                     aria-valuenow="@percentage" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- ================= PAYMENT METHOD CARDS ================= -->
        <div class="card border-0 shadow-sm mt-4">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="card-title mb-0">
                    <i class="bi bi-credit-card-2-front me-2"></i>Payment Method Details
                </h5>
            </div>
            <div class="card-body">
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                    @foreach (var item in Model.Take(6))
                    {
                        var methodIcon = item.MethodName switch
                        {
                            string s when s.Contains("Credit", StringComparison.OrdinalIgnoreCase) => "credit-card",
                            string s when s.Contains("Debit", StringComparison.OrdinalIgnoreCase) => "credit-card-2-front",
                            string s when s.Contains("PayPal", StringComparison.OrdinalIgnoreCase) => "paypal",
                            string s when s.Contains("Bank", StringComparison.OrdinalIgnoreCase) || s.Contains("Transfer", StringComparison.OrdinalIgnoreCase) => "bank",
                            string s when s.Contains("Cash", StringComparison.OrdinalIgnoreCase) => "cash-coin",
                            string s when s.Contains("Wallet", StringComparison.OrdinalIgnoreCase) => "wallet2",
                            _ => "credit-card"
                        };

                        var securityLevel = item.MethodName switch
                        {
                            string s when s.Contains("Credit", StringComparison.OrdinalIgnoreCase) || s.Contains("Debit", StringComparison.OrdinalIgnoreCase) => "High",
                            string s when s.Contains("PayPal", StringComparison.OrdinalIgnoreCase) => "High",
                            string s when s.Contains("Bank", StringComparison.OrdinalIgnoreCase) || s.Contains("Transfer", StringComparison.OrdinalIgnoreCase) => "Medium",
                            string s when s.Contains("Cash", StringComparison.OrdinalIgnoreCase) => "Low",
                            _ => "Medium"
                        };

                        var securityColor = securityLevel switch
                        {
                            "High" => "success",
                            "Medium" => "warning",
                            "Low" => "danger",
                            _ => "secondary"
                        };

                        <div class="col">
                            <div class="card border h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                                                <i class="bi bi-@methodIcon text-primary"></i>
                                            </div>
                                            <div>
                                                <h6 class="fw-bold mb-0">@item.MethodName</h6>
                                                <small class="text-muted">ID: @item.PaymentMethodId</small>
                                            </div>
                                        </div>
                                        <span class="badge bg-@securityColor bg-opacity-10 border border-@securityColor border-opacity-25">
                                            @securityLevel
                                        </span>
                                    </div>
                                    <div class="mb-3">
                                        <div class="d-flex align-items-center mb-2">
                                            <i class="bi bi-tag text-muted me-2"></i>
                                            <span class="fw-semibold">
                                                @(item.MethodName.Contains("Credit", StringComparison.OrdinalIgnoreCase) || item.MethodName.Contains("Debit", StringComparison.OrdinalIgnoreCase) ? "Card Payment" :
                                                    item.MethodName.Contains("PayPal", StringComparison.OrdinalIgnoreCase) ? "Digital Wallet" :
                                                    item.MethodName.Contains("Bank", StringComparison.OrdinalIgnoreCase) || item.MethodName.Contains("Transfer", StringComparison.OrdinalIgnoreCase) ? "Bank Transfer" :
                                                    item.MethodName.Contains("Cash", StringComparison.OrdinalIgnoreCase) ? "Cash Payment" :
                                                    item.MethodName.Contains("Wallet", StringComparison.OrdinalIgnoreCase) ? "Digital Wallet" : "Other")
                                            </span>
                                        </div>
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-shield text-muted me-2"></i>
                                            <small class="text-muted">@securityLevel security level</small>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">
                                            <i class="bi bi-hash me-1"></i>
                                            Method #@item.PaymentMethodId
                                        </small>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@item.PaymentMethodId" class="btn btn-outline-primary btn-sm">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.PaymentMethodId" class="btn btn-outline-secondary btn-sm">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    <!-- ================= EMPTY STATE ================= -->
    @if (!Model.Any())
    {
        <div class="card border-0 shadow-lg">
            <div class="card-body p-5 text-center">
                <div class="py-5">
                    <div class="bg-light rounded-circle d-inline-flex p-4 mb-4">
                        <i class="bi bi-credit-card text-muted fs-1"></i>
                    </div>
                    <h3 class="fw-bold mb-3">No Payment Methods Found</h3>
                    <p class="text-muted mb-4">
                        No payment methods have been configured yet. Add payment methods to enable transactions on your platform.
                    </p>
                    <a asp-action="Create" class="btn btn-primary btn-lg">
                        <i class="bi bi-plus-circle me-2"></i>Add First Payment Method
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">