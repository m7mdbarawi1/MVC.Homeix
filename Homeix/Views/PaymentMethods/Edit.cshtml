@model Homeix.Models.PaymentMethod
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["EditPaymentMethodTitle"];
}

<div class="container-fluid mt-4">

    <!-- ================= PAGE HEADER ================= -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title fw-bold">
                @Localizer["EditPaymentMethodTitle"]
            </h1>
        </div>
    </div>

    <!-- ================= FORM CARD ================= -->
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">

            <div class="card shadow-sm">
                <div class="card-body">

                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()

                        <!-- VALIDATION -->
                        <div asp-validation-summary="ModelOnly"
                             class="alert alert-danger mb-3"></div>

                        <!-- ID -->
                        <input type="hidden" asp-for="PaymentMethodId" />

                        <!-- METHOD NAME -->
                        <div class="mb-3">
                            <label asp-for="MethodName"
                                   class="form-label fw-semibold">
                                @Localizer["MethodNameLabel"]
                            </label>

                            <input asp-for="MethodName"
                                   class="form-control"
                                   placeholder="@Localizer["MethodNamePlaceholder"]" />

                            <span asp-validation-for="MethodName"
                                  class="text-danger"></span>
                        </div>

                        <!-- ================= ACTIONS ================= -->
                        <div class="d-flex justify-content-end gap-2 mt-4">

                            <button type="submit"
                                    class="btn btn-primary btn-sm">
                                <i class="bi bi-check-circle"></i>
                                @Localizer["SaveButton"]
                            </button>

                            <button type="button"
                                    class="btn btn-secondary btn-sm"
                                    onclick="history.back()">
                                <i class="bi bi-arrow-left"></i>
                                @Localizer["BackButton"]
                            </button>

                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
