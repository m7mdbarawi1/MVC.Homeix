@model Homeix.Models.PaymentMethod

@{
    ViewData["Title"] = "Delete Payment Method";
}

<div class="container-fluid mt-4">

    <!-- ================= HEADER ================= -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="text-danger mb-1">Delete Payment Method</h1>
            <p class="text-muted mb-0">
                Are you sure you want to delete this payment method?
            </p>
        </div>
    </div>

    <!-- ================= CONFIRMATION CARD ================= -->
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">

            <div class="card shadow-sm border-danger">

                <!-- Card Header -->
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Confirm Deletion</h5>
                </div>

                <!-- Card Body -->
                <div class="card-body">
                    <dl class="row mb-0">

                        <dt class="col-sm-4 fw-bold">
                            Method Name
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.MethodName)
                        </dd>

                    </dl>
                </div>

                <!-- Card Footer -->
                <div class="card-footer d-flex justify-content-end gap-2">
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" asp-for="PaymentMethodId" />

                        <button type="submit"
                                class="btn btn-danger d-inline-flex align-items-center gap-1">
                            <i class="bi bi-trash"></i>
                            Delete
                        </button>
                    </form>

                    <button type="button"
                            class="btn btn-secondary"
                            onclick="history.back()">
                        <i class="bi bi-arrow-left"></i> Back
                    </button>
                </div>

            </div>

        </div>
    </div>

</div>
