@model IEnumerable<Homeix.Models.CustomerPost>

@{
    ViewData["Title"] = "Customer Posts";
}

<div class="container-fluid mt-4">

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 d-flex flex-column flex-md-row justify-content-between align-items-md-center">
            <h1 class="mb-3 mb-md-0">@ViewData["Title"]</h1>

            <div class="d-flex gap-2">
                <a asp-action="DownloadReport"
                   class="btn btn-secondary d-inline-flex align-items-center gap-2">
                    <i class="bi bi-download"></i>
                    Download Report
                </a>
            </div>
        </div>
    </div>

    <!-- Search -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <input type="text"
                           id="searchInput"
                           class="form-control"
                           placeholder="Search customer posts..." />
                </div>
            </div>
        </div>
    </div>

    <!-- Table -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">

                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th>Location</th>
                                    <th>Min Price</th>
                                    <th>Max Price</th>
                                    <th>Category</th>
                                    <th>Customer</th>
                                    <th>Created</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>

                            <tbody id="postsTable">
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Title</td>

                                            <td class="text-truncate" style="max-width:250px;">
                                                @item.Description
                                            </td>

                                            <td>@item.Location</td>
                                            <td>@item.PriceRangeMin</td>
                                            <td>@item.PriceRangeMax</td>

                                            <td>@(item.PostCategory?.CategoryName ?? "—")</td>
                                            <td>@(item.User?.FullName ?? "—")</td>

                                            <td>@item.CreatedAt.ToString("yyyy-MM-dd")</td>

                                            <td class="text-center">
                                                <div class="d-flex flex-wrap justify-content-center gap-2">

                                                    <a asp-action="Details"
                                                       asp-route-id="@item.CustomerPostId"
                                                       class="btn btn-accent btn-sm">
                                                        <i class="bi bi-info-circle"></i> Details
                                                    </a>

                                                    <a asp-action="Delete"
                                                       asp-route-id="@item.CustomerPostId"
                                                       class="btn btn-danger btn-sm">
                                                        <i class="bi bi-trash"></i> Delete
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="9" class="text-center p-4 text-muted">
                                            No customer posts found.
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const searchInput = document.getElementById("searchInput");
            const rows = document.querySelectorAll("#postsTable tr");

            searchInput.addEventListener("input", function () {
                const term = searchInput.value.toLowerCase();
                rows.forEach(row => {
                    row.style.display =
                        row.textContent.toLowerCase().includes(term)
                            ? ""
                            : "none";
                });
            });
        });
    </script>
}
