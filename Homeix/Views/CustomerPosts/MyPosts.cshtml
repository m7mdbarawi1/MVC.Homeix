@model IEnumerable<Homeix.Models.CustomerPost>

@{
    ViewData["Title"] = "My Posts";
}

<div class="container-fluid mt-4">

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 d-flex flex-column flex-md-row justify-content-between align-items-md-center">
            <h1 class="page-title mb-3 mb-md-0">My Posts</h1>

            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Post
            </a>
        </div>
    </div>

    <!-- Table -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body p-0">

                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">

                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Category</th>
                                    <th>Location</th>
                                    <th>Status</th>
                                    <th>Created</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                @if (Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="fw-semibold">
                                                @item.Title
                                            </td>

                                            <td>
                                                @item.PostCategory?.CategoryName
                                            </td>

                                            <td>
                                                @item.Location
                                            </td>

                                            <td>
                                                <span class="badge bg-warning text-dark">
                                                    @item.Status
                                                </span>
                                            </td>

                                            <td>
                                                @item.CreatedAt.ToString("yyyy-MM-dd")
                                            </td>

                                            <td class="text-center">
                                                <div class="d-flex flex-wrap justify-content-center gap-2">

                                                    <a asp-action="Details"
                                                       asp-route-id="@item.CustomerPostId"
                                                       class="btn btn-accent btn-sm">
                                                        <i class="bi bi-eye"></i> View
                                                    </a>

                                                    <a asp-action="Edit"
                                                       asp-route-id="@item.CustomerPostId"
                                                       class="btn btn-secondary btn-sm">
                                                        <i class="bi bi-pencil-square"></i> Edit
                                                    </a>

                                                    <a asp-action="Delete"
                                                       asp-route-id="@item.CustomerPostId"
                                                       class="btn btn-danger btn-sm">
                                                        <i class="bi bi-trash"></i> Delete
                                                    </a>

                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center text-muted py-4">
                                            You have not created any posts yet.
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>
