@model IEnumerable<Homeix.Models.CustomerPost>

@{
    ViewData["Title"] = "My Customer Posts";
    var returnUrl = (Context.Request.Path + Context.Request.QueryString).ToString();
    var fallbackImage = "/images/no-image.png";
}

<div class="container mt-4">

    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold">My Posts</h1>

        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Post
        </a>
    </div>

    <!-- FILTERS -->
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <div class="row g-2">

                <div class="col-md-6">
                    <input id="searchInput"
                           class="form-control"
                           placeholder="Search title..." />
                </div>

                <div class="col-md-6">
                    <select id="categoryFilter" class="form-select">
                        <option value="">All Categories</option>
                        @foreach (var cat in Model
                        .Select(p => p.PostCategory?.CategoryName)
                        .Where(c => !string.IsNullOrWhiteSpace(c))
                        .Distinct())
                        {
                            <option value="@cat">@cat</option>
                        }
                    </select>
                </div>

            </div>
        </div>
    </div>

    <!-- POSTS LIST -->
    <div id="postsList">

        @if (!Model.Any())
        {
            <div class="text-center text-muted py-5">
                You have not created any posts yet.
            </div>
        }

        @foreach (var post in Model)
        {
            var imageUrl =
            post.Media != null && post.Media.Any()
            ? post.Media
            .OrderByDescending(m => m.MediaId)
            .First().MediaPath.Replace("\\", "/")
            : fallbackImage;

            <div class="card shadow-sm mb-3 post-row"
                 data-title="@post.Title.ToLowerInvariant()"
                 data-category="@post.PostCategory?.CategoryName">

                <div class="row g-0 align-items-center">

                    <!-- IMAGE -->
                    <div class="col-md-3">
                        <img src="@imageUrl"
                             class="img-fluid rounded-start"
                             style="height:180px; width:100%; object-fit:cover" />
                    </div>

                    <!-- CONTENT -->
                    <div class="col-md-6">
                        <div class="card-body">

                            <h5 class="fw-bold mb-1">@post.Title</h5>

                            <p class="mb-1 text-muted">
                                <strong>Category:</strong>
                                @(post.PostCategory?.CategoryName ?? "—")
                            </p>

                            <p class="mb-1 fw-bold text-primary">
                                💰 @(post.PriceRangeMin?.ToString() ?? "—") JD –
                                @(post.PriceRangeMax?.ToString() ?? "—") JD
                            </p>

                            <p class="mb-1 text-muted small">
                                Created: @post.CreatedAt.ToString("yyyy-MM-dd")
                            </p>

                        </div>
                    </div>

                    <!-- ACTIONS -->
                    <div class="col-md-3">
                        <div class="d-flex flex-column gap-2 p-3">

                            <a asp-action="Details"
                               asp-route-id="@post.CustomerPostId"
                               asp-route-returnUrl="@returnUrl"
                               class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-eye"></i> View
                            </a>

                            <a asp-action="Edit"
                               asp-route-id="@post.CustomerPostId"
                               class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-pencil"></i> Edit
                            </a>

                            <a asp-action="Delete"
                               asp-route-id="@post.CustomerPostId"
                               class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-trash"></i> Delete
                            </a>

                        </div>
                    </div>

                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {

            const search = document.getElementById("searchInput");
            const category = document.getElementById("categoryFilter");
            const rows = document.querySelectorAll(".post-row");

            function filter() {
                rows.forEach(row => {
                    const title = row.dataset.title || "";
                    const cat = row.dataset.category || "";

                    const show =
                        title.includes(search.value.toLowerCase()) &&
                        (category.value === "" || cat === category.value);

                    row.style.display = show ? "" : "none";
                });
            }

            search.addEventListener("input", filter);
            category.addEventListener("change", filter);

            filter();
        });
    </script>
}
