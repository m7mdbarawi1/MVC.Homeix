@model Homeix.Models.CustomerPost
@using Homeix.Models
@using System.Linq

@functions {
    // Safely try to read UserName/Username without breaking compilation if it doesn't exist.
    string? GetUserNameSafe(User? u)
    {
        if (u == null) return null;

        var prop = u.GetType().GetProperty("UserName")
                   ?? u.GetType().GetProperty("Username");

        return prop?.GetValue(u)?.ToString();
    }
}

@{
    ViewData["Title"] = "Customer Post Details";

    var mediaList =
        ViewBag.PostMedia as List<PostMedium>
        ?? new List<PostMedium>();

    mediaList = mediaList
        .Where(m => !string.IsNullOrWhiteSpace(m.MediaPath))
        .OrderByDescending(m => m.UploadedAt)
        .ToList();

    var firstMedia = mediaList.FirstOrDefault();

    var fallbackImageUrl = "/images/no-image.png";

    var creatorUserName = GetUserNameSafe(Model.User) ?? Model.User?.FullName ?? "—";
}

<div class="container-fluid page-wrapper mt-4">

    <!-- ================= HEADER ================= -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title">@ViewData["Title"]</h1>
        </div>
    </div>

    <!-- ================= DETAILS CARD ================= -->
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">

            <div class="card shadow-sm">

                <!-- 🖼 IMAGES CAROUSEL (NEW) -->
                @if (mediaList.Count > 1)
                {
                    <div id="customerPostCarousel" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-indicators">
                            @for (int i = 0; i < mediaList.Count; i++)
                            {
                                <button type="button"
                                        data-bs-target="#customerPostCarousel"
                                        data-bs-slide-to="@i"
                                        class="@(i == 0 ? "active" : "")"
                                        aria-current="@(i == 0 ? "true" : "false")"
                                        aria-label="Slide @(i + 1)">
                                </button>
                            }
                        </div>

                        <div class="carousel-inner">
                            @for (int i = 0; i < mediaList.Count; i++)
                            {
                                var url = mediaList[i].MediaPath.Replace("\\", "/");

                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                    <img src="@url"
                                         class="d-block w-100"
                                         style="height:300px; object-fit:cover" />
                                </div>
                            }
                        </div>

                        <button class="carousel-control-prev" type="button" data-bs-target="#customerPostCarousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>

                        <button class="carousel-control-next" type="button" data-bs-target="#customerPostCarousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                }
                else
                {
                    // Keep your original behavior (single image)
                    var imageUrl = !string.IsNullOrWhiteSpace(firstMedia?.MediaPath)
                    ? firstMedia!.MediaPath.Replace("\\", "/")
                    : fallbackImageUrl;

                    <img src="@imageUrl"
                         class="card-img-top"
                         style="height:300px; object-fit:cover" />
                }

                <div class="card-body">

                    <!-- TITLE + META -->
                    <div class="d-flex flex-column flex-md-row
                                align-items-md-center
                                justify-content-between
                                mb-4 gap-2">

                        <div>
                            <h3 class="fw-bold mb-1">@Model.Title</h3>

                            <!-- ✅ Creator Username (NEW) -->
                            <p class="mb-1 text-muted">
                                Posted by: <strong>@creatorUserName</strong>
                            </p>

                            <p class="mb-0 text-muted">
                                Category: @Model.PostCategory?.CategoryName
                            </p>

                            <p class="mb-0 fw-bold text-success">
                                @(Model.PriceRangeMin.HasValue || Model.PriceRangeMax.HasValue
                                    ? $"{Model.PriceRangeMin} - {Model.PriceRangeMax} JD"
                                    : "Price not specified")
                            </p>
                        </div>

                        <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary") fs-6">
                            @(Model.IsActive ? "Active" : "Inactive")
                        </span>
                    </div>

                    <!-- DETAILS -->
                    <dl class="row mb-0">

                        <dt class="col-sm-4 fw-bold">Customer</dt>
                        <dd class="col-sm-8">@Model.User?.FullName</dd>

                        <!-- ✅ Username row (NEW, does not remove anything) -->
                        <dt class="col-sm-4 fw-bold">Username</dt>
                        <dd class="col-sm-8">@creatorUserName</dd>

                        <dt class="col-sm-4 fw-bold">Location</dt>
                        <dd class="col-sm-8">@Model.Location</dd>

                        <dt class="col-sm-4 fw-bold">Status</dt>
                        <dd class="col-sm-8">@Model.Status</dd>

                        <dt class="col-sm-4 fw-bold">Created On</dt>
                        <dd class="col-sm-8">
                            @Model.CreatedAt.ToString("yyyy-MM-dd")
                        </dd>

                        <dt class="col-sm-4 fw-bold">Description</dt>
                        <dd class="col-sm-8">
                            @Model.Description
                        </dd>

                    </dl>
                </div>

                <!-- ================= FOOTER ================= -->
                <div class="card-footer d-flex justify-content-between">

                    <a asp-controller="Dashboard"
                       asp-action="WorkerDashboard"
                       class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Back
                    </a>

                    <div class="d-flex gap-2">
                        <!-- ✅ RATE BUTTON (NEW) -->
                        <a asp-controller="Ratings"
                           asp-action="Create"
                           asp-route-ratedUserId="@Model.UserId"
                           asp-route-ratedUserName="@creatorUserName"
                           class="btn btn-outline-warning">
                            <i class="bi bi-star"></i> Rate
                        </a>

                        <!-- 💬 CHAT BUTTON -->
                        <a asp-controller="Chat"
                           asp-action="Index"
                           asp-route-postType="CustomerPost"
                           asp-route-postId="@Model.CustomerPostId"
                           asp-route-userId="@Model.UserId"
                           class="btn btn-primary">
                            <i class="bi bi-chat-dots"></i> Chat
                        </a>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>