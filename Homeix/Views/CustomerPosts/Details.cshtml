@model Homeix.Models.CustomerPost

@{
    ViewData["Title"] = "Customer Post Details";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1>@ViewData["Title"]</h1>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body">

                    <dl class="row mb-0">
                        <dt class="col-sm-4">Customer</dt>
                        <dd class="col-sm-8">@((Model.User?.FullName) ?? "—")</dd>

                        <dt class="col-sm-4">Category</dt>
                        <dd class="col-sm-8">@((Model.PostCategory?.CategoryName) ?? "—")</dd>

                        <dt class="col-sm-4">Title</dt>
                        <dd class="col-sm-8">@Model.Title</dd>

                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">@Model.Description</dd>

                        <dt class="col-sm-4">Location</dt>
                        <dd class="col-sm-8">@Model.Location</dd>

                        <dt class="col-sm-4">Min Price</dt>
                        <dd class="col-sm-8">@Model.PriceRangeMin</dd>

                        <dt class="col-sm-4">Max Price</dt>
                        <dd class="col-sm-8">@Model.PriceRangeMax</dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">@Model.Status</dd>

                        <dt class="col-sm-4">Created At</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("g")</dd>

                        <dt class="col-sm-4">Active</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </dd>
                    </dl>

                </div>
            </div>
        </div>
    </div>
</div>
