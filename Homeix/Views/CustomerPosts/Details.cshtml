@model Homeix.Models.CustomerPost
@using Homeix.Models

@{
    ViewData["Title"] = "Customer Post Details";

    var mediaList =
        ViewBag.PostMedia as List<PostMedium>
        ?? new List<PostMedium>();

    var media = mediaList
        .OrderByDescending(m => m.UploadedAt)
        .FirstOrDefault();

    var imageUrl = !string.IsNullOrWhiteSpace(media?.MediaPath)
        ? media.MediaPath.Replace("\\", "/")
        : "/images/no-image.png";
}

<div class="container-fluid page-wrapper mt-4">

    <!-- ================= HEADER ================= -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title">@ViewData["Title"]</h1>
        </div>
    </div>

    <!-- ================= DETAILS CARD ================= -->
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">

            <div class="card shadow-sm">

                <!-- 🖼 IMAGE (SAME STYLE AS GRID) -->
                <img src="@imageUrl"
                     class="card-img-top"
                     style="height:300px; object-fit:cover" />

                <div class="card-body">

                    <!-- TITLE + META -->
                    <div class="d-flex flex-column flex-md-row
                                align-items-md-center
                                justify-content-between
                                mb-4 gap-2">

                        <div>
                            <h3 class="fw-bold mb-1">@Model.Title</h3>
                            <p class="mb-0 text-muted">
                                Category: @Model.PostCategory?.CategoryName
                            </p>
                            <p class="mb-0 fw-bold text-success">
                                @(Model.PriceRangeMin.HasValue || Model.PriceRangeMax.HasValue
                                    ? $"{Model.PriceRangeMin} - {Model.PriceRangeMax} JD"
                                    : "Price not specified")
                            </p>
                        </div>

                        <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary") fs-6">
                            @(Model.IsActive ? "Active" : "Inactive")
                        </span>
                    </div>

                    <!-- DETAILS -->
                    <dl class="row mb-0">

                        <dt class="col-sm-4 fw-bold">Customer</dt>
                        <dd class="col-sm-8">@Model.User?.FullName</dd>

                        <dt class="col-sm-4 fw-bold">Location</dt>
                        <dd class="col-sm-8">@Model.Location</dd>

                        <dt class="col-sm-4 fw-bold">Status</dt>
                        <dd class="col-sm-8">@Model.Status</dd>

                        <dt class="col-sm-4 fw-bold">Created On</dt>
                        <dd class="col-sm-8">
                            @Model.CreatedAt.ToString("yyyy-MM-dd")
                        </dd>

                        <dt class="col-sm-4 fw-bold">Description</dt>
                        <dd class="col-sm-8">
                            @Model.Description
                        </dd>

                    </dl>
                </div>

                <!-- ================= FOOTER ================= -->
                <div class="card-footer d-flex justify-content-between">

                    <a asp-controller="Dashboard"
                       asp-action="WorkerDashboard"
                       class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Back
                    </a>


                    <!-- 💬 CHAT BUTTON -->
                    <a asp-controller="Chat"
                       asp-action="Index"
                       asp-route-postType="CustomerPost"
                       asp-route-postId="@Model.CustomerPostId"
                       asp-route-userId="@Model.UserId"
                       class="btn btn-primary">
                        <i class="bi bi-chat-dots"></i> Chat
                    </a>

                </div>
            </div>

        </div>
    </div>
</div>
