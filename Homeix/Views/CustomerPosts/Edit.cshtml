@model Homeix.Models.CustomerPost

@{
    ViewData["Title"] = "Edit Customer Post";
}

<div class="container mt-4">

    <!-- HEADER -->
    <div class="text-center mb-4">
        <h1 class="fw-bold">Edit Customer Post</h1>
        <p class="text-muted">Update the details of your post</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">

            <div class="card shadow-sm">
                <div class="card-body">

                    <form asp-action="Edit"
                          method="post"
                          enctype="multipart/form-data">

                        @Html.AntiForgeryToken()

                        <!-- REQUIRED -->
                        <input type="hidden" asp-for="CustomerPostId" />

                        <div asp-validation-summary="ModelOnly"
                             class="text-danger mb-3"></div>

                        <!-- CATEGORY -->
                        <div class="mb-3">
                            <label asp-for="PostCategoryId" class="form-label fw-semibold"></label>
                            <select asp-for="PostCategoryId"
                                    class="form-select"
                                    asp-items="ViewBag.PostCategoryId">
                                <option value="">-- Select Category --</option>
                            </select>
                            <span asp-validation-for="PostCategoryId" class="text-danger"></span>
                        </div>

                        <!-- TITLE -->
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-semibold"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <!-- DESCRIPTION -->
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-semibold"></label>
                            <textarea asp-for="Description"
                                      rows="4"
                                      class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- LOCATION -->
                        <div class="mb-3">
                            <label asp-for="Location" class="form-label fw-semibold"></label>
                            <input asp-for="Location" class="form-control" />
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>

                        <!-- PRICE RANGE -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PriceRangeMin" class="form-label fw-semibold"></label>
                                <input asp-for="PriceRangeMin" type="number" step="0.01" class="form-control" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="PriceRangeMax" class="form-label fw-semibold"></label>
                                <input asp-for="PriceRangeMax" type="number" step="0.01" class="form-control" />
                            </div>
                        </div>

                        <!-- EXISTING IMAGES -->
                        @if (Model.Media != null && Model.Media.Any())
                        {
                            <div class="mb-4">
                                <label class="form-label fw-semibold">Existing Images</label>

                                <div class="row g-3">
                                    @foreach (var media in Model.Media)
                                    {
                                        <div class="col-6 col-md-4 text-center">
                                            <img src="@media.MediaPath"
                                                 class="img-fluid rounded border mb-2"
                                                 style="height:160px; object-fit:cover;" />

                                            <div class="form-check">
                                                <input class="form-check-input"
                                                       type="checkbox"
                                                       name="deleteMediaIds"
                                                       value="@media.MediaId"
                                                       id="media_@media.MediaId" />

                                                <label class="form-check-label text-danger"
                                                       for="media_@media.MediaId">
                                                    Delete
                                                </label>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }

                        <!-- ADD NEW IMAGES -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold">
                                Add New Images <span class="text-muted">(optional)</span>
                            </label>

                            <div id="dropZone"
                                 class="border border-2 border-dashed rounded p-4 text-center"
                                 style="cursor:pointer;">

                                <p class="text-muted mb-2">
                                    Drag & drop images here or click to select
                                </p>

                                <input type="file"
                                       id="mediaInput"
                                       name="mediaFiles"
                                       class="d-none"
                                       accept="image/*"
                                       multiple />

                                <div id="preview" class="row g-2 mt-3"></div>
                            </div>
                        </div>

                        <!-- ACTIONS -->
                        <div class="d-flex justify-content-end gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Save Changes
                            </button>

                            <a asp-action="MyPosts" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        const dropZone = document.getElementById("dropZone");
        const input = document.getElementById("mediaInput");
        const preview = document.getElementById("preview");

        dropZone.onclick = () => input.click();

        dropZone.ondragover = e => {
            e.preventDefault();
            dropZone.classList.add("bg-light");
        };

        dropZone.ondragleave = () => {
            dropZone.classList.remove("bg-light");
        };

        dropZone.ondrop = e => {
            e.preventDefault();
            dropZone.classList.remove("bg-light");
            input.files = e.dataTransfer.files;
            renderPreview(input.files);
        };

        input.onchange = () => renderPreview(input.files);

        function renderPreview(files) {
            preview.innerHTML = "";
            if (!files) return;

            [...files].forEach(file => {
                if (!file.type.startsWith("image")) return;

                const col = document.createElement("div");
                col.className = "col-6 col-md-4";

                const img = document.createElement("img");
                img.src = URL.createObjectURL(file);
                img.className = "img-fluid rounded border";
                img.style.height = "160px";
                img.style.objectFit = "cover";

                img.onload = () => URL.revokeObjectURL(img.src);

                col.appendChild(img);
                preview.appendChild(col);
            });
        }
    </script>
}
