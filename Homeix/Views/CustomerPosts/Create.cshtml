@model Homeix.Models.CustomerPost

@{
    ViewData["Title"] = "Create Customer Post";
}

<div class="container mt-4">

    <!-- HEADER -->
    <div class="text-center mb-4">
        <h1 class="fw-bold">Create Customer Post</h1>
        <p class="text-muted mb-0">
            Describe your request clearly to attract the right workers
        </p>
    </div>

    <!-- FORM CARD -->
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body">

                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- CATEGORY -->
                        <div class="mb-3">
                            <label asp-for="PostCategoryId" class="form-label fw-semibold"></label>
                            <select asp-for="PostCategoryId"
                                    class="form-select"
                                    asp-items="ViewBag.PostCategoryId"
                                    required>
                                <option value="">-- Select Category --</option>
                            </select>
                            <span asp-validation-for="PostCategoryId" class="text-danger"></span>
                        </div>

                        <!-- TITLE -->
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-semibold"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <!-- DESCRIPTION -->
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-semibold"></label>
                            <textarea asp-for="Description"
                                      class="form-control"
                                      rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- LOCATION -->
                        <div class="mb-3">
                            <label asp-for="Location" class="form-label fw-semibold"></label>
                            <input asp-for="Location" class="form-control" />
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>

                        <!-- PRICE RANGE -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PriceRangeMin" class="form-label fw-semibold"></label>
                                <input asp-for="PriceRangeMin"
                                       type="number"
                                       step="0.01"
                                       class="form-control" />
                                <span asp-validation-for="PriceRangeMin" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="PriceRangeMax" class="form-label fw-semibold"></label>
                                <input asp-for="PriceRangeMax"
                                       type="number"
                                       step="0.01"
                                       class="form-control" />
                                <span asp-validation-for="PriceRangeMax" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- MEDIA UPLOAD -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold">
                                Upload Images <span class="text-muted">(optional)</span>
                            </label>

                            <div id="dropZone"
                                 class="border border-2 border-dashed rounded p-4 text-center"
                                 style="cursor:pointer;">
                                <p class="text-muted mb-2">
                                    Drag & drop here or click to select (multiple allowed)
                                </p>

                                <input type="file"
                                       id="mediaInput"
                                       name="newMediaFiles"
                                       class="d-none"
                                       accept="image/*"
                                       multiple />

                                <div id="preview" class="row g-2 mt-3"></div>

                                <button type="button"
                                        id="clearImagesBtn"
                                        class="btn btn-outline-secondary btn-sm mt-3">
                                    Clear selected images
                                </button>
                            </div>
                        </div>

                        <!-- ACTIONS -->
                        <div class="d-flex justify-content-end gap-2 mt-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Create Post
                            </button>

                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left-circle"></i> Back
                            </a>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        const dropZone = document.getElementById("dropZone");
        const input = document.getElementById("mediaInput");
        const preview = document.getElementById("preview");
        const clearBtn = document.getElementById("clearImagesBtn");
        const fileMap = new Map();

        function fileKey(f) {
            return `${f.name}_${f.size}_${f.lastModified}`;
        }

        function rebuildInputFiles() {
            const dt = new DataTransfer();
            for (const f of fileMap.values()) dt.items.add(f);
            input.files = dt.files;
            showPreview(input.files);
        }

        function addFiles(fileList) {
            if (!fileList) return;
            [...fileList].forEach(f => {
                if (!f.type.startsWith("image/")) return;
                fileMap.set(fileKey(f), f);
            });
            rebuildInputFiles();
        }

        function clearFiles() {
            fileMap.clear();
            rebuildInputFiles();
        }

        dropZone.onclick = (e) => {
            if (e.target === clearBtn) return;
            input.click();
        };

        dropZone.ondragover = e => {
            e.preventDefault();
            dropZone.classList.add("bg-light");
        };

        dropZone.ondragleave = () => {
            dropZone.classList.remove("bg-light");
        };

        dropZone.ondrop = e => {
            e.preventDefault();
            dropZone.classList.remove("bg-light");
            addFiles(e.dataTransfer.files);
        };

        input.onchange = () => {
            addFiles(input.files);
            input.value = "";
        };

        clearBtn.onclick = (e) => {
            e.preventDefault();
            clearFiles();
        };

        function showPreview(files) {
            preview.innerHTML = "";
            if (!files || files.length === 0) return;

            [...files].forEach(file => {
                const col = document.createElement("div");
                col.className = "col-6 col-md-4";

                const img = document.createElement("img");
                img.src = URL.createObjectURL(file);
                img.className = "img-fluid rounded border";
                img.style.maxHeight = "160px";
                img.style.objectFit = "cover";
                img.onload = () => URL.revokeObjectURL(img.src);

                col.appendChild(img);
                preview.appendChild(col);
            });
        }
    </script>
}
