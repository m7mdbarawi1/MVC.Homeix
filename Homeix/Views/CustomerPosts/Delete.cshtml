@model Homeix.Models.CustomerPost

@{
    ViewData["Title"] = "Delete Customer Post";
}

<div class="container mt-4">

    <!-- HEADER -->
    <div class="text-center mb-4">
        <h1 class="text-danger fw-bold">Delete Customer Post</h1>
        <p class="text-muted mb-0">
            Are you sure you want to permanently delete this post?
        </p>
    </div>

    <!-- CONFIRM CARD -->
    <div class="row justify-content-center">
        <div class="col-md-9 col-lg-8">
            <div class="card border-danger shadow-sm">

                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i>
                        Confirm Deletion
                    </h5>
                </div>

                <div class="card-body">
                    <dl class="row mb-0">

                        <dt class="col-sm-4 fw-semibold">Title</dt>
                        <dd class="col-sm-8">@Model.Title</dd>

                        <dt class="col-sm-4 fw-semibold">Description</dt>
                        <dd class="col-sm-8">@Model.Description</dd>

                        <dt class="col-sm-4 fw-semibold">Location</dt>
                        <dd class="col-sm-8">@Model.Location</dd>

                        <dt class="col-sm-4 fw-semibold">Price Range</dt>
                        <dd class="col-sm-8">
                            @(Model.PriceRangeMin.HasValue || Model.PriceRangeMax.HasValue
                                ? $"{Model.PriceRangeMin} - {Model.PriceRangeMax} JD"
                                : "Not specified")
                        </dd>

                        <dt class="col-sm-4 fw-semibold">Category</dt>
                        <dd class="col-sm-8">
                            @(Model.PostCategory?.CategoryName ?? "—")
                        </dd>

                        <dt class="col-sm-4 fw-semibold">Created At</dt>
                        <dd class="col-sm-8">
                            @Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")
                        </dd>

                        <dt class="col-sm-4 fw-semibold">Posted By</dt>
                        <dd class="col-sm-8">
                            @(Model.User?.FullName ?? "—")
                        </dd>

                    </dl>
                </div>

                <!-- ACTIONS -->
                <div class="card-footer d-flex justify-content-end gap-2">

                    <form asp-action="Delete" method="post">
                        @Html.AntiForgeryToken()

                        <!-- IMPORTANT: must match DeleteConfirmed(int id) -->
                        <input type="hidden"
                               name="id"
                               value="@Model.CustomerPostId" />

                        <button type="submit"
                                class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </form>

                    <a asp-action="Index"
                       class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Cancel
                    </a>

                </div>

            </div>
        </div>
    </div>
</div>
