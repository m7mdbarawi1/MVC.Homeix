@model Homeix.Models.CustomerPost
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["DeleteCustomerPost"];
}

<div class="container mt-4">

    <!-- ================= PAGE HEADER ================= -->
    <div class="text-center mb-4">
        <h1 class="text-danger fw-bold">
            @Localizer["DeleteCustomerPost"]
        </h1>
        <p class="text-muted mb-0">
            @Localizer["DeleteCustomerPostWarning"]
        </p>
    </div>

    <!-- ================= CONFIRMATION CARD ================= -->
    <div class="row justify-content-center">
        <div class="col-md-9 col-lg-8">

            <div class="card border-danger shadow-sm">

                <!-- CARD HEADER -->
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0 d-inline-flex align-items-center gap-2">
                        <i class="bi bi-exclamation-triangle"></i>
                        @Localizer["ConfirmDeletion"]
                    </h5>
                </div>

                <!-- CARD BODY -->
                <div class="card-body">
                    <dl class="row mb-0">

                        <dt class="col-sm-4 fw-semibold">
                            @Localizer["Title"]
                        </dt>
                        <dd class="col-sm-8">@Model.Title</dd>

                        <dt class="col-sm-4 fw-semibold">
                            @Localizer["Description"]
                        </dt>
                        <dd class="col-sm-8">@Model.Description</dd>

                        <dt class="col-sm-4 fw-semibold">
                            @Localizer["Location"]
                        </dt>
                        <dd class="col-sm-8">@Model.Location</dd>

                        <dt class="col-sm-4 fw-semibold">
                            @Localizer["PriceRange"]
                        </dt>
                        <dd class="col-sm-8">
                            @(Model.PriceRangeMin.HasValue || Model.PriceRangeMax.HasValue
                                ? $"{Model.PriceRangeMin} - {Model.PriceRangeMax} JD"
                                : Localizer["NotSpecified"])
                        </dd>

                        <dt class="col-sm-4 fw-semibold">
                            @Localizer["Category"]
                        </dt>
                        <dd class="col-sm-8">
                            @(Model.PostCategory?.CategoryName ?? "—")
                        </dd>

                        <dt class="col-sm-4 fw-semibold">
                            @Localizer["CreatedAt"]
                        </dt>
                        <dd class="col-sm-8">
                            @Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")
                        </dd>

                        <dt class="col-sm-4 fw-semibold">
                            @Localizer["PostedBy"]
                        </dt>
                        <dd class="col-sm-8">
                            @(Model.User?.FullName ?? "—")
                        </dd>

                    </dl>
                </div>

                <!-- ================= ACTIONS ================= -->
                <div class="card-footer d-flex justify-content-end gap-2">

                    <form asp-action="Delete" method="post" class="d-inline">
                        @Html.AntiForgeryToken()

                        <input type="hidden"
                               name="id"
                               value="@Model.CustomerPostId" />

                        <button type="submit"
                                class="btn btn-danger btn-sm d-inline-flex align-items-center gap-1">
                            <i class="bi bi-trash"></i>
                            @Localizer["Delete"]
                        </button>
                    </form>

                    <button type="button"
                            class="btn btn-secondary btn-sm d-inline-flex align-items-center gap-1"
                            onclick="history.back()">
                        <i class="bi bi-arrow-left"></i>
                        @Localizer["Back"]
                    </button>

                </div>

            </div>

        </div>
    </div>
</div>
