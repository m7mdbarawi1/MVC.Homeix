@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<div class="container mt-5 mb-5">

    <!-- HEADER -->
    <div class="text-center mb-4">
        <h1 class="fw-bold">@Localizer["AboutHomeixTitle"]</h1>
        <p class="text-muted">
            @Localizer["AboutHomeixSubtitle"]
        </p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">

            <div class="card shadow-sm">
                <div class="card-body">

                    <!-- ================= ABOUT US ================= -->
                    <div class="mb-4">
                        <label class="form-label fw-semibold">
                            @Localizer["AboutPlatform"]
                        </label>
                        <p class="form-control-plaintext text-muted">
                            @Localizer["AboutPlatformText"]
                        </p>
                    </div>

                    <!-- ================= VALUES ================= -->
                    <div class="mb-4">
                        <label class="form-label fw-semibold">
                            @Localizer["CoreValues"]
                        </label>
                        <ul class="text-muted mb-0">
                            <li>@Localizer["ValueVerified"]</li>
                            <li>@Localizer["ValueSecureData"]</li>
                            <li>@Localizer["ValueTransparency"]</li>
                            <li>@Localizer["ValueUserCentric"]</li>
                            <li>@Localizer["ValueScalable"]</li>
                        </ul>
                    </div>

                    <!-- ================= PRIVACY ================= -->
                    <div class="mb-4">
                        <label class="form-label fw-semibold">
                            @Localizer["PrivacyPolicy"]
                        </label>
                        <p class="form-control-plaintext text-muted">
                            @Localizer["PrivacyText"]
                        </p>
                    </div>

                    <!-- ================= DATA USAGE ================= -->
                    <div class="mb-4">
                        <label class="form-label fw-semibold">
                            @Localizer["DataUsage"]
                        </label>
                        <ul class="text-muted mb-0">
                            <li>@Localizer["DataUsageAccount"]</li>
                            <li>@Localizer["DataUsageSubscription"]</li>
                            <li>@Localizer["DataUsageMessaging"]</li>
                            <li>@Localizer["DataUsageSecurity"]</li>
                        </ul>
                    </div>

                    <!-- ================= SECURITY ================= -->
                    <div class="mb-4">
                        <label class="form-label fw-semibold">
                            @Localizer["Security"]
                        </label>
                        <p class="form-control-plaintext text-muted">
                            @Localizer["SecurityText"]
                        </p>
                    </div>

                    <!-- ================= CREATED BY ================= -->
                    <div class="mb-4">
                        <label class="form-label fw-semibold">
                            @Localizer["CreatedBy"]
                        </label>

                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <strong>Eng. Razan Al Quraan</strong>
                                <div class="text-muted small">
                                    @Localizer["Supervisor"]
                                </div>
                            </li>

                            <li class="list-group-item">
                                <strong>Mohammad Al Barawi</strong>
                                <div class="text-muted small">
                                    @Localizer["TeamLeader"]
                                </div>
                            </li>

                            <li class="list-group-item">
                                <strong>Abdullah Salhab</strong>
                                <div class="text-muted small">
                                    @Localizer["FullStackDeveloper"]
                                </div>
                            </li>

                            <li class="list-group-item">
                                <strong>Soundus Abu Salim</strong>
                                <div class="text-muted small">
                                    @Localizer["FullStackDeveloper"]
                                </div>
                            </li>
                        </ul>
                    </div>

                    <!-- ================= GRADUATION INFO ================= -->
                    <div class="mb-4">
                        <label class="form-label fw-semibold">
                            @Localizer["AcademicInformation"]
                        </label>
                        <p class="form-control-plaintext text-muted mb-1">
                            @Localizer["GraduationProject"]
                        </p>
                        <p class="form-control-plaintext text-muted mb-1">
                            <strong>@Localizer["Date"]:</strong> 07 / 02 / 2026
                        </p>
                        <p class="form-control-plaintext text-muted">
                            <strong>@Localizer["University"]:</strong>
                            Al Hussein Technical University
                        </p>
                    </div>

                    <!-- ================= CONTACT ================= -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold">
                            @Localizer["Contact"]
                        </label>
                        <p class="text-muted mb-1">
                            <i class="bi bi-envelope me-2"></i>
                            <a href="mailto:homeix.jo@gmail.com"
                               class="text-decoration-none">
                                homeix.jo@gmail.com
                            </a>
                        </p>
                        <p class="text-muted mb-0">
                            <i class="bi bi-geo-alt me-2"></i>
                            Amman, Jordan — HTU
                        </p>
                    </div>

                </div>

                <!-- FOOTER -->
                <div class="card-footer text-center text-muted small">
                    @Localizer["FooterText"]
                </div>

            </div>

        </div>
    </div>

</div>
