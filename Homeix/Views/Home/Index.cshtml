@{
    ViewData["Title"] = "Home";
    bool isAuth = User?.Identity?.IsAuthenticated ?? false;
}

<!-- ==========================================
   HERO (clear hierarchy, fewer elements)
========================================== -->
<section class="bg-dark text-white py-5">
    <div class="container">
        <div class="row align-items-center gy-4">
            <div class="col-lg-7">
                <div class="d-flex flex-wrap gap-2 mb-3">
                    <span class="badge text-bg-light text-dark">
                        <i class="bi bi-shield-check me-1"></i> Verified professionals
                    </span>
                    <span class="badge text-bg-light text-dark">
                        <i class="bi bi-lock-fill me-1"></i> Secure payments
                    </span>
                    <span class="badge text-bg-light text-dark">
                        <i class="bi bi-chat-dots-fill me-1"></i> In-app chat
                    </span>
                </div>

                <h1 class="display-5 fw-bold mb-3">Home services made simple.</h1>
                <p class="lead text-white-50 mb-4">
                    Post a job, connect with professionals, chat instantly, and track progress — all in one place.
                </p>

                <div class="d-flex flex-wrap gap-2">
                    @if (isAuth)
                    {
                        <a asp-controller="Account" asp-action="HomeRedirect" class="btn btn-accent btn-lg fw-bold">
                            Go to Dashboard
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Register" class="btn btn-accent btn-lg fw-bold">
                            Create Account
                        </a>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-light btn-lg">
                            Login
                        </a>
                    }

                    <a asp-controller="WorkerPosts" asp-action="Index" class="btn btn-outline-light btn-lg">
                        Browse Professionals
                    </a>
                </div>

                <div class="d-flex flex-wrap gap-3 mt-4 text-white-50 small">
                    <div class="d-flex align-items-center gap-2">
                        <i class="bi bi-check2-circle"></i> Quick matching
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <i class="bi bi-check2-circle"></i> One dashboard
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <i class="bi bi-check2-circle"></i> Organized history
                    </div>
                </div>
            </div>

            <div class="col-lg-5">
                <div class="card border-0 shadow-sm rounded-4">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center justify-content-between mb-3">
                            <h5 class="fw-bold mb-0">Get started in minutes</h5>
                            <span class="badge text-bg-success">Simple flow</span>
                        </div>

                        <div class="list-group list-group-flush mb-3">
                            <div class="list-group-item px-0 d-flex gap-3">
                                <i class="bi bi-clipboard-check fs-4 text-primary"></i>
                                <div>
                                    <div class="fw-semibold">Post your job</div>
                                    <div class="text-muted small">Describe what you need and when.</div>
                                </div>
                            </div>
                            <div class="list-group-item px-0 d-flex gap-3">
                                <i class="bi bi-chat-dots fs-4 text-primary"></i>
                                <div>
                                    <div class="fw-semibold">Chat & confirm</div>
                                    <div class="text-muted small">Agree on scope, timing, and price.</div>
                                </div>
                            </div>
                            <div class="list-group-item px-0 d-flex gap-3">
                                <i class="bi bi-graph-up-arrow fs-4 text-primary"></i>
                                <div>
                                    <div class="fw-semibold">Track progress</div>
                                    <div class="text-muted small">Updates + job history stay saved.</div>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-light border mb-0">
                            <div class="d-flex gap-2 align-items-start">
                                <i class="bi bi-info-circle"></i>
                                <div class="small">
                                    Tip: Use <strong>Messages</strong> to keep details documented inside Homeix.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- ==========================================
   CHOOSE YOUR PATH (separate section, clearer than tabs)
========================================== -->
<section class="py-5 bg-body-tertiary">
    <div class="container">
        <div class="text-center mb-4">
            <h2 class="fw-bold mb-2">Choose your path</h2>
            <p class="text-muted mb-0">Customer or Professional — both managed from one dashboard.</p>
        </div>

        <div class="row g-4">
            <div class="col-lg-6">
                <div class="card h-100 border-0 shadow-sm rounded-4">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center gap-2 mb-2">
                            <i class="bi bi-person fs-3 text-primary"></i>
                            <h5 class="fw-bold mb-0">For Customers</h5>
                        </div>
                        <p class="text-muted mb-3">Post work, talk to pros, and track everything in one place.</p>

                        <ol class="mb-4">
                            <li class="mb-2">Create a job post with details and timing</li>
                            <li class="mb-2">Chat to confirm scope and price</li>
                            <li>Track progress + keep job history</li>
                        </ol>

                        <div class="d-grid gap-2 d-sm-flex">
                            <a asp-controller="CustomerPosts" asp-action="Create" class="btn btn-primary">
                                Post a Job
                            </a>
                            <a asp-controller="Chat" asp-action="Index" class="btn btn-outline-secondary">
                                Open Messages
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="card h-100 border-0 shadow-sm rounded-4">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center gap-2 mb-2">
                            <i class="bi bi-person-badge fs-3 text-primary"></i>
                            <h5 class="fw-bold mb-0">For Professionals</h5>
                        </div>
                        <p class="text-muted mb-3">Get approved, publish services, and manage jobs with confidence.</p>

                        <ol class="mb-4">
                            <li class="mb-2">Apply & get approved</li>
                            <li class="mb-2">Create posts with services and pricing</li>
                            <li>Manage jobs and build trust</li>
                        </ol>

                        <div class="d-grid gap-2 d-sm-flex">
                            <a asp-controller="WorkerApprovals" asp-action="Index" class="btn btn-accent fw-bold">
                                Apply to Become a Professional
                            </a>
                            <a asp-controller="WorkerPosts" asp-action="Index" class="btn btn-outline-secondary">
                                Browse Worker Posts
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

