@{
    ViewData["Title"] = "Home";
}

<!-- ==========================================
   HERO SECTION
========================================== -->
<section class="hero-section py-5">
    <div class="container text-center">
        <h1 class="display-3 fw-bold hero-title">
            Welcome to Homeix
        </h1>

        <p class="lead mt-3 hero-subtitle">
            Discover how <strong>Homeix</strong> transforms your experience with
            modern dashboards, analytics, and community-driven support.
        </p>

        <a href="#features-section" class="btn btn-accent btn-lg mt-4 fw-bold">
            Explore Features
        </a>
    </div>
</section>



<!-- ==========================================
   FEATURES CARDS
========================================== -->
<section class="py-5 features-bg">
    <div class="container">
        <div class="row g-4 text-center">

            <!-- Card 1 -->
            <div class="col-md-4">
                <div class="card h-100 shadow feature-card">
                    <div class="feature-card-header fw-bold">
                        Modern Dashboard
                    </div>
                    <div class="card-body">
                        <p>
                            Manage all your tasks and activities in one intuitive dashboard.
                        </p>
                        <a href="#" class="btn btn-accent btn-lg fw-bold">Explore</a>
                    </div>
                </div>
            </div>

            <!-- Card 2 -->
            <div class="col-md-4">
                <div class="card h-100 shadow feature-card">
                    <div class="feature-card-header fw-bold">
                        Secure & Reliable
                    </div>
                    <div class="card-body">
                        <p>
                            Your data is protected with enterprise-grade encryption.
                        </p>
                        <a href="#" class="btn btn-accent btn-lg fw-bold">Learn More</a>
                    </div>
                </div>
            </div>

            <!-- Card 3 -->
            <div class="col-md-4">
                <div class="card h-100 shadow feature-card">
                    <div class="feature-card-header fw-bold">
                        Analytics & Insights
                    </div>
                    <div class="card-body">
                        <p>
                            Gain insights with interactive charts and real-time reports.
                        </p>
                        <a href="#" class="btn btn-accent btn-lg fw-bold">View Reports</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>



<!-- ==========================================
   WHY CHOOSE HOMEIX
========================================== -->
<section id="features-section" class="py-5 text-center features-section">
    <div class="container">
        <h2 class="fw-bold mb-5 features-title">
            Why Choose Homeix?
        </h2>

        <div class="row g-4">

            <!-- Feature 1 -->
            <div class="col-md-4">
                <i class="bi bi-speedometer2 fs-1 feature-icon"></i>
                <h5 class="fw-bold mt-3">Fast Performance</h5>
                <p>
                    Optimized for speed to give you the smoothest experience.
                </p>
            </div>

            <!-- Feature 2 -->
            <div class="col-md-4">
                <i class="bi bi-palette fs-1 feature-icon"></i>
                <h5 class="fw-bold mt-3">Customizable Themes</h5>
                <p>
                    Adjust colors and layouts to match your brand and style.
                </p>
            </div>

            <!-- Feature 3 -->
            <div class="col-md-4">
                <i class="bi bi-people fs-1 feature-icon"></i>
                <h5 class="fw-bold mt-3">Community & Support</h5>
                <p>
                    Connect with experts and get support anytime.
                </p>
            </div>

        </div>
    </div>
</section>



<!-- ==========================================
   CALL TO ACTION (CTA)
========================================== -->
<section class="py-5 text-center cta-section">
    <div class="container">
        <h2 class="fw-bold mb-4 cta-title">
            Enhance Your Workflow
        </h2>

        <p class="mb-4 cta-text">
            Homeix provides tools and insights to streamline your tasks,
            improve collaboration, and track progress in real-time.
        </p>

        <div class="d-flex justify-content-center flex-wrap gap-3">
            <a href="#" class="btn btn-accent btn-lg fw-bold">
                Get Started
            </a>

            <a href="#" class="btn btn-outline-light btn-lg">
                Learn More
            </a>
        </div>
    </div>
</section>
