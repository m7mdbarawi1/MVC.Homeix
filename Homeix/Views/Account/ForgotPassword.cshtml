@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["ForgotPassword"];
}

<div class="container-fluid page-wrapper mt-5 pt-4">

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title fw-bold">
                @Localizer["ForgotPassword"]
            </h1>
            <p class="text-muted mt-2">
                @Localizer["ForgotPasswordDescription"]
            </p>
        </div>
    </div>

    <!-- Centered Forgot Password Form -->
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body p-4">

                    <form method="post" asp-controller="Account" asp-action="ForgotPassword">
                        @Html.AntiForgeryToken()

                        <!-- Validation Summary -->
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label for="email" class="form-label fw-semibold">
                                @Localizer["Email"]
                            </label>
                            <input id="email"
                                   name="email"
                                   type="email"
                                   class="form-control"
                                   placeholder="@Localizer["EnterRegisteredEmail"]"
                                   required />
                        </div>

                        <!-- Success Message -->
                        @if (ViewBag.Success != null)
                        {
                            <div class="alert alert-success py-2">
                                <i class="bi bi-check-circle"></i> @ViewBag.Success
                            </div>
                        }

                        <!-- Error Message -->
                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger py-2">
                                <i class="bi bi-exclamation-circle"></i> @ViewBag.Error
                            </div>
                        }

                        <!-- Submit Button -->
                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary fw-semibold">
                                <i class="bi bi-envelope"></i>
                                @Localizer["SendResetLink"]
                            </button>
                        </div>

                        <!-- Back to Login -->
                        <p class="text-center mt-3 mb-0">
                            @Localizer["RememberPassword"]
                            <a asp-controller="Account"
                               asp-action="Login"
                               class="fw-semibold text-decoration-none">
                                @Localizer["BackToLogin"]
                            </a>
                        </p>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
