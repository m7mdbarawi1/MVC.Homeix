@model Homeix.Models.User

@{
    ViewData["Title"] = "Register";
}

<div class="container-fluid page-wrapper mt-5 pt-4">

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title fw-bold">Create Account</h1>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body p-4">

                    <form asp-action="Register" method="post">

                        @Html.AntiForgeryToken()

                        <!-- Validation Summary -->
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger py-2">
                                <i class="bi bi-exclamation-circle"></i> @ViewBag.Error
                            </div>
                        }

                        <!-- Full Name -->
                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label fw-semibold"></label>
                            <input asp-for="FullName" class="form-control"
                                   placeholder="Enter full name"
                                   pattern="^[A-Za-z .]+$"
                                   title="Only English letters, spaces, and periods are allowed." />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-semibold"></label>
                            <input asp-for="Email" type="email" class="form-control"
                                   placeholder="example@mail.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Phone Number -->
                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label fw-semibold"></label>
                            <input asp-for="PhoneNumber" class="form-control"
                                   placeholder="10-digit phone number"
                                   pattern="^\d{10}$"
                                   title="Phone number must be exactly 10 digits." />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <!-- Password (not part of model → name only) -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Password</label>
                            <input name="Password" type="password" class="form-control"
                                   minlength="8" required
                                   placeholder="Enter a secure password" />
                            <div class="form-text">Password must be at least 8 characters.</div>
                        </div>

                        <!-- Role Selection -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Role</label>
                            <select name="RoleId" class="form-select"
                                    asp-items="@(new SelectList(ViewBag.Roles, "RoleId", "RoleName"))">
                            </select>
                        </div>

                        <!-- Register Button -->
                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary fw-semibold">
                                <i class="bi bi-person-plus"></i> Register
                            </button>
                        </div>

                        <!-- Login Link -->
                        <p class="text-center mt-3 mb-0">
                            Already have an account?
                            <a asp-controller="Account" asp-action="Login" class="fw-semibold">Login here</a>.
                        </p>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener('DOMContentLoaded', () => {

            const nameInput = document.getElementById('FullName');
            const phoneInput = document.getElementById('PhoneNumber');

            const regexName = /[^A-Za-z .]/g;
            const regexDigits = /\D/g;

            if (nameInput) {
                nameInput.addEventListener('input', e => {
                    e.target.value = e.target.value.replace(regexName, '');
                });
            }

            if (phoneInput) {
                phoneInput.addEventListener('input', e => {
                    e.target.value = e.target.value.replace(regexDigits, '');
                });
            }

        });
    </script>
}
