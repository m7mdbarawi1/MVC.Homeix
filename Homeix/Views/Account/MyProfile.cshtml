@model Homeix.Models.User

@{
    ViewData["Title"] = "My Profile";
}

<div class="container-fluid page-wrapper mt-4">

    <!-- PAGE TITLE -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title">My Profile</h1>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body">

                    <!-- SUCCESS MESSAGE -->
                    @if (ViewBag.Success != null)
                    {
                        <div class="alert alert-success text-center mb-3">
                            @ViewBag.Success
                        </div>
                    }

                    <!-- PROFILE UPDATE FORM -->
                    <form asp-action="MyProfile" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                        <!-- Hidden Primary Keys -->
                        <input type="hidden" asp-for="UserId" />
                        <input type="hidden" asp-for="RoleId" />

                        <!-- Full Name -->
                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label"></label>
                            <input asp-for="FullName" class="form-control" maxlength="100" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" type="email" class="form-control" maxlength="100" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Phone Number -->
                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" maxlength="20" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <!-- Profile Picture Preview -->
                        <div class="text-center mb-3">
                            <img src="@(string.IsNullOrEmpty(Model.ProfilePicture)
                                    ? "~/images/default-user.png"
                                    : "~/uploads/profile/" + Model.ProfilePicture)"
                                 asp-append-version="true"
                                 class="img-thumbnail rounded-circle"
                                 style="width:120px;height:120px;object-fit:cover;" />
                        </div>

                        <!-- Upload New Profile Picture -->
                        <div class="mb-3">
                            <label class="form-label">Profile Picture (optional)</label>
                            <input type="file" name="ProfileImage" class="form-control" accept="image/*" />
                            <div class="form-text">Upload a new photo to replace the current one.</div>
                        </div>

                        <!-- New Password -->
                        <div class="mb-3">
                            <label class="form-label">New Password (optional)</label>
                            <input name="NewPassword" type="password" class="form-control" minlength="8" />
                            <div class="form-text">Leave blank to keep your current password.</div>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-check-circle"></i> Update Profile
                            </button>
                        </div>
                    </form>

                    <!-- Delete Account -->
                    <form asp-action="DeleteMyAccount" method="post"
                          onsubmit="return confirm('Are you sure you want to delete your account?');"
                          class="mt-3">
                        @Html.AntiForgeryToken()

                        <button type="submit" class="btn btn-danger w-100">
                            <i class="bi bi-trash"></i> Delete Account
                        </button>
                    </form>

                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Optional: clean phone number input
        document.addEventListener('DOMContentLoaded', () => {
            const phone = document.getElementById('PhoneNumber');

            if (phone) {
                phone.addEventListener('input', e => {
                    e.target.value = e.target.value.replace(/[^0-9+]/g, '');
                });
            }
        });
    </script>
}
