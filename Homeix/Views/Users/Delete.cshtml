@model Homeix.Models.User

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["DeleteUserTitle"];

    // ProfilePicture already stores "/uploads/profile/filename.jpg"
    var profileImage = string.IsNullOrWhiteSpace(Model.ProfilePicture)
        ? Url.Content("~/images/default-user.png")
        : Url.Content(Model.ProfilePicture);
}

<div class="container mt-4 mb-5">

    <!-- ================= HEADER ================= -->
    <div class="text-center mb-4">
        <h1 class="fw-bold text-danger">
            @Localizer["DeleteUserTitle"]
        </h1>
        <p class="text-muted">
            @Localizer["DeleteUserSubtitle"]
        </p>
    </div>

    <!-- ================= PROFILE IMAGE ================= -->
    <div class="card shadow-sm mb-4 overflow-hidden border-danger">
        <img src="@profileImage"
             class="d-block w-100 img-fluid bg-light"
             style="max-height:420px; object-fit:contain;"
             alt="@Model.FullName" />
    </div>

    <!-- ================= DETAILS CARD ================= -->
    <div class="card shadow-sm border-danger">
        <div class="card-body">

            <!-- NAME -->
            <h4 class="fw-bold mb-1">
                @Model.FullName
            </h4>

            <!-- META -->
            <div class="text-muted small d-flex align-items-center flex-wrap gap-3 mb-3">

                @if (!string.IsNullOrWhiteSpace(Model.Role?.RoleName))
                {
                    <span class="badge bg-primary">
                        <i class="bi bi-person-badge"></i>
                        @Model.Role.RoleName
                    </span>
                }

                <span class="d-flex align-items-center gap-1">
                    <i class="bi bi-envelope"></i>
                    @Model.Email
                </span>

                <span class="d-flex align-items-center gap-1">
                    <i class="bi bi-telephone"></i>
                    @Model.PhoneNumber
                </span>

            </div>

            <hr />

            <!-- WARNING -->
            <div class="alert alert-danger mb-0">
                <i class="bi bi-exclamation-triangle-fill me-1"></i>
                @Localizer["DeleteWarning"]
            </div>

        </div>

        <!-- ================= ACTIONS ================= -->
        <div class="card-footer d-flex justify-content-between flex-wrap gap-2">

            <button type="button"
                    class="btn btn-secondary btn-sm"
                    onclick="history.back()">
                <i class="bi bi-arrow-left"></i>
                @Localizer["Back"]
            </button>

            <form asp-action="Delete"
                  method="post"
                  class="d-inline">
                <input type="hidden" asp-for="UserId" />
                <button type="submit"
                        class="btn btn-danger btn-sm">
                    <i class="bi bi-trash"></i>
                    @Localizer["ConfirmDelete"]
                </button>
            </form>

        </div>
    </div>

</div>
