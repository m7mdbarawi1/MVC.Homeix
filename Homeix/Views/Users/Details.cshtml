@model Homeix.Models.User

@{
    ViewData["Title"] = "User Details";

    // IMPORTANT:
    // ProfilePicture already stores "/uploads/profile/filename.jpg"
    var profileImage = string.IsNullOrWhiteSpace(Model.ProfilePicture)
        ? Url.Content("~/images/default-user.png")
        : Url.Content(Model.ProfilePicture);
}

<div class="container mt-4 mb-5">

    <!-- ================= IMAGE SECTION ================= -->
    <div class="card shadow-sm mb-4 overflow-hidden">

        <img src="@profileImage"
             class="d-block w-100 img-fluid bg-light"
             style="max-height:420px; object-fit:contain;"
             alt="@Model.FullName" />

    </div>

    <!-- ================= DETAILS SECTION ================= -->
    <div class="card shadow-sm">
        <div class="card-body">

            <!-- NAME -->
            <h3 class="fw-bold mb-1">@Model.FullName</h3>

            <!-- META LINE -->
            <div class="text-muted small d-flex align-items-center flex-wrap gap-3 mb-3">

                @if (!string.IsNullOrWhiteSpace(Model.Role?.RoleName))
                {
                    <span class="badge bg-primary">
                        <i class="bi bi-person-badge"></i> @Model.Role.RoleName
                    </span>
                }

                <span class="d-flex align-items-center gap-1">
                    <i class="bi bi-envelope"></i> @Model.Email
                </span>

                <span class="d-flex align-items-center gap-1">
                    <i class="bi bi-telephone"></i> @Model.PhoneNumber
                </span>

            </div>

            <hr />

            <!-- PROFILE SUMMARY -->
            <div class="mb-3">
                <div class="text-muted small">User Information</div>

                <div class="mt-2">
                    <div class="d-flex align-items-center gap-3">

                        <img src="@profileImage"
                             class="rounded-circle flex-shrink-0"
                             width="48"
                             height="48"
                             alt="@Model.FullName"
                             style="object-fit:cover;" />

                        <div>
                            <div class="fw-semibold">@Model.FullName</div>
                            <div class="text-muted small">@Model.Role?.RoleName</div>
                        </div>

                    </div>
                </div>
            </div>

            <hr />

            <!-- CONTACT DETAILS -->
            <div class="fw-bold mb-2">Contact Details</div>

            <p class="text-muted mb-1">
                <i class="bi bi-envelope me-2"></i>
                @Model.Email
            </p>

            <p class="text-muted mb-0">
                <i class="bi bi-telephone me-2"></i>
                @Model.PhoneNumber
            </p>

        </div>

        <!-- ================= ACTIONS ================= -->
        <div class="card-footer d-flex justify-content-between flex-wrap gap-2">

            <button type="button"
                    class="btn btn-secondary btn-sm"
                    onclick="history.back()">
                <i class="bi bi-arrow-left"></i> Back
            </button>

            <div class="d-flex gap-2">

                <a asp-action="Edit"
                   asp-route-id="@Model.UserId"
                   class="btn btn-primary btn-sm">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>

                <a asp-action="Delete"
                   asp-route-id="@Model.UserId"
                   class="btn btn-danger btn-sm">
                    <i class="bi bi-trash"></i> Delete
                </a>

            </div>

        </div>
    </div>

</div>
