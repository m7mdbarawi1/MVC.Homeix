@model IEnumerable<Homeix.Models.CustomerPost>


@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["CustomerRequests"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/customerposts/index.css" />

<div class="container page-wrapper mt-4">

    <!-- ================= HEADER ================= -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="page-title mb-0">@Localizer["CustomerRequests"]</h1>
        <span id="resultCount" class="fw-bold text-secondary"></span>
    </div>

    <!-- ================= FILTERS ================= -->
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <div class="row g-2">

                <div class="col-md-4">
                    <input id="searchInput"
                           class="form-control"
                           placeholder="@Localizer["SearchPlaceholder"]" />
                </div>

                <div class="col-md-3">
                    <select id="categoryFilter" class="form-select">
                        <option value="">@Localizer["AllCategories"]</option>
                        @foreach (var cat in Model
                        .Select(p => p.PostCategory?.CategoryName)
                        .Where(c => !string.IsNullOrWhiteSpace(c))
                        .Distinct())
                        {
                            <option value="@cat">@cat</option>
                        }
                    </select>
                </div>

                <div class="col-md-2">
                    <input id="minPrice" type="number"
                           class="form-control"
                           placeholder="@Localizer["MinPrice"]" />
                </div>

                <div class="col-md-2">
                    <input id="maxPrice" type="number"
                           class="form-control"
                           placeholder="@Localizer["MaxPrice"]" />
                </div>

            </div>
        </div>
    </div>

    <!-- ================= POSTS GRID ================= -->
    <div class="row" id="postsGrid">

        @foreach (var post in Model)
        {
            <div class="col-md-4 col-lg-3 mb-4 post-card-wrapper">
                <a asp-controller="CustomerPosts"
                   asp-action="Details"
                   asp-route-id="@post.CustomerPostId"
                   class="card-link-wrapper text-decoration-none text-dark">

                    <div class="card h-100 shadow-sm post-card"
                         data-title="@post.Title.ToLower()"
                         data-description="@post.Description.ToLower()"
                         data-category="@post.PostCategory?.CategoryName"
                         data-minprice="@post.PriceRangeMin"
                         data-maxprice="@post.PriceRangeMax">

                        <div class="card-body d-flex flex-column">

                            <h5 class="fw-bold mb-2">@post.Title</h5>

                            <p class="text-muted small text-truncate">
                                @post.Description
                            </p>

                            <p class="mb-1">
                                <strong>@Localizer["Location"]:</strong>
                                @post.Location
                            </p>

                            <p class="mb-1">
                                <strong>@Localizer["Category"]:</strong>
                                @post.PostCategory?.CategoryName
                            </p>

                            <p class="fw-bold text-primary mb-2">
                                💰 @post.PriceRangeMin JD – @post.PriceRangeMax JD
                            </p>

                            <p class="small text-muted mb-2">
                                🕒 @post.CreatedAt.ToString("dd MMM yyyy")
                            </p>

                            <div class="mt-auto">
                                <span class="badge bg-info">
                                    @post.Status
                                </span>
                            </div>

                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {

            const search = document.getElementById("searchInput");
            const category = document.getElementById("categoryFilter");
            const minPrice = document.getElementById("minPrice");
            const maxPrice = document.getElementById("maxPrice");
            const cards = document.querySelectorAll(".post-card");
            const resultCount = document.getElementById("resultCount");

            function filter() {
                let visible = 0;

                cards.forEach(card => {
                    const title = card.dataset.title || "";
                    const desc = card.dataset.description || "";
                    const cat = card.dataset.category || "";
                    const min = parseFloat(card.dataset.minprice) || 0;
                    const max = parseFloat(card.dataset.maxprice) || Infinity;

                    const show =
                        (title.includes(search.value.toLowerCase()) ||
                         desc.includes(search.value.toLowerCase())) &&
                        (category.value === "" || cat === category.value) &&
                        min >= (parseFloat(minPrice.value) || 0) &&
                        max <= (parseFloat(maxPrice.value) || Infinity);

                    card.closest(".post-card-wrapper").style.display = show ? "" : "none";
                    if (show) visible++;
                });

                resultCount.textContent = visible + " @Localizer["RequestsFound"]";
            }

            search.oninput =
                category.onchange =
                minPrice.oninput =
                maxPrice.oninput = filter;

            filter();
        });
    </script>
}
