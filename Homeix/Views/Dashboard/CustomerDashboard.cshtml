@model IEnumerable<Homeix.Models.WorkerPost>

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["BrowseServices"];

    // Favorites passed from controller
    var favoriteIds = ViewBag.FavoritePostIds as List<int> ?? new List<int>();
}

<link rel="stylesheet" href="~/css/workerposts/index.css" />

<div class="container page-wrapper mt-4">

    <!-- ================= HEADER ================= -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="page-title">@Localizer["BrowseServices"]</h1>
        <span id="resultCount" class="fw-bold text-secondary"></span>
    </div>

    <!-- ================= FILTERS ================= -->
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <div class="row g-2">

                <div class="col-md-3">
                    <input id="searchInput"
                           class="form-control"
                           placeholder="@Localizer["SearchPlaceholder"]" />
                </div>

                <div class="col-md-3">
                    <select id="categoryFilter" class="form-select">
                        <option value="">@Localizer["AllCategories"]</option>
                        @foreach (var cat in Model
                        .Select(p => p.PostCategory?.CategoryName)
                        .Where(c => !string.IsNullOrWhiteSpace(c))
                        .Distinct())
                        {
                            <option value="@cat">@cat</option>
                        }
                    </select>
                </div>

                <div class="col-md-2">
                    <input id="minPrice"
                           type="number"
                           class="form-control"
                           placeholder="@Localizer["MinPrice"]" />
                </div>

                <div class="col-md-2">
                    <input id="maxPrice"
                           type="number"
                           class="form-control"
                           placeholder="@Localizer["MaxPrice"]" />
                </div>

                <div class="col-md-2">
                    <select id="ratingFilter" class="form-select">
                        <option value="">@Localizer["AllRatings"]</option>
                        <option value="1">⭐ 1+</option>
                        <option value="2">⭐ 2+</option>
                        <option value="3">⭐ 3+</option>
                        <option value="4">⭐ 4+</option>
                        <option value="5">⭐ 5</option>
                    </select>
                </div>

                <!-- ❤️ FAVORITES TOGGLE -->
                <div class="col-md-2 d-grid">
                    <button id="favoriteToggle"
                            class="btn btn-outline-danger">
                        ❤️ My Favorites
                    </button>
                </div>

            </div>
        </div>
    </div>

    <!-- ================= POSTS GRID ================= -->
    <div class="row" id="postsGrid">

        @foreach (var post in Model)
        {
            var media = post.PostMedia?
            .OrderByDescending(m => m.UploadedAt)
            .FirstOrDefault();

            var imageUrl = !string.IsNullOrWhiteSpace(media?.MediaPath)
            ? media.MediaPath.Replace("\\", "/")
            : "/images/no-image.png";

            var ratings = post.User?.RatingRatedUsers
            ?? Enumerable.Empty<Homeix.Models.Rating>();

            var avgRating = ratings.Any()
            ? ratings.Average(r => r.RatingValue)
            : 0;

            var isFavorite = favoriteIds.Contains(post.WorkerPostId);

            <div class="col-md-3 mb-4 post-card-wrapper">

                <div class="card h-100 shadow-sm post-card"
                     data-title="@post.Title.ToLower()"
                     data-category="@post.PostCategory?.CategoryName"
                     data-price="@post.PriceRangeMin"
                     data-rating="@avgRating"
                     data-favorite="@isFavorite.ToString().ToLower()">

                    <!-- ❤️ FAVORITE BUTTON -->
                    <div class="position-absolute top-0 end-0 p-2">
                        @if (isFavorite)
                        {
                            <form asp-controller="FavoritePosts"
                                  asp-action="RemoveWorkerPost"
                                  method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="postId" value="@post.WorkerPostId" />
                                <button class="btn btn-sm btn-danger rounded-circle"
                                        title="Remove from favorites">
                                    ❤️
                                </button>
                            </form>
                        }
                        else
                        {
                            <form asp-controller="FavoritePosts"
                                  asp-action="AddWorkerPost"
                                  method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="postId" value="@post.WorkerPostId" />
                                <button class="btn btn-sm btn-outline-danger rounded-circle"
                                        title="Add to favorites">
                                    🤍
                                </button>
                            </form>
                        }
                    </div>

                    <!-- CLICKABLE CONTENT -->
                    <a asp-controller="WorkerPosts"
                       asp-action="Details"
                       asp-route-id="@post.WorkerPostId"
                       class="text-decoration-none text-dark">

                        <img src="@imageUrl" class="card-img-top" />

                        <div class="card-body d-flex flex-column">

                            <h5 class="fw-bold">@post.Title</h5>

                            <p class="text-muted small text-truncate">
                                @post.Description
                            </p>

                            <p>
                                <strong>@Localizer["Worker"]:</strong>
                                @post.User?.FullName
                            </p>

                            <p>
                                <strong>@Localizer["Category"]:</strong>
                                @post.PostCategory?.CategoryName
                            </p>

                            <p class="fw-bold text-primary">
                                💰 @post.PriceRangeMin JD – @post.PriceRangeMax JD
                            </p>

                            <div class="small text-muted mb-2">
                                ⭐ @avgRating.ToString("0.0") / 5
                                (@ratings.Count())
                            </div>

                            <span class="badge bg-success mt-auto">
                                @Localizer["Available"]
                            </span>

                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {

            const search = document.getElementById("searchInput");
            const category = document.getElementById("categoryFilter");
            const minPrice = document.getElementById("minPrice");
            const maxPrice = document.getElementById("maxPrice");
            const rating = document.getElementById("ratingFilter");
            const favoriteBtn = document.getElementById("favoriteToggle");

            const cards = document.querySelectorAll(".post-card");
            const resultCount = document.getElementById("resultCount");

            let showFavoritesOnly = false;

            function filter() {
                let visible = 0;

                cards.forEach(card => {
                    const title = card.dataset.title || "";
                    const cat = card.dataset.category || "";
                    const price = parseFloat(card.dataset.price) || 0;
                    const rate = parseFloat(card.dataset.rating) || 0;
                    const isFavorite = card.dataset.favorite === "true";

                    const show =
                        title.includes(search.value.toLowerCase()) &&
                        (category.value === "" || cat === category.value) &&
                        price >= (parseFloat(minPrice.value) || 0) &&
                        price <= (parseFloat(maxPrice.value) || Infinity) &&
                        rate >= (parseFloat(rating.value) || 0) &&
                        (!showFavoritesOnly || isFavorite);

                    card.closest(".post-card-wrapper").style.display = show ? "" : "none";
                    if (show) visible++;
                });

                resultCount.textContent = visible + " services found";
            }

            favoriteBtn.addEventListener("click", function () {
                showFavoritesOnly = !showFavoritesOnly;

                favoriteBtn.classList.toggle("btn-danger", showFavoritesOnly);
                favoriteBtn.classList.toggle("btn-outline-danger", !showFavoritesOnly);

                favoriteBtn.textContent = showFavoritesOnly
                    ? "❤️ Showing Favorites"
                    : "❤️ My Favorites";

                filter();
            });

            search.oninput =
            category.onchange =
            minPrice.oninput =
            maxPrice.oninput =
            rating.onchange = filter;

            filter();
        });
    </script>
}
