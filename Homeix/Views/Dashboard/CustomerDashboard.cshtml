@model IEnumerable<Homeix.Models.WorkerPost>

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["BrowseServices"];

    var favoriteIds = ViewBag.FavoritePostIds as List<int> ?? new List<int>();
    var returnUrl = (Context.Request.Path + Context.Request.QueryString).ToString();
}

<link rel="stylesheet" href="~/css/workerposts/index.css" />

<div class="container page-wrapper mt-4">

    <!-- ================= PAGE HEADER ================= -->
    <div class="d-flex align-items-center justify-content-between mb-4 flex-wrap gap-3">

        <h1 class="page-title mb-0">
            @Localizer["BrowseServices"]
        </h1>

        <a asp-controller="CustomerPosts"
           asp-action="Create"
           class="btn btn-primary d-inline-flex align-items-center gap-2">
            <i class="bi bi-plus-circle"></i>
            <span>@Localizer["CreateNewPost"]</span>
        </a>

    </div>

    <span id="resultCount"
          class="fw-semibold text-secondary d-block mb-3"></span>

    <!-- ================= FILTERS ================= -->
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <div class="row g-2 align-items-end row-cols-1 row-cols-md-2 row-cols-lg-6">

                <div class="col">
                    <input id="searchInput"
                           class="form-control"
                           placeholder="@Localizer["SearchPlaceholder"]" />
                </div>

                <div class="col">
                    <select id="categoryFilter" class="form-select">
                        <option value="">@Localizer["AllCategories"]</option>
                        @foreach (var cat in Model
                        .Select(p => p.PostCategory?.CategoryName)
                        .Where(c => !string.IsNullOrWhiteSpace(c))
                        .Distinct())
                        {
                            <option value="@cat">@cat</option>
                        }
                    </select>
                </div>

                <div class="col">
                    <input id="minPrice"
                           type="number"
                           class="form-control"
                           placeholder="@Localizer["MinPrice"]" />
                </div>

                <div class="col">
                    <input id="maxPrice"
                           type="number"
                           class="form-control"
                           placeholder="@Localizer["MaxPrice"]" />
                </div>

                <div class="col">
                    <select id="ratingFilter" class="form-select">
                        <option value="">@Localizer["AllRatings"]</option>
                        <option value="1">⭐ 1+</option>
                        <option value="2">⭐ 2+</option>
                        <option value="3">⭐ 3+</option>
                        <option value="4">⭐ 4+</option>
                        <option value="5">⭐ 5</option>
                    </select>
                </div>

                <div class="col d-grid">
                    <button id="favoriteToggle"
                            class="btn btn-outline-danger text-nowrap">
                        ❤️ @Localizer["MyFavorites"]
                    </button>
                </div>

            </div>
        </div>
    </div>

    <!-- ================= POSTS GRID ================= -->
    <div class="row" id="postsGrid">

        @foreach (var post in Model)
        {
            // ✅ FIX: WorkerPostMedia has NO UploadedAt
            var media = post.Media?.FirstOrDefault();

            var imageUrl = !string.IsNullOrWhiteSpace(media?.MediaPath)
            ? media.MediaPath.Replace("\\", "/")
            : "/images/no-image.png";

            var ratings = post.User?.RatingRatedUsers
            ?? Enumerable.Empty<Homeix.Models.Rating>();

            var avgRating = ratings.Any()
            ? ratings.Average(r => r.RatingValue)
            : 0;

            var isFavorite = favoriteIds.Contains(post.WorkerPostId);

            <div class="col-md-4 col-lg-3 mb-4 post-card-wrapper">

                <div class="card h-100 shadow-sm post-card position-relative"
                     data-title="@post.Title.ToLowerInvariant()"
                     data-category="@post.PostCategory?.CategoryName"
                     data-price="@post.PriceRangeMin"
                     data-rating="@avgRating"
                     data-favorite="@isFavorite.ToString().ToLowerInvariant()">

                    <!-- ❤️ FAVORITE BUTTON -->
                    <div class="position-absolute top-0 end-0 p-2 z-1">
                        @if (isFavorite)
                        {
                            <form asp-controller="FavoriteWorkerPosts"
                                  asp-action="Remove"
                                  method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden"
                                       name="postId"
                                       value="@post.WorkerPostId" />
                                <button type="submit"
                                        class="btn btn-sm btn-danger rounded-circle">
                                    ❤️
                                </button>
                            </form>
                        }
                        else
                        {
                            <form asp-controller="FavoriteWorkerPosts"
                                  asp-action="Add"
                                  method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden"
                                       name="postId"
                                       value="@post.WorkerPostId" />
                                <button type="submit"
                                        class="btn btn-sm btn-outline-danger rounded-circle">
                                    🤍
                                </button>
                            </form>
                        }
                    </div>

                    <!-- CLICKABLE CONTENT -->
                    <a asp-controller="WorkerPosts"
                       asp-action="Details"
                       asp-route-id="@post.WorkerPostId"
                       asp-route-returnUrl="@returnUrl"
                       class="text-decoration-none text-reset">

                        <img src="@imageUrl"
                             class="card-img-top"
                             style="height:180px; object-fit:cover;" />

                        <div class="card-body d-flex flex-column">

                            <h5 class="fw-bold mb-1">
                                @post.Title
                            </h5>

                            <p class="text-muted small text-truncate mb-2">
                                @post.Description
                            </p>

                            <p class="mb-1 small">
                                <strong>@Localizer["Worker"]:</strong>
                                @post.User?.FullName
                            </p>

                            <p class="mb-1 small">
                                <strong>@Localizer["Category"]:</strong>
                                @post.PostCategory?.CategoryName
                            </p>

                            <p class="fw-bold text-primary mb-1">
                                💰 @post.PriceRangeMin JD – @post.PriceRangeMax JD
                            </p>

                            <div class="small text-muted mb-2">
                                ⭐ @avgRating.ToString("0.0") / 5 (@ratings.Count())
                            </div>

                            <span class="badge bg-success mt-auto align-self-start">
                                @Localizer["Available"]
                            </span>

                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {

            const search = document.getElementById("searchInput");
            const category = document.getElementById("categoryFilter");
            const minPrice = document.getElementById("minPrice");
            const maxPrice = document.getElementById("maxPrice");
            const rating = document.getElementById("ratingFilter");
            const favoriteBtn = document.getElementById("favoriteToggle");

            const cards = document.querySelectorAll(".post-card");
            const resultCount = document.getElementById("resultCount");

            let showFavoritesOnly = false;

            function filter() {
                let visible = 0;

                cards.forEach(card => {
                    const title = card.dataset.title || "";
                    const cat = card.dataset.category || "";
                    const price = parseFloat(card.dataset.price) || 0;
                    const rate = parseFloat(card.dataset.rating) || 0;
                    const isFavorite = card.dataset.favorite === "true";

                    const show =
                        title.includes(search.value.toLowerCase()) &&
                        (category.value === "" || cat === category.value) &&
                        price >= (parseFloat(minPrice.value) || 0) &&
                        price <= (parseFloat(maxPrice.value) || Infinity) &&
                        rate >= (parseFloat(rating.value) || 0) &&
                        (!showFavoritesOnly || isFavorite);

                    card.closest(".post-card-wrapper").style.display = show ? "" : "none";
                    if (show) visible++;
                });

                resultCount.textContent =
                    visible + " " + "@Localizer["ServicesFound"]";
            }

            favoriteBtn.addEventListener("click", () => {
                showFavoritesOnly = !showFavoritesOnly;

                favoriteBtn.classList.toggle("btn-danger", showFavoritesOnly);
                favoriteBtn.classList.toggle("btn-outline-danger", !showFavoritesOnly);

                favoriteBtn.innerHTML = showFavoritesOnly
                    ? "❤️ " + "@Localizer["ShowingFavorites"]"
                    : "❤️ " + "@Localizer["MyFavorites"]";

                filter();
            });

            search.addEventListener("input", filter);
            category.addEventListener("change", filter);
            minPrice.addEventListener("input", filter);
            maxPrice.addEventListener("input", filter);
            rating.addEventListener("change", filter);

            filter();
        });
    </script>
}
