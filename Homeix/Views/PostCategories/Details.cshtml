@model Homeix.Models.PostCategory

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PostCategoryDetailsTitle"];
}

<div class="container-fluid mt-4">

    <!-- ================= PAGE HEADER ================= -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title fw-bold">
                @Localizer["PostCategoryDetailsTitle"]
            </h1>
        </div>
    </div>

    <!-- ================= DETAILS CARD ================= -->
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">

            <div class="card shadow-sm">

                <!-- CARD HEADER -->
                <div class="card-header">
                    <h5 class="mb-0">
                        @Localizer["Details"]
                    </h5>
                </div>

                <!-- CARD BODY -->
                <div class="card-body">
                    <dl class="row mb-0">

                        <dt class="col-sm-4 fw-semibold">
                            @Localizer["CategoryNameLabel"]
                        </dt>

                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.CategoryName)
                        </dd>

                    </dl>
                </div>

                <!-- ================= ACTIONS ================= -->
                <div class="card-footer d-flex justify-content-end">
                    <button type="button"
                            class="btn btn-secondary btn-sm"
                            onclick="history.back()">
                        <i class="bi bi-arrow-left"></i>
                        @Localizer["BackButton"]
                    </button>
                </div>

            </div>

        </div>
    </div>

</div>
