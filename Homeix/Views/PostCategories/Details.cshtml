@model Homeix.Models.PostCategory

@{
    ViewData["Title"] = "Post Category Details";
}

<div class="container-fluid mt-4">

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="fw-bold">Post Category Details</h1>
        </div>
    </div>

    <!-- Centered Card -->
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">

            <div class="card shadow-sm">

                <!-- Card Header -->
                <div class="card-header">
                    <h5 class="mb-0">Details</h5>
                </div>

                <!-- Card Body -->
                <div class="card-body">
                    <dl class="row mb-0">

                        <dt class="col-sm-4 fw-bold">
                            @Html.DisplayNameFor(model => model.CategoryName)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.CategoryName)
                        </dd>

                    </dl>
                </div>

                <!-- Card Footer -->
                <div class="card-footer d-flex justify-content-end gap-2">
                    <a asp-action="Edit" asp-route-id="@Model?.PostCategoryId" class="btn btn-secondary">
                        Edit
                    </a>
                    <a asp-action="Index" class="btn btn-primary">
                        Back to List
                    </a>
                </div>

            </div>

        </div>
    </div>
</div>
