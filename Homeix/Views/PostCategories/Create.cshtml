@model Homeix.Models.PostCategory

@{
    ViewData["Title"] = "Create Post Category";
}

<div class="container-fluid mt-4">

    <!-- ================= PAGE HEADER ================= -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title fw-bold">
                Create Post Category
            </h1>
            <p class="text-muted mb-0">
                Add a new category to organize posts.
            </p>
        </div>
    </div>

    <!-- ================= FORM CARD ================= -->
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">

            <div class="card shadow-sm">
                <div class="card-body">

                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly"
                             class="text-danger mb-3"></div>

                        <!-- CATEGORY NAME -->
                        <div class="mb-3">
                            <label asp-for="CategoryName"
                                   class="form-label fw-semibold"></label>

                            <input asp-for="CategoryName"
                                   class="form-control"
                                   placeholder="Enter category name..." />

                            <span asp-validation-for="CategoryName"
                                  class="text-danger"></span>
                        </div>

                        <!-- ================= ACTIONS ================= -->
                        <div class="d-flex justify-content-end gap-2 mt-4">

                            <button type="submit"
                                    class="btn btn-primary btn-sm">
                                <i class="bi bi-check-circle"></i> Create
                            </button>

                            <button type="button"
                                    class="btn btn-secondary btn-sm"
                                    onclick="history.back()">
                                <i class="bi bi-arrow-left"></i> Back
                            </button>

                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
