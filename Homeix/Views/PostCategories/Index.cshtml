@model IEnumerable<Homeix.Models.PostCategory>

@{
    ViewData["Title"] = "Post Categories Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 mb-5">

    <!-- ================= HEADER ================= -->
    <div class="text-center mb-5">
        <h1 class="fw-bold mb-2">
            <i class="bi bi-tags me-2"></i> Post Categories Management
        </h1>
        <p class="text-muted">
            Organize and manage content categories for better content discovery and organization.
        </p>
    </div>

    <!-- ================= ACTIONS BAR ================= -->
    <div class="card bg-light border-0 shadow-sm mb-4">
        <div class="card-body p-3">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <span class="badge bg-primary rounded-pill p-2">
                        <i class="bi bi-diagram-3 me-1"></i> Total Categories: @Model.Count()
                    </span>
                    <span class="ms-3 text-muted">
                        <i class="bi bi-info-circle me-1"></i> Create and manage content classification
                    </span>
                </div>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>Add New Category
                </a>
            </div>
        </div>
    </div>

    <!-- ================= CATEGORIES TABLE ================= -->
    <div class="card border-0 shadow-lg">
        <div class="card-header bg-primary text-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="bi bi-table me-2"></i>Content Categories
                </h5>
                <div class="dropdown">
                    <button class="btn btn-light btn-sm dropdown-toggle" type="button" id="sortDropdown" data-bs-toggle="dropdown">
                        <i class="bi bi-sort-alpha-down me-1"></i>Sort
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">A to Z</a></li>
                        <li><a class="dropdown-item" href="#">Z to A</a></li>
                        <li><a class="dropdown-item" href="#">Newest First</a></li>
                        <li><a class="dropdown-item" href="#">Oldest First</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4 py-3">
                                <i class="bi bi-tag me-1"></i>
                                @Html.DisplayNameFor(model => model.CategoryName)
                            </th>
                            <th class="py-3">
                                <i class="bi bi-hash me-1"></i>
                                Category ID
                            </th>
                            <th class="py-3">
                                <i class="bi bi-palette me-1"></i>
                                Category Color
                            </th>
                            <th class="pe-4 py-3 text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="border-top">
                                <td class="ps-4 py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            @{
                                                var categoryIcon = item.CategoryName switch
                                                {
                                                    string s when s.Contains("Plumbing", StringComparison.OrdinalIgnoreCase) => "droplet",
                                                    string s when s.Contains("Electrical", StringComparison.OrdinalIgnoreCase) => "lightning",
                                                    string s when s.Contains("Cleaning", StringComparison.OrdinalIgnoreCase) => "broom",
                                                    string s when s.Contains("Gardening", StringComparison.OrdinalIgnoreCase) => "flower1",
                                                    string s when s.Contains("Moving", StringComparison.OrdinalIgnoreCase) => "truck",
                                                    string s when s.Contains("Repair", StringComparison.OrdinalIgnoreCase) => "tools",
                                                    string s when s.Contains("Installation", StringComparison.OrdinalIgnoreCase) => "wrench",
                                                    string s when s.Contains("Painting", StringComparison.OrdinalIgnoreCase) => "brush",
                                                    string s when s.Contains("Carpentry", StringComparison.OrdinalIgnoreCase) => "hammer",
                                                    string s when s.Contains("General", StringComparison.OrdinalIgnoreCase) => "briefcase",
                                                    _ => "folder"
                                                };

                                                var categoryColor = GetCategoryColor(item.CategoryName);
                                            }
                                            <div class="@categoryColor.Replace("text-", "bg-") bg-opacity-10 rounded-circle p-2">
                                                <i class="bi bi-@categoryIcon @categoryColor"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="fw-bold mb-0">@Html.DisplayFor(modelItem => item.CategoryName)</h6>
                                            <small class="text-muted">
                                                @GetCategoryDescription(item.CategoryName)
                                            </small>
                                        </div>
                                    </div>
                                </td>
                                <td class="py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            <div class="bg-secondary bg-opacity-10 rounded-circle p-2">
                                                <i class="bi bi-123 text-secondary"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="fw-bold mb-0">#@item.PostCategoryId</h6>
                                            <small class="text-muted">Unique Identifier</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            <div class="@categoryColor.Replace("text-", "bg-") bg-opacity-25 rounded-circle p-2 me-3">
                                                <i class="bi bi-circle-fill @categoryColor"></i>
                                            </div>
                                        </div>
                                        <div>
                                            <div class="fw-semibold">@GetColorName(categoryColor)</div>
                                            <small class="text-muted">Theme Color</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="pe-4 py-3 text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.PostCategoryId" class="btn btn-outline-primary btn-sm" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.PostCategoryId" class="btn btn-outline-info btn-sm" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.PostCategoryId" class="btn btn-outline-danger btn-sm" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                    <div class="mt-2">
                                        <span class="badge @categoryColor.Replace("text-", "bg-") bg-opacity-10 border border-@categoryColor.Replace("text-", "") border-opacity-25 rounded-pill px-2 py-1">
                                            <i class="bi bi-tag me-1"></i>Category
                                        </span>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card-footer bg-light py-3">
            <div class="d-flex justify-content-between align-items-center">
                <div class="text-muted small">
                    <i class="bi bi-layers me-1"></i>
                    @Model.Count() categories organized across @GetUniqueColorCount() color themes
                </div>
                <nav aria-label="Table navigation">
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">Next</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>

    <!-- ================= QUICK STATS ================= -->
    @if (Model.Any())
    {
        <div class="row g-4 mt-4">
            <div class="col-lg-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Total Categories</h6>
                                <h3 class="fw-bold">@Model.Count()</h3>
                            </div>
                            <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                                <i class="bi bi-tags text-primary fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Service Categories</h6>
                                <h3 class="fw-bold">
                                    @Model.Count(c =>
                                             c.CategoryName.Contains("Plumbing", StringComparison.OrdinalIgnoreCase) ||
                                             c.CategoryName.Contains("Electrical", StringComparison.OrdinalIgnoreCase) ||
                                             c.CategoryName.Contains("Cleaning", StringComparison.OrdinalIgnoreCase) ||
                                             c.CategoryName.Contains("Repair", StringComparison.OrdinalIgnoreCase) ||
                                             c.CategoryName.Contains("Installation", StringComparison.OrdinalIgnoreCase))
                                </h3>
                            </div>
                            <div class="bg-success bg-opacity-10 rounded-circle p-3">
                                <i class="bi bi-tools text-success fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Home Services</h6>
                                <h3 class="fw-bold">
                                    @Model.Count(c =>
                                             c.CategoryName.Contains("Gardening", StringComparison.OrdinalIgnoreCase) ||
                                             c.CategoryName.Contains("Moving", StringComparison.OrdinalIgnoreCase) ||
                                             c.CategoryName.Contains("Painting", StringComparison.OrdinalIgnoreCase) ||
                                             c.CategoryName.Contains("Carpentry", StringComparison.OrdinalIgnoreCase))
                                </h3>
                            </div>
                            <div class="bg-warning bg-opacity-10 rounded-circle p-3">
                                <i class="bi bi-house text-warning fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">General Categories</h6>
                                <h3 class="fw-bold">
                                    @Model.Count(c =>
                                             c.CategoryName.Contains("General", StringComparison.OrdinalIgnoreCase) ||
                                             (!c.CategoryName.Contains("Plumbing", StringComparison.OrdinalIgnoreCase) &&
                                             !c.CategoryName.Contains("Electrical", StringComparison.OrdinalIgnoreCase) &&
                                             !c.CategoryName.Contains("Cleaning", StringComparison.OrdinalIgnoreCase) &&
                                             !c.CategoryName.Contains("Gardening", StringComparison.OrdinalIgnoreCase) &&
                                             !c.CategoryName.Contains("Moving", StringComparison.OrdinalIgnoreCase) &&
                                             !c.CategoryName.Contains("Repair", StringComparison.OrdinalIgnoreCase) &&
                                             !c.CategoryName.Contains("Installation", StringComparison.OrdinalIgnoreCase) &&
                                             !c.CategoryName.Contains("Painting", StringComparison.OrdinalIgnoreCase) &&
                                             !c.CategoryName.Contains("Carpentry", StringComparison.OrdinalIgnoreCase)))
                                </h3>
                            </div>
                            <div class="bg-info bg-opacity-10 rounded-circle p-3">
                                <i class="bi bi-folder text-info fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- ================= CATEGORY OVERVIEW ================= -->
        <div class="row mt-4">
            <div class="col-lg-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-palette me-2"></i>Category Color Distribution
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            @{
                                var colorGroups = Model
                                .Select(c => new
                                {
                                    Category = c,
                                    Color = GetCategoryColor(c.CategoryName),
                                    ColorName = GetColorName(GetCategoryColor(c.CategoryName))
                                })
                                .GroupBy(x => x.ColorName)
                                .Select(g => new { ColorName = g.Key, Count = g.Count(), Color = g.First().Color })
                                .OrderByDescending(g => g.Count);
                            }
                            @foreach (var group in colorGroups)
                            {
                                var percentage = (group.Count * 100) / Model.Count();

                                <div class="list-group-item border-0 px-0 py-3">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <div class="d-flex align-items-center">
                                            <div class="rounded-circle p-1 me-2 @group.Color.Replace("text-", "bg-") bg-opacity-25">
                                                <i class="bi bi-circle-fill @group.Color"></i>
                                            </div>
                                            <span class="fw-semibold">@group.ColorName</span>
                                        </div>
                                        <span class="fw-bold">@group.Count categories</span>
                                    </div>
                                    <div class="progress" style="height: 8px;">
                                        <div class="progress-bar @group.Color.Replace("text-", "bg-")" role="progressbar" style="width: @percentage%"
                                             aria-valuenow="@percentage" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-grid me-2"></i>Category Types Overview
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            @{
                                var typeGroups = Model
                                .Select(c => new
                                {
                                    Category = c,
                                    Type = GetCategoryType(c.CategoryName)
                                })
                                .GroupBy(x => x.Type)
                                .Select(g => new { Type = g.Key, Count = g.Count() })
                                .OrderByDescending(g => g.Count);
                            }
                            @foreach (var group in typeGroups)
                            {
                                var typeIcon = group.Type switch
                                {
                                    "Home Service" => "house",
                                    "Professional Service" => "briefcase",
                                    "Technical Service" => "tools",
                                    "General" => "folder",
                                    _ => "tag"
                                };

                                var typeColor = group.Type switch
                                {
                                    "Home Service" => "warning",
                                    "Professional Service" => "primary",
                                    "Technical Service" => "success",
                                    "General" => "info",
                                    _ => "secondary"
                                };

                                var percentage = (group.Count * 100) / Model.Count();

                                <div class="list-group-item border-0 px-0 py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            <div class="bg-@typeColor bg-opacity-10 rounded-circle p-2 me-3">
                                                <i class="bi bi-@typeIcon text-@typeColor"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1">
                                            <div class="d-flex justify-content-between align-items-center mb-2">
                                                <span class="fw-semibold">@group.Type</span>
                                                <span class="fw-bold">@group.Count categories</span>
                                            </div>
                                            <div class="progress" style="height: 8px;">
                                                <div class="progress-bar bg-@typeColor" role="progressbar" style="width: @percentage%"
                                                     aria-valuenow="@percentage" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- ================= CATEGORY CARDS ================= -->
        <div class="card border-0 shadow-sm mt-4">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="card-title mb-0">
                    <i class="bi bi-card-checklist me-2"></i>Category Details
                </h5>
            </div>
            <div class="card-body">
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                    @foreach (var item in Model.Take(6))
                    {
                        var categoryColor = GetCategoryColor(item.CategoryName);
                        var categoryIcon = GetCategoryIcon(item.CategoryName);
                        var categoryType = GetCategoryType(item.CategoryName);

                        <div class="col">
                            <div class="card border h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <div class="d-flex align-items-center">
                                            <div class="@categoryColor.Replace("text-", "bg-") bg-opacity-10 rounded-circle p-2 me-3">
                                                <i class="bi bi-@categoryIcon @categoryColor"></i>
                                            </div>
                                            <div>
                                                <h6 class="fw-bold mb-0">@item.CategoryName</h6>
                                                <small class="text-muted">@categoryType</small>
                                            </div>
                                        </div>
                                        <span class="badge @categoryColor.Replace("text-", "bg-") bg-opacity-10 border border-@categoryColor.Replace("text-", "") border-opacity-25">
                                            #@item.PostCategoryId
                                        </span>
                                    </div>
                                    <div class="mb-3">
                                        <div class="d-flex align-items-center mb-2">
                                            <i class="bi bi-palette text-muted me-2"></i>
                                            <span class="fw-semibold">@GetColorName(categoryColor)</span>
                                        </div>
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-info-circle text-muted me-2"></i>
                                            <small class="text-muted">@GetCategoryDescription(item.CategoryName)</small>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">
                                            <i class="bi bi-tag me-1"></i>
                                            Category
                                        </small>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@item.PostCategoryId" class="btn btn-outline-primary btn-sm">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.PostCategoryId" class="btn btn-outline-secondary btn-sm">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    <!-- ================= EMPTY STATE ================= -->
    @if (!Model.Any())
    {
        <div class="card border-0 shadow-lg">
            <div class="card-body p-5 text-center">
                <div class="py-5">
                    <div class="bg-light rounded-circle d-inline-flex p-4 mb-4">
                        <i class="bi bi-tags text-muted fs-1"></i>
                    </div>
                    <h3 class="fw-bold mb-3">No Categories Found</h3>
                    <p class="text-muted mb-4">
                        No content categories have been created yet. Add categories to organize your platform content.
                    </p>
                    <a asp-action="Create" class="btn btn-primary btn-lg">
                        <i class="bi bi-plus-circle me-2"></i>Create First Category
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

@functions {
    // Helper function to get category color based on name
    string GetCategoryColor(string categoryName)
    {
        return categoryName switch
        {
            string s when s.Contains("Plumbing", StringComparison.OrdinalIgnoreCase) => "text-info",
            string s when s.Contains("Electrical", StringComparison.OrdinalIgnoreCase) => "text-warning",
            string s when s.Contains("Cleaning", StringComparison.OrdinalIgnoreCase) => "text-success",
            string s when s.Contains("Gardening", StringComparison.OrdinalIgnoreCase) => "text-success",
            string s when s.Contains("Moving", StringComparison.OrdinalIgnoreCase) => "text-primary",
            string s when s.Contains("Repair", StringComparison.OrdinalIgnoreCase) => "text-danger",
            string s when s.Contains("Installation", StringComparison.OrdinalIgnoreCase) => "text-info",
            string s when s.Contains("Painting", StringComparison.OrdinalIgnoreCase) => "text-warning",
            string s when s.Contains("Carpentry", StringComparison.OrdinalIgnoreCase) => "text-danger",
            string s when s.Contains("General", StringComparison.OrdinalIgnoreCase) => "text-secondary",
            _ => "text-primary"
        };
    }

    // Helper function to get category icon
    string GetCategoryIcon(string categoryName)
    {
        return categoryName switch
        {
            string s when s.Contains("Plumbing", StringComparison.OrdinalIgnoreCase) => "droplet",
            string s when s.Contains("Electrical", StringComparison.OrdinalIgnoreCase) => "lightning",
            string s when s.Contains("Cleaning", StringComparison.OrdinalIgnoreCase) => "broom",
            string s when s.Contains("Gardening", StringComparison.OrdinalIgnoreCase) => "flower1",
            string s when s.Contains("Moving", StringComparison.OrdinalIgnoreCase) => "truck",
            string s when s.Contains("Repair", StringComparison.OrdinalIgnoreCase) => "tools",
            string s when s.Contains("Installation", StringComparison.OrdinalIgnoreCase) => "wrench",
            string s when s.Contains("Painting", StringComparison.OrdinalIgnoreCase) => "brush",
            string s when s.Contains("Carpentry", StringComparison.OrdinalIgnoreCase) => "hammer",
            string s when s.Contains("General", StringComparison.OrdinalIgnoreCase) => "briefcase",
            _ => "folder"
        };
    }

    // Helper function to get category description
    string GetCategoryDescription(string categoryName)
    {
        return categoryName switch
        {
            string s when s.Contains("Plumbing", StringComparison.OrdinalIgnoreCase) => "Pipe and water system services",
            string s when s.Contains("Electrical", StringComparison.OrdinalIgnoreCase) => "Wiring and electrical work",
            string s when s.Contains("Cleaning", StringComparison.OrdinalIgnoreCase) => "Cleaning and maintenance",
            string s when s.Contains("Gardening", StringComparison.OrdinalIgnoreCase) => "Garden and landscaping",
            string s when s.Contains("Moving", StringComparison.OrdinalIgnoreCase) => "Moving and relocation",
            string s when s.Contains("Repair", StringComparison.OrdinalIgnoreCase) => "General repair services",
            string s when s.Contains("Installation", StringComparison.OrdinalIgnoreCase) => "Equipment installation",
            string s when s.Contains("Painting", StringComparison.OrdinalIgnoreCase) => "Painting and finishing",
            string s when s.Contains("Carpentry", StringComparison.OrdinalIgnoreCase) => "Woodwork and carpentry",
            string s when s.Contains("General", StringComparison.OrdinalIgnoreCase) => "General services category",
            _ => "Content category"
        };
    }

    // Helper function to get color name
    string GetColorName(string colorClass)
    {
        return colorClass switch
        {
            "text-primary" => "Blue",
            "text-success" => "Green",
            "text-warning" => "Orange",
            "text-danger" => "Red",
            "text-info" => "Cyan",
            "text-secondary" => "Gray",
            _ => "Blue"
        };
    }

    // Helper function to get category type
    string GetCategoryType(string categoryName)
    {
        return categoryName switch
        {
            string s when s.Contains("Plumbing", StringComparison.OrdinalIgnoreCase) => "Technical Service",
            string s when s.Contains("Electrical", StringComparison.OrdinalIgnoreCase) => "Technical Service",
            string s when s.Contains("Cleaning", StringComparison.OrdinalIgnoreCase) => "Home Service",
            string s when s.Contains("Gardening", StringComparison.OrdinalIgnoreCase) => "Home Service",
            string s when s.Contains("Moving", StringComparison.OrdinalIgnoreCase) => "Professional Service",
            string s when s.Contains("Repair", StringComparison.OrdinalIgnoreCase) => "Technical Service",
            string s when s.Contains("Installation", StringComparison.OrdinalIgnoreCase) => "Technical Service",
            string s when s.Contains("Painting", StringComparison.OrdinalIgnoreCase) => "Home Service",
            string s when s.Contains("Carpentry", StringComparison.OrdinalIgnoreCase) => "Professional Service",
            string s when s.Contains("General", StringComparison.OrdinalIgnoreCase) => "General",
            _ => "General"
        };
    }

    // Helper function to get unique color count
    int GetUniqueColorCount()
    {
        var colors = Model.Select(c => GetCategoryColor(c.CategoryName)).Distinct();
        return colors.Count();
    }
}