@model Homeix.Models.PostCategory

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["EditPostCategoryTitle"];
}

<div class="container-fluid mt-4">

    <!-- ================= PAGE HEADER ================= -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title fw-bold">
                @Localizer["EditPostCategoryTitle"]
            </h1>
        </div>
    </div>

    <!-- ================= FORM CARD ================= -->
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm">

                <div class="card-body">

                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly"
                             class="text-danger mb-3"></div>

                        <!-- ID -->
                        <input type="hidden" asp-for="PostCategoryId" />

                        <!-- CATEGORY NAME -->
                        <div class="mb-3">
                            <label asp-for="CategoryName"
                                   class="form-label fw-semibold">
                                @Localizer["CategoryNameLabel"]
                            </label>

                            <input asp-for="CategoryName"
                                   class="form-control" />

                            <span asp-validation-for="CategoryName"
                                  class="text-danger"></span>
                        </div>

                        <!-- ================= ACTIONS ================= -->
                        <div class="d-flex justify-content-end gap-2 mt-4">

                            <button type="submit"
                                    class="btn btn-primary d-inline-flex align-items-center gap-2">
                                <i class="bi bi-check-circle"></i>
                                @Localizer["SaveButton"]
                            </button>

                            <button type="button"
                                    class="btn btn-secondary"
                                    onclick="history.back()">
                                <i class="bi bi-arrow-left"></i>
                                @Localizer["BackButton"]
                            </button>

                        </div>

                    </form>

                </div>

            </div>
        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
