@using Homeix.Models
@{
    ViewData["Title"] = "Chat";

    var users = ViewBag.Users as List<User>;
    var messages = ViewBag.Messages as List<Message>;
    var selectedUser = ViewBag.SelectedUser as User;

    int currentUserId = ViewBag.CurrentUserId;
    int? conversationId = ViewBag.ConversationId;
}

<div class="container-fluid vh-100 p-0">
    <div class="row g-0 h-100">

        <!-- ================= USERS LIST ================= -->
        <div class="col-12 col-md-4 col-lg-3 border-end d-flex flex-column">

            <div class="p-3 fw-bold border-bottom bg-white">
                Chats
            </div>

            <div class="flex-grow-1 overflow-auto">
                <div class="list-group list-group-flush">
                    @if (users != null)
                    {
                        foreach (var user in users)
                        {
                            bool isActive = selectedUser?.UserId == user.UserId;

                            <a asp-controller="Chat"
                               asp-action="Index"
                               asp-route-userId="@user.UserId"
                               class="list-group-item list-group-item-action @(isActive ? "active" : "")">

                                <div class="d-flex align-items-center gap-2">
                                    <span class="online-dot" id="online-@user.UserId"></span>

                                    <img src="@(string.IsNullOrEmpty(user.ProfilePicture)
                                        ? Url.Content("~/images/default-user.png")
                                        : user.ProfilePicture)"
                                         class="rounded-circle"
                                         width="40" height="40" />

                                    <div class="text-truncate">
                                        <div class="fw-semibold">@user.FullName</div>
                                        <small class="text-muted">@user.Email</small>
                                    </div>
                                </div>
                            </a>
                        }
                    }
                </div>
            </div>
        </div>

        <!-- ================= CHAT AREA ================= -->
        <div class="col-12 col-md-8 col-lg-9 d-flex flex-column">

            @if (selectedUser == null)
            {
                <div class="flex-grow-1 d-flex align-items-center justify-content-center text-muted bg-light">
                    Select a chat to start messaging
                </div>
            }
            else
            {
                <!-- HEADER -->
                <div class="border-bottom p-3 bg-white">
                    <strong>@selectedUser.FullName</strong>
                    <div class="small text-muted" id="typingIndicator"></div>
                </div>

                <!-- MESSAGES -->
                <div class="flex-grow-1 overflow-auto bg-light">
                    <div class="p-3 d-flex flex-column" id="messagesContainer">
                        @foreach (var msg in messages ?? new List<Message>())
                        {
                            bool isMe = msg.SenderUserId == currentUserId;

                            <div class="mb-2 @(isMe ? "align-self-end" : "align-self-start")">
                                <div class="px-3 py-2 rounded @(isMe ? "bg-primary text-white" : "bg-white border")">
                                    @msg.MessageText
                                    <div class="small text-end opacity-75">
                                        @msg.SentAt.ToString("HH:mm")
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- INPUT -->
                <div class="border-top p-3 bg-white">
                    <form id="chatForm" class="d-flex gap-2">
                        <input type="hidden" id="conversationId" value="@conversationId" />

                        <textarea id="messageInput"
                                  class="form-control"
                                  placeholder="Type a message..."
                                  rows="1"
                                  required></textarea>

                        <button type="submit" class="btn btn-primary">
                            Send
                        </button>
                    </form>

                    <div class="small text-muted mt-1" id="seenIndicator"></div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .online-dot {
        width: 10px;
        height: 10px;
        border-radius: 50%;
        background: gray;
    }

    .online {
        background: #28a745;
    }
</style>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>

    <script>
        const currentUserId = @currentUserId;
        const conversationId = @conversationId ?? 0;
        const receiverId = @selectedUser?.UserId ?? 0;

        const messagesContainer = document.getElementById("messagesContainer");
        const typingIndicator = document.getElementById("typingIndicator");
        const seenIndicator = document.getElementById("seenIndicator");

        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/chatHub")
            .build();

        connection.start();

        // ================= RECEIVE MESSAGE =================
        connection.on("ReceiveMessage", data => {
            const isMe = data.senderId === currentUserId;

            const wrapper = document.createElement("div");
            wrapper.className = "mb-2 " + (isMe ? "align-self-end" : "align-self-start");

            wrapper.innerHTML = `
                <div class="px-3 py-2 rounded ${isMe ? "bg-primary text-white" : "bg-white border"}">
                    ${data.message}
                    <div class="small text-end opacity-75">${data.sentAt}</div>
                </div>
            `;

            messagesContainer.appendChild(wrapper);
            messagesContainer.scrollTop = messagesContainer.scrollHeight;

            if (!isMe) {
                connection.invoke("MessageSeen", data.senderId);
            }
        });

        // ================= SEND MESSAGE =================
        document.getElementById("chatForm")?.addEventListener("submit", e => {
            e.preventDefault();

            const input = document.getElementById("messageInput");
            const text = input.value.trim();
            if (!text) return;

            connection.invoke(
                "SendMessage",
                conversationId,
                currentUserId,
                receiverId,
                text
            );

            input.value = "";
            seenIndicator.innerText = "";
        });

        // ================= TYPING =================
        document.getElementById("messageInput")?.addEventListener("input", () => {
            connection.invoke("Typing", receiverId);
        });

        connection.on("UserTyping", () => {
            typingIndicator.innerText = "Typing...";
            setTimeout(() => typingIndicator.innerText = "", 1000);
        });

        // ================= ONLINE / OFFLINE =================
        connection.on("UserOnline", id => {
            document.getElementById("online-" + id)?.classList.add("online");
        });

        connection.on("UserOffline", id => {
            document.getElementById("online-" + id)?.classList.remove("online");
        });

        // ================= SEEN =================
        connection.on("MessageSeen", () => {
            seenIndicator.innerText = "Seen ✔";
        });
    </script>
}
