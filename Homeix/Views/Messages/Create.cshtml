@model Homeix.Models.Message

@{
    ViewData["Title"] = "Create Message";
}

<div class="container-fluid mt-4">

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title">Create Message</h1>
        </div>
    </div>

    <!-- Centered Form -->
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body">

                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Conversation -->
                        <div class="mb-3">
                            <label asp-for="ConversationId" class="form-label"></label>
                            <select asp-for="ConversationId"
                                    class="form-select"
                                    asp-items="ViewBag.ConversationId">
                            </select>
                            <span asp-validation-for="ConversationId" class="text-danger"></span>
                        </div>

                        <!-- Sender -->
                        <div class="mb-3">
                            <label asp-for="SenderUserId" class="form-label"></label>
                            <select asp-for="SenderUserId"
                                    class="form-select"
                                    asp-items="ViewBag.SenderUserId">
                            </select>
                            <span asp-validation-for="SenderUserId" class="text-danger"></span>
                        </div>

                        <!-- Message Text -->
                        <div class="mb-3">
                            <label asp-for="MessageText" class="form-label"></label>
                            <textarea asp-for="MessageText"
                                      class="form-control"
                                      rows="3"></textarea>
                            <span asp-validation-for="MessageText" class="text-danger"></span>
                        </div>

                        <!-- Sent At -->
                        <div class="mb-3">
                            <label asp-for="SentAt" class="form-label"></label>
                            <input asp-for="SentAt" type="datetime-local" class="form-control" />
                            <span asp-validation-for="SentAt" class="text-danger"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-end gap-2 mt-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Create
                            </button>

                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left-circle"></i> Back
                            </a>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
