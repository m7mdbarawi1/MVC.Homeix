@model Homeix.Models.Subscription

@{
    ViewData["Title"] = "Edit Subscription";
}

<div class="container-fluid mt-4">

    <!-- ================= HEADER ================= -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="fw-bold page-title">Edit Subscription</h1>
            <p class="text-muted mb-0">
                Update subscription details for the selected user.
            </p>
        </div>
    </div>

    <!-- ================= FORM CARD ================= -->
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body">

                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly"
                             class="text-danger mb-3"></div>

                        <!-- REQUIRED -->
                        <input type="hidden" asp-for="SubscriptionId" />

                        <!-- USER -->
                        <div class="mb-3">
                            <label asp-for="UserId" class="form-label fw-semibold"></label>
                            <select asp-for="UserId"
                                    class="form-select"
                                    asp-items="ViewBag.UserId">
                            </select>
                            <span asp-validation-for="UserId"
                                  class="text-danger"></span>
                        </div>

                        <!-- PLAN -->
                        <div class="mb-3">
                            <label asp-for="PlanId" class="form-label fw-semibold"></label>
                            <select asp-for="PlanId"
                                    class="form-select"
                                    asp-items="ViewBag.PlanId">
                            </select>
                            <span asp-validation-for="PlanId"
                                  class="text-danger"></span>
                        </div>

                        <!-- START DATE -->
                        <div class="mb-3">
                            <label asp-for="StartDate" class="form-label fw-semibold"></label>
                            <input asp-for="StartDate"
                                   type="date"
                                   class="form-control" />
                            <span asp-validation-for="StartDate"
                                  class="text-danger"></span>
                        </div>

                        <!-- END DATE -->
                        <div class="mb-3">
                            <label asp-for="EndDate" class="form-label fw-semibold"></label>
                            <input asp-for="EndDate"
                                   type="date"
                                   class="form-control" />
                            <span asp-validation-for="EndDate"
                                  class="text-danger"></span>
                        </div>

                        <!-- STATUS -->
                        <div class="mb-3">
                            <label asp-for="Status" class="form-label fw-semibold"></label>
                            <input asp-for="Status"
                                   class="form-control" />
                            <span asp-validation-for="Status"
                                  class="text-danger"></span>
                        </div>

                        <!-- ACTIONS -->
                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <button type="submit"
                                    class="btn btn-primary d-inline-flex align-items-center gap-2">
                                <i class="bi bi-check-circle"></i>
                                Save
                            </button>

                            <!-- UNIVERSAL BACK BUTTON -->
                            <button type="button"
                                    class="btn btn-secondary d-inline-flex align-items-center gap-2"
                                    onclick="history.back()">
                                <i class="bi bi-arrow-left"></i>
                                Back
                            </button>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
