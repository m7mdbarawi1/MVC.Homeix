@model Homeix.Models.Subscription

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["DeleteSubscriptionTitle"];
}

<div class="container-fluid mt-4">

    <!-- ================= HEADER ================= -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="text-danger page-title">
                @Localizer["DeleteSubscriptionTitle"]
            </h1>
            <p class="text-muted mb-0">
                @Localizer["DeleteSubscriptionWarning"]
            </p>
        </div>
    </div>

    <!-- ================= CONFIRMATION CARD ================= -->
    <div class="row justify-content-center">
        <div class="col-md-9 col-lg-8">

            <div class="card shadow-sm border-danger">

                <!-- CARD HEADER -->
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        @Localizer["ConfirmSubscriptionDeletion"]
                    </h5>
                </div>

                <!-- CARD BODY -->
                <div class="card-body">
                    <dl class="row mb-0">

                        <dt class="col-sm-4 fw-bold">
                            @Localizer["User"]
                        </dt>
                        <dd class="col-sm-8">
                            @Model.User?.FullName
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            @Localizer["Plan"]
                        </dt>
                        <dd class="col-sm-8">
                            @Model.Plan?.PlanName
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            @Localizer["StartDate"]
                        </dt>
                        <dd class="col-sm-8">
                            @Model.StartDate.ToString("yyyy-MM-dd")
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            @Localizer["EndDate"]
                        </dt>
                        <dd class="col-sm-8">
                            @Model.EndDate.ToString("yyyy-MM-dd")
                        </dd>

                        <dt class="col-sm-4 fw-bold">
                            @Localizer["Status"]
                        </dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.Status == "Active" ? "bg-success" : "bg-secondary")">
                                @Localizer[Model.Status]
                            </span>
                        </dd>

                    </dl>

                    <!-- WARNING -->
                    <div class="alert alert-warning mt-4 mb-0">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        @Localizer["DeleteSubscriptionPermanentWarning"]
                    </div>
                </div>

                <!-- ================= ACTIONS ================= -->
                <div class="card-footer d-flex justify-content-end gap-2">

                    <form asp-action="Delete" method="post" class="d-inline">
                        @Html.AntiForgeryToken()

                        <input type="hidden" asp-for="SubscriptionId" />

                        <button type="submit"
                                class="btn btn-danger d-inline-flex align-items-center gap-2">
                            <i class="bi bi-trash"></i>
                            @Localizer["DeletePermanently"]
                        </button>
                    </form>

                    <button type="button"
                            class="btn btn-secondary d-inline-flex align-items-center gap-2"
                            onclick="history.back()">
                        <i class="bi bi-arrow-left"></i>
                        @Localizer["Cancel"]
                    </button>

                </div>

            </div>

        </div>
    </div>

</div>
