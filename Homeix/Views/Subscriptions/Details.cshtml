@model Homeix.Models.Subscription

@{
    ViewData["Title"] = "Subscription Details";
}

<div class="container-fluid mt-4">

    <!-- ================= HEADER ================= -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="fw-bold page-title">Subscription Details</h1>
        </div>
    </div>

    <!-- ================= DETAILS CARD ================= -->
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">

            <div class="card shadow-sm">

                <!-- CARD HEADER -->
                <div class="card-header">
                    <h5 class="mb-0">Details</h5>
                </div>

                <!-- CARD BODY -->
                <div class="card-body">
                    <dl class="row mb-0">

                        <!-- USER -->
                        <dt class="col-sm-4 fw-bold">User</dt>
                        <dd class="col-sm-8">
                            @Model.User?.FullName
                        </dd>

                        <!-- PLAN -->
                        <dt class="col-sm-4 fw-bold">Plan</dt>
                        <dd class="col-sm-8">
                            @Model.Plan?.PlanName
                        </dd>

                        <!-- PRICE -->
                        <dt class="col-sm-4 fw-bold">Price</dt>
                        <dd class="col-sm-8">
                            @Model.Plan?.Price JOD
                        </dd>

                        <!-- DURATION -->
                        <dt class="col-sm-4 fw-bold">Duration</dt>
                        <dd class="col-sm-8">
                            @Model.Plan?.DurationDays days
                        </dd>

                        <!-- START DATE -->
                        <dt class="col-sm-4 fw-bold">Start Date</dt>
                        <dd class="col-sm-8">
                            @Model.StartDate.ToString("yyyy-MM-dd")
                        </dd>

                        <!-- END DATE -->
                        <dt class="col-sm-4 fw-bold">End Date</dt>
                        <dd class="col-sm-8">
                            @Model.EndDate.ToString("yyyy-MM-dd")
                        </dd>

                        <!-- STATUS -->
                        <dt class="col-sm-4 fw-bold">Status</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.Status == "Active" ? "bg-success" : "bg-secondary")">
                                @Model.Status
                            </span>
                        </dd>

                    </dl>
                </div>

                <!-- ================= ACTIONS ================= -->
                <div class="card-footer d-flex justify-content-end gap-2">
                    <button type="button"
                            class="btn btn-secondary d-inline-flex align-items-center gap-2"
                            onclick="history.back()">
                        <i class="bi bi-arrow-left"></i>
                        Back
                    </button>
                </div>

            </div>

        </div>
    </div>
</div>
