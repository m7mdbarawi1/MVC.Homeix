@model Homeix.Models.Subscription

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["SubscriptionDetailsTitle"];
}

<div class="container-fluid mt-4">

    <!-- ================= HEADER ================= -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="fw-bold page-title">
                @Localizer["SubscriptionDetailsTitle"]
            </h1>
        </div>
    </div>

    <!-- ================= DETAILS CARD ================= -->
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">

            <div class="card shadow-sm">

                <!-- CARD HEADER -->
                <div class="card-header">
                    <h5 class="mb-0">
                        @Localizer["Details"]
                    </h5>
                </div>

                <!-- CARD BODY -->
                <div class="card-body">
                    <dl class="row mb-0">

                        <!-- USER -->
                        <dt class="col-sm-4 fw-bold">
                            @Localizer["User"]
                        </dt>
                        <dd class="col-sm-8">
                            @Model.User?.FullName
                        </dd>

                        <!-- PLAN -->
                        <dt class="col-sm-4 fw-bold">
                            @Localizer["Plan"]
                        </dt>
                        <dd class="col-sm-8">
                            @Model.Plan?.PlanName
                        </dd>

                        <!-- PRICE -->
                        <dt class="col-sm-4 fw-bold">
                            @Localizer["Price"]
                        </dt>
                        <dd class="col-sm-8">
                            @Model.Plan?.Price JOD
                        </dd>

                        <!-- DURATION -->
                        <dt class="col-sm-4 fw-bold">
                            @Localizer["Duration"]
                        </dt>
                        <dd class="col-sm-8">
                            @Model.Plan?.DurationDays @Localizer["Days"]
                        </dd>

                        <!-- START DATE -->
                        <dt class="col-sm-4 fw-bold">
                            @Localizer["StartDate"]
                        </dt>
                        <dd class="col-sm-8">
                            @Model.StartDate.ToString("yyyy-MM-dd")
                        </dd>

                        <!-- END DATE -->
                        <dt class="col-sm-4 fw-bold">
                            @Localizer["EndDate"]
                        </dt>
                        <dd class="col-sm-8">
                            @Model.EndDate.ToString("yyyy-MM-dd")
                        </dd>

                        <!-- STATUS -->
                        <dt class="col-sm-4 fw-bold">
                            @Localizer["Status"]
                        </dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.Status == "Active" ? "bg-success" : "bg-secondary")">
                                @Localizer[Model.Status]
                            </span>
                        </dd>

                    </dl>
                </div>

                <!-- ================= ACTIONS ================= -->
                <div class="card-footer d-flex justify-content-end gap-2">
                    <button type="button"
                            class="btn btn-secondary d-inline-flex align-items-center gap-2"
                            onclick="history.back()">
                        <i class="bi bi-arrow-left"></i>
                        @Localizer["Back"]
                    </button>
                </div>

            </div>

        </div>
    </div>
</div>
