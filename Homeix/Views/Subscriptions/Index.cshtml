@model IEnumerable<Homeix.Models.Subscription>

@{
    ViewData["Title"] = "My Subscription";
}

<div class="container mt-5">

    <div class="text-center mb-5">
        <h1 class="page-title">@ViewData["Title"]</h1>
        <p class="text-muted fs-5">
            Manage your active and past subscriptions
        </p>

        <a asp-action="DownloadReport" class="btn btn-secondary mt-3">
            <i class="bi bi-download"></i> Download Report
        </a>
    </div>

    @{
        var activeSubscriptions = (Model ?? Enumerable.Empty<Homeix.Models.Subscription>())
        .Where(s => s != null && s.Status == "Active")
        .OrderByDescending(s => s.EndDate)
        .ToList();
    }

    @if (activeSubscriptions.Any())
    {
        <div class="row justify-content-center g-4">

            @foreach (var sub in activeSubscriptions)
            {
                <div class="col-md-6 col-lg-5">
                    <div class="card shadow-sm h-100">

                        <div class="card-body p-4">

                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h4 class="mb-0">@sub.Plan?.PlanName</h4>

                                <span class="badge @(sub.Status == "Active" ? "bg-success" : "bg-secondary")">
                                    @sub.Status
                                </span>
                            </div>

                            <p class="mb-2">
                                <strong>Start:</strong> @sub.StartDate.ToShortDateString()
                            </p>

                            <p class="mb-2">
                                <strong>End:</strong> @sub.EndDate.ToShortDateString()
                            </p>

                            <p class="mb-4">
                                <strong>Duration:</strong> @sub.Plan?.DurationDays days
                            </p>

                            <div class="d-grid gap-2">
                                <a asp-action="Details"
                                   asp-route-id="@sub.SubscriptionId"
                                   class="btn btn-secondary">
                                    View Details
                                </a>

                                @if (sub.Status == "Active")
                                {
                                    <a asp-controller="SubscriptionPlans"
                                       asp-action="Index"
                                       class="btn btn-outline-light">
                                        Upgrade Plan
                                    </a>
                                }
                            </div>

                        </div>

                    </div>
                </div>
            }

        </div>
    }
    else
    {
        <div class="text-center text-muted">
            <p>You don’t have any subscriptions yet.</p>
            <a asp-controller="SubscriptionPlans"
               asp-action="Index"
               class="btn btn-accent">
                View Plans
            </a>
        </div>
    }

</div>
