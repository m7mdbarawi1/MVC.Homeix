@model Homeix.Models.Subscription

@{
    ViewData["Title"] = "Create Subscription";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title">Create Subscription</h1>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body">

                    <form asp-action="Create" method="post" id="subscriptionForm">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label class="form-label">User</label>
                            <input class="form-control"
                                   value="@User.Identity?.Name"
                                   readonly />
                        </div>

                        <div class="mb-3">
                            <label asp-for="PlanId" class="form-label"></label>
                            <select asp-for="PlanId"
                                    class="form-select"
                                    asp-items="ViewBag.PlanId"
                                    id="planSelect">
                            </select>
                            <span asp-validation-for="PlanId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="StartDate" class="form-label"></label>
                            <input asp-for="StartDate"
                                   type="date"
                                   class="form-control"
                                   id="startDate" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="EndDate" class="form-label"></label>
                            <input asp-for="EndDate"
                                   type="date"
                                   class="form-control"
                                   id="endDate" />
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-3">
                            <button type="button"
                                    class="btn btn-primary"
                                    id="openModalBtn">
                                <i class="bi bi-credit-card"></i> Subscribe
                            </button>

                            <a asp-action="Index" class="btn btn-secondary">
                                Back
                            </a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="paymentModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Confirm Payment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <p><strong>Plan:</strong> <span id="mPlan"></span></p>
                <p><strong>Price:</strong> <span id="mPrice"></span> JOD</p>
                <p><strong>Duration:</strong> <span id="mDuration"></span> days</p>
                <p><strong>Start:</strong> <span id="mStart"></span></p>
                <p><strong>End:</strong> <span id="mEnd"></span></p>

                <div class="alert alert-info mt-3">
                    Your current subscription (if any) will be replaced.
                </div>
            </div>

            <div class="modal-footer">
                <button type="button"
                        class="btn btn-secondary"
                        data-bs-dismiss="modal">
                    Cancel
                </button>

                <button type="submit"
                        class="btn btn-success"
                        form="subscriptionForm">
                    Confirm & Pay
                </button>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        const plans = JSON.parse('@Html.Raw(
        System.Text.Json.JsonSerializer.Serialize(
            ViewBag.PlanData ?? new List<object>()
        )
    )');

        const modal = new bootstrap.Modal(
            document.getElementById('paymentModal')
        );

        document.getElementById('openModalBtn')
            .addEventListener('click', function () {

                const planId = document.getElementById('planSelect').value;
                const plan = plans.find(p => p.planId == planId);

                if (!plan) {
                    alert("Please select a plan.");
                    return;
                }

                document.getElementById('mPlan').innerText = plan.planName;
                document.getElementById('mPrice').innerText = plan.price;
                document.getElementById('mDuration').innerText = plan.durationDays;
                document.getElementById('mStart').innerText =
                    document.getElementById('startDate').value;
                document.getElementById('mEnd').innerText =
                    document.getElementById('endDate').value;

                modal.show();
            });
    </script>
}

}
