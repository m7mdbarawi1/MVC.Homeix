@model Homeix.Models.JobProgress

@{
    ViewData["Title"] = "Delete Job Progress";
}

<div class="container-fluid mt-4">

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="text-danger">Delete Job Progress</h1>
            <p class="text-muted">Are you sure you want to delete this job progress record?</p>
        </div>
    </div>

    <!-- Centered Card -->
    <div class="row justify-content-center">
        <div class="col-md-9 col-lg-8">
            <div class="card shadow-sm border-danger">

                <!-- Card Header -->
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Confirm Deletion</h5>
                </div>

                <!-- Card Body -->
                <div class="card-body">
                    <dl class="row">

                        <dt class="col-sm-4 fw-bold">Status</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Status)
                        </dd>

                        <dt class="col-sm-4 fw-bold">Started At</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.StartedAt)
                        </dd>

                        <dt class="col-sm-4 fw-bold">Completed At</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.CompletedAt)
                        </dd>

                        <dt class="col-sm-4 fw-bold">Rated by Customer</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.IsRatedByCustomer)
                        </dd>

                        <dt class="col-sm-4 fw-bold">Rated by Worker</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.IsRatedByWorker)
                        </dd>

                        <dt class="col-sm-4 fw-bold">Assigned Worker</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.AssignedToUser.UserId)
                        </dd>

                        <dt class="col-sm-4 fw-bold">Customer Post</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.CustomerPost.CustomerPostId)
                        </dd>

                        <dt class="col-sm-4 fw-bold">Requested By</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.RequestedByUser.UserId)
                        </dd>

                    </dl>
                </div>

                <!-- Card Footer -->
                <div class="card-footer d-flex justify-content-end gap-2">
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" asp-for="JobProgressId" />
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </form>

                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Cancel
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>
