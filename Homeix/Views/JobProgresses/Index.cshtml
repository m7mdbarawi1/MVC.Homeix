@model IEnumerable<Homeix.Models.JobProgress>

@{
    ViewData["Title"] = "Job Progress Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 mb-5">

    <!-- ================= HEADER ================= -->
    <div class="text-center mb-5">
        <h1 class="fw-bold mb-2">
            <i class="bi bi-briefcase me-2"></i> Job Progress Management
        </h1>
        <p class="text-muted">
            Track, monitor, and manage all job assignments, progress, and completions.
        </p>
    </div>

    <!-- ================= ACTIONS BAR ================= -->
    <div class="card bg-light border-0 shadow-sm mb-4">
        <div class="card-body p-3">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <span class="badge bg-primary rounded-pill p-2">
                        <i class="bi bi-clipboard-check me-1"></i> Total Jobs: @Model.Count()
                    </span>
                    <span class="ms-3 text-muted">
                        <i class="bi bi-info-circle me-1"></i> Monitor job statuses, assignments, and completion rates
                    </span>
                </div>
                <div class="btn-group">
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-2"></i>Create New Job
                    </a>
                    <button type="button" class="btn btn-primary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown">
                        <span class="visually-hidden">Toggle Dropdown</span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#"><i class="bi bi-download me-2"></i>Export Report</a></li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-graph-up me-2"></i>View Analytics</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- ================= JOB PROGRESS TABLE ================= -->
    <div class="card border-0 shadow-lg">
        <div class="card-header bg-primary text-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="bi bi-kanban me-2"></i>Active Job Assignments
                </h5>
                <div class="d-flex gap-2">
                    <div class="dropdown">
                        <button class="btn btn-light btn-sm dropdown-toggle" type="button" id="statusFilter" data-bs-toggle="dropdown">
                            <i class="bi bi-funnel me-1"></i>Job Status
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">All Jobs</a></li>
                            <li><a class="dropdown-item" href="#"><span class="badge bg-info me-2">●</span>Pending</a></li>
                            <li><a class="dropdown-item" href="#"><span class="badge bg-warning me-2">●</span>In Progress</a></li>
                            <li><a class="dropdown-item" href="#"><span class="badge bg-success me-2">●</span>Completed</a></li>
                            <li><a class="dropdown-item" href="#"><span class="badge bg-danger me-2">●</span>Cancelled</a></li>
                        </ul>
                    </div>
                    <button class="btn btn-light btn-sm">
                        <i class="bi bi-arrow-clockwise me-1"></i>Refresh
                    </button>
                </div>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4 py-3">
                                <i class="bi bi-activity me-1"></i>
                                @Html.DisplayNameFor(model => model.Status)
                            </th>
                            <th class="py-3">
                                <i class="bi bi-people me-1"></i>
                                Team & Assignment
                            </th>
                            <th class="py-3">
                                <i class="bi bi-calendar-range me-1"></i>
                                Timeline
                            </th>
                            <th class="py-3">
                                <i class="bi bi-star me-1"></i>
                                Rating Status
                            </th>
                            <th class="py-3">
                                <i class="bi bi-card-checklist me-1"></i>
                                @Html.DisplayNameFor(model => model.CustomerPost)
                            </th>
                            <th class="pe-4 py-3 text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="border-top">
                                <td class="ps-4 py-3">
                                    @{
                                        var statusBadgeClass = item.Status switch
                                        {
                                            "Pending" => "bg-info",
                                            "In Progress" => "bg-warning",
                                            "Completed" => "bg-success",
                                            "Cancelled" => "bg-danger",
                                            _ => "bg-secondary"
                                        };

                                        var statusIcon = item.Status switch
                                        {
                                            "Pending" => "clock",
                                            "In Progress" => "arrow-repeat",
                                            "Completed" => "check-circle",
                                            "Cancelled" => "x-circle",
                                            _ => "question-circle"
                                        };
                                    }
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            <div class="@statusBadgeClass bg-opacity-10 rounded-circle p-2 border border-@statusBadgeClass.Replace("bg-", "")">
                                                <i class="bi bi-@statusIcon text-@statusBadgeClass.Replace("bg-", "")"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="fw-bold mb-0">@item.Status</h6>
                                            <small class="text-muted">Job #@item.JobProgressId</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="py-3">
                                    <div class="row g-2">
                                        <div class="col-12">
                                            <div class="d-flex align-items-center">
                                                <div class="bg-primary bg-opacity-10 rounded-circle p-1 me-2">
                                                    <i class="bi bi-person-check text-primary"></i>
                                                </div>
                                                <div>
                                                    <small class="fw-semibold">Assigned To:</small>
                                                    <div>User @Html.DisplayFor(modelItem => item.AssignedToUser.UserId)</div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="d-flex align-items-center">
                                                <div class="bg-success bg-opacity-10 rounded-circle p-1 me-2">
                                                    <i class="bi bi-person-plus text-success"></i>
                                                </div>
                                                <div>
                                                    <small class="fw-semibold">Requested By:</small>
                                                    <div>User @Html.DisplayFor(modelItem => item.RequestedByUser.UserId)</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td class="py-3">
                                    <div class="row g-2">
                                        <div class="col-12">
                                            <div class="d-flex align-items-center">
                                                <div class="bg-info bg-opacity-10 rounded-circle p-1 me-2">
                                                    <i class="bi bi-play-circle text-info"></i>
                                                </div>
                                                <div>
                                                    <small class="fw-semibold">Started:</small>
                                                    <div>@item.StartedAt.ToString("MMM dd, hh:mm tt")</div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="d-flex align-items-center">
                                                <div class="bg-success bg-opacity-10 rounded-circle p-1 me-2">
                                                    <i class="bi bi-check-circle text-success"></i>
                                                </div>
                                                <div>
                                                    <small class="fw-semibold">Completed:</small>
                                                    <div>
                                                        @if (item.CompletedAt.HasValue)
                                                        {
                                                            @item.CompletedAt.Value.ToString("MMM dd, hh:mm tt")
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">Not completed</span>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td class="py-3">
                                    <div class="row g-2">
                                        <div class="col-12 mb-2">
                                            @if (item.IsRatedByCustomer)
                                            {
                                                <span class="badge bg-success bg-opacity-10 border border-success border-opacity-25 rounded-pill px-3 py-1">
                                                    <i class="bi bi-star-fill me-1"></i>Customer Rated
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning bg-opacity-10 border border-warning border-opacity-25 rounded-pill px-3 py-1">
                                                    <i class="bi bi-star me-1"></i>Awaiting Customer
                                                </span>
                                            }
                                        </div>
                                        <div class="col-12">
                                            @if (item.IsRatedByWorker)
                                            {
                                                <span class="badge bg-success bg-opacity-10 border border-success border-opacity-25 rounded-pill px-3 py-1">
                                                    <i class="bi bi-star-fill me-1"></i>Worker Rated
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning bg-opacity-10 border border-warning border-opacity-25 rounded-pill px-3 py-1">
                                                    <i class="bi bi-star me-1"></i>Awaiting Worker
                                                </span>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td class="py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            <div class="bg-secondary bg-opacity-10 rounded-circle p-2">
                                                <i class="bi bi-file-post text-secondary"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="fw-bold mb-0">Post #@Html.DisplayFor(modelItem => item.CustomerPost.CustomerPostId)</h6>
                                            <small class="text-muted">Customer Request</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="pe-4 py-3 text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.JobProgressId" class="btn btn-outline-primary btn-sm" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.JobProgressId" class="btn btn-outline-info btn-sm" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.JobProgressId" class="btn btn-outline-danger btn-sm" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                    <div class="mt-2">
                                        @if (item.CompletedAt.HasValue)
                                        {
                                            <span class="badge bg-success bg-opacity-10 border border-success border-opacity-25 rounded-pill px-2 py-1">
                                                <i class="bi bi-check-circle me-1"></i>Completed
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning bg-opacity-10 border border-warning border-opacity-25 rounded-pill px-2 py-1">
                                                <i class="bi bi-clock me-1"></i>In Progress
                                            </span>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card-footer bg-light py-3">
            <div class="d-flex justify-content-between align-items-center">
                <div class="text-muted small">
                    <i class="bi bi-speedometer2 me-1"></i>
                    @Model.Count(j => j.CompletedAt.HasValue) of @Model.Count() jobs completed
                </div>
                <nav aria-label="Table navigation">
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">Next</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>

    <!-- ================= QUICK STATS ================= -->
    @if (Model.Any())
    {
        <div class="row g-4 mt-4">
            <div class="col-lg-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Active Jobs</h6>
                                <h3 class="fw-bold">@Model.Count(j => !j.CompletedAt.HasValue)</h3>
                            </div>
                            <div class="bg-warning bg-opacity-10 rounded-circle p-3">
                                <i class="bi bi-arrow-repeat text-warning fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Completed Jobs</h6>
                                <h3 class="fw-bold">@Model.Count(j => j.CompletedAt.HasValue)</h3>
                            </div>
                            <div class="bg-success bg-opacity-10 rounded-circle p-3">
                                <i class="bi bi-check-circle text-success fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Completion Rate</h6>
                                <h3 class="fw-bold">
                                    @((Model.Count(j => j.CompletedAt.HasValue) * 100) / (Model.Count() > 0 ? Model.Count() : 1))%
                                </h3>
                            </div>
                            <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                                <i class="bi bi-percent text-primary fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Avg. Duration</h6>
                                <h3 class="fw-bold">
                                    @{
                                        var completedJobs = Model.Where(j => j.CompletedAt.HasValue && j.StartedAt != null);
                                        var avgDays = completedJobs.Any() ?
                                        (int)completedJobs.Average(j => (j.CompletedAt.Value - j.StartedAt).TotalDays) : 0;
                                    }
                                    @avgDays days
                                </h3>
                            </div>
                            <div class="bg-info bg-opacity-10 rounded-circle p-3">
                                <i class="bi bi-clock text-info fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- ================= JOB STATUS BREAKDOWN ================= -->
        <div class="row mt-4">
            <div class="col-lg-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-pie-chart me-2"></i>Job Status Distribution
                        </h5>
                    </div>
                    <div class="card-body">
                        @{
                            var statusGroups = Model.GroupBy(j => j.Status)
                            .Select(g => new { Status = g.Key, Count = g.Count() })
                            .OrderByDescending(g => g.Count);
                        }
                        <div class="list-group list-group-flush">
                            @foreach (var group in statusGroups)
                            {
                                var statusColor = group.Status switch
                                {
                                    "Pending" => "info",
                                    "In Progress" => "warning",
                                    "Completed" => "success",
                                    "Cancelled" => "danger",
                                    _ => "secondary"
                                };

                                var percentage = (group.Count * 100) / Model.Count();

                                <div class="list-group-item border-0 px-0 py-3">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <div class="d-flex align-items-center">
                                            <span class="badge bg-@statusColor me-2">●</span>
                                            <span class="fw-semibold">@group.Status</span>
                                        </div>
                                        <span class="fw-bold">@group.Count jobs</span>
                                    </div>
                                    <div class="progress" style="height: 8px;">
                                        <div class="progress-bar bg-@statusColor" role="progressbar" style="width: @percentage%"
                                             aria-valuenow="@percentage" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-person-lines-fill me-2"></i>Top Performers
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            @{
                                var topWorkers = Model
                                .Where(j => j.AssignedToUser != null)
                                .GroupBy(j => j.AssignedToUser.UserId)
                                .Select(g => new
                                {
                                    UserId = g.Key,
                                    TotalJobs = g.Count(),
                                    CompletedJobs = g.Count(j => j.CompletedAt.HasValue)
                                })
                                .OrderByDescending(g => g.CompletedJobs)
                                .Take(5);

                                int workerRank = 1;
                            }
                            @foreach (var worker in topWorkers)
                            {
                                var rankClass = workerRank <= 3 ? "bg-warning bg-opacity-10" : "bg-secondary bg-opacity-10";

                                <div class="list-group-item border-0 px-0 py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            <div class="rounded-circle p-2 @rankClass">
                                                @if (workerRank <= 3)
                                                {
                                                    <i class="bi bi-award-fill text-warning"></i>
                                                }
                                                else
                                                {
                                                    <span class="fw-bold">#@workerRank</span>
                                                }
                                            </div>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <h6 class="mb-0">User @worker.UserId</h6>
                                                <div>
                                                    <span class="badge bg-success me-1">@worker.CompletedJobs completed</span>
                                                    <span class="badge bg-secondary">@worker.TotalJobs total</span>
                                                </div>
                                            </div>
                                            <small class="text-muted">Worker performance</small>
                                        </div>
                                    </div>
                                </div>

                                workerRank++;
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- ================= RECENT ACTIVITY ================= -->
        <div class="card border-0 shadow-sm mt-4">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="card-title mb-0">
                    <i class="bi bi-clock-history me-2"></i>Recent Job Updates
                </h5>
            </div>
            <div class="card-body">
                <div class="d-flex flex-column gap-3">
                    @foreach (var item in Model.OrderByDescending(j => j.StartedAt).Take(5))
                    {
                        var timelineColor = item.Status switch
                        {
                            "Completed" => "success",
                            "In Progress" => "warning",
                            "Pending" => "info",
                            "Cancelled" => "danger",
                            _ => "secondary"
                        };

                        <div class="d-flex">
                            <div class="flex-shrink-0">
                                <div class="bg-@timelineColor bg-opacity-10 rounded-circle p-2">
                                    <i class="bi bi-briefcase text-@timelineColor"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <div class="d-flex justify-content-between">
                                    <h6 class="fw-bold mb-1">Job #@item.JobProgressId - @item.Status</h6>
                                    <small class="text-muted">@item.StartedAt.ToString("MMM dd, hh:mm tt")</small>
                                </div>
                                <p class="mb-1">
                                    Assigned to User @item.AssignedToUser?.UserId for Post #@item.CustomerPost?.CustomerPostId
                                </p>
                                <small class="text-muted">
                                    @if (item.CompletedAt.HasValue)
                                    {
                                        <span><i class="bi bi-check-circle text-success me-1"></i>Completed on @item.CompletedAt.Value.ToString("MMM dd")</span>
                                    }
                                    else
                                    {
                                        <span><i class="bi bi-clock text-warning me-1"></i>In progress</span>
                                    }
                                </small>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    <!-- ================= EMPTY STATE ================= -->
    @if (!Model.Any())
    {
        <div class="card border-0 shadow-lg">
            <div class="card-body p-5 text-center">
                <div class="py-5">
                    <div class="bg-light rounded-circle d-inline-flex p-4 mb-4">
                        <i class="bi bi-briefcase text-muted fs-1"></i>
                    </div>
                    <h3 class="fw-bold mb-3">No Job Progress Records Found</h3>
                    <p class="text-muted mb-4">
                        No jobs have been assigned or tracked yet. Job progress records will appear here once assignments are made.
                    </p>
                    <a asp-action="Create" class="btn btn-primary btn-lg">
                        <i class="bi bi-plus-circle me-2"></i>Create First Job Assignment
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">