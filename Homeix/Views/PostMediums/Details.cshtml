@model Homeix.Models.PostMedium

@{
    ViewData["Title"] = "Post Media Details";
}

<div class="container-fluid mt-4">

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="fw-bold">Post Media Details</h1>
        </div>
    </div>

    <!-- Centered Card (MATCHES PostCategory layout) -->
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">

            <div class="card shadow-sm">

                <!-- Card Header -->
                <div class="card-header">
                    <h5 class="mb-0">Details</h5>
                </div>

                <!-- Card Body -->
                <div class="card-body">
                    <dl class="row mb-3">

                        <!-- Post Type -->
                        <dt class="col-sm-4 fw-bold">
                            @Html.DisplayNameFor(model => model.PostType)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.PostType)
                        </dd>

                        <!-- Post ID -->
                        <dt class="col-sm-4 fw-bold">
                            @Html.DisplayNameFor(model => model.PostId)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.PostId)
                        </dd>

                        <!-- Uploaded At -->
                        <dt class="col-sm-4 fw-bold">
                            @Html.DisplayNameFor(model => model.UploadedAt)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.UploadedAt)
                        </dd>

                    </dl>

                    <!-- Media Preview -->
                    <div class="text-center">
                        @if (!string.IsNullOrEmpty(Model.MediaPath))
                        {
                            if (Model.PostType == "Image")
                            {
                                <img src="@Model.MediaPath"
                                     class="img-fluid rounded shadow-sm"
                                     style="max-height:300px;"
                                     alt="Post Media Image" />
                            }
                            else if (Model.PostType == "Video")
                            {
                                <video src="@Model.MediaPath"
                                       class="img-fluid rounded shadow-sm"
                                       style="max-height:300px;"
                                       controls>
                                </video>
                            }
                        }
                    </div>

                </div>

                <!-- Card Footer -->
                <div class="card-footer d-flex justify-content-end gap-2">
                    <a asp-action="Edit" asp-route-id="@Model?.MediaId" class="btn btn-secondary">
                        Edit
                    </a>
                    <a asp-action="Index" class="btn btn-primary">
                        Back to List
                    </a>
                </div>

            </div>

        </div>
    </div>
</div>
