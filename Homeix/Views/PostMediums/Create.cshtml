@model Homeix.Models.PostMedium

@{
    ViewData["Title"] = "Create Post Media";
}

<div class="container-fluid mt-4">

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title">Create Post Media</h1>
        </div>
    </div>

    <!-- Centered Form -->
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body">

                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Post Type -->
                        <div class="mb-3">
                            <label asp-for="PostType" class="form-label"></label>
                            <input asp-for="PostType" class="form-control" />
                            <span asp-validation-for="PostType" class="text-danger"></span>
                        </div>

                        <!-- Post ID -->
                        <div class="mb-3">
                            <label asp-for="PostId" class="form-label"></label>
                            <input asp-for="PostId" type="number" class="form-control" />
                            <span asp-validation-for="PostId" class="text-danger"></span>
                        </div>

                        <!-- Media Path -->
                        <div class="mb-3">
                            <label asp-for="MediaPath" class="form-label"></label>
                            <input asp-for="MediaPath" class="form-control" />
                            <span asp-validation-for="MediaPath" class="text-danger"></span>
                        </div>

                        <!-- Uploaded At -->
                        <div class="mb-3">
                            <label asp-for="UploadedAt" class="form-label"></label>
                            <input asp-for="UploadedAt" type="datetime-local" class="form-control" />
                            <span asp-validation-for="UploadedAt" class="text-danger"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-end gap-2 mt-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Create
                            </button>

                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left-circle"></i> Back
                            </a>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
