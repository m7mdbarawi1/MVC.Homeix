    // Helper function to get media types for a specific day
    string GetMediaTypesForDay(DateTime date)
    {
        var dayMedia = Model.Where(m => m.UploadedAt.Date == date);
        var imageCount = dayMedia.Count(m =>
            m.MediaPath.EndsWith(".jpg", StringComparison.OrdinalIgnoreCase) ||
            m.MediaPath.EndsWith(".jpeg", StringComparison.OrdinalIgnoreCase) ||
            m.MediaPath.EndsWith(".png", StringComparison.OrdinalIgnoreCase));
        var docCount = dayMedia.Count(m =>
            m.MediaPath.EndsWith(".pdf", StringComparison.OrdinalIgnoreCase) ||
            m.MediaPath.EndsWith(".doc", StringComparison.OrdinalIgnoreCase) ||
            m.MediaPath.EndsWith(".docx", StringComparison.OrdinalIgnoreCase));

        if (imageCount > 0 && docCount > 0)
            return $"{imageCount} images, {docCount} docs";
        else if (imageCount > 0)
            return $"{imageCount} images";
        else if (docCount > 0)
            return $"{docCount} docs";
        else
            return "Various files";
    }
