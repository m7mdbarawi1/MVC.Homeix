@model Homeix.Models.RatingCustomerPost

@{
    ViewData["Title"] = "Create Rating";
    int? selJob = ViewData["SelectedJobProgressId"] as int?;
    int? selRater = ViewData["SelectedRaterUserId"] as int?;
    int? selRated = ViewData["SelectedRatedUserId"] as int?;
}

<div class="container-fluid mt-4">

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title">Create Rating</h1>
        </div>
    </div>

    <!-- Centered Form -->
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body">

                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <!-- Show ALL validation errors -->
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <!-- Job Progress -->
                        <div class="mb-3">
                            <label class="form-label">Job Progress</label>
                            <select name="JobProgressId" class="form-select">
                                <option value="">-- Select Job --</option>
                                @foreach (var item in (IEnumerable<SelectListItem>)ViewBag.JobProgressId)
                                {
                                    <option value="@item.Value" selected="@(selJob?.ToString() == item.Value)">
                                        @item.Text
                                    </option>
                                }
                            </select>
                        </div>

                        <!-- Rater -->
                        <div class="mb-3">
                            <label class="form-label">Rater</label>
                            <select name="RaterUserId" class="form-select">
                                <option value="">-- Select Rater --</option>
                                @foreach (var item in (IEnumerable<SelectListItem>)ViewBag.RaterUserId)
                                {
                                    <option value="@item.Value" selected="@(selRater?.ToString() == item.Value)">
                                        @item.Text
                                    </option>
                                }
                            </select>
                        </div>

                        <!-- Rated User -->
                        <div class="mb-3">
                            <label class="form-label">Rated User</label>
                            <select name="RatedUserId" class="form-select">
                                <option value="">-- Select Rated User --</option>
                                @foreach (var item in (IEnumerable<SelectListItem>)ViewBag.RatedUserId)
                                {
                                    <option value="@item.Value" selected="@(selRated?.ToString() == item.Value)">
                                        @item.Text
                                    </option>
                                }
                            </select>
                        </div>

                        <!-- Rating Value -->
                        <div class="mb-3">
                            <label asp-for="RatingValue" class="form-label"></label>
                            <input asp-for="RatingValue"
                                   type="number"
                                   min="1"
                                   max="5"
                                   class="form-control" />
                            <span asp-validation-for="RatingValue" class="text-danger"></span>
                        </div>

                        <!-- Review -->
                        <div class="mb-3">
                            <label asp-for="Review" class="form-label"></label>
                            <textarea asp-for="Review"
                                      class="form-control"
                                      rows="3"></textarea>
                            <span asp-validation-for="Review" class="text-danger"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-end gap-2 mt-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Create
                            </button>

                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left-circle"></i> Back
                            </a>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
