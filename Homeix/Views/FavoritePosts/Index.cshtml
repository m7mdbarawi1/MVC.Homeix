@model IEnumerable<Homeix.Models.FavoritePost>

@{
    ViewData["Title"] = "Favorite Posts Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 mb-5">

    <!-- ================= HEADER ================= -->
    <div class="text-center mb-5">
        <h1 class="fw-bold mb-2">
            <i class="bi bi-heart me-2"></i> Favorite Posts Management
        </h1>
        <p class="text-muted">
            Monitor user-saved favorite posts, bookmarks, and preferred content.
        </p>
    </div>

    <!-- ================= ACTIONS BAR ================= -->
    <div class="card bg-light border-0 shadow-sm mb-4">
        <div class="card-body p-3">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <span class="badge bg-primary rounded-pill p-2">
                        <i class="bi bi-bookmark-heart me-1"></i> Total Favorites: @Model.Count()
                    </span>
                    <span class="ms-3 text-muted">
                        <i class="bi bi-info-circle me-1"></i> Track user preferences and saved content
                    </span>
                </div>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>Add New Favorite
                </a>
            </div>
        </div>
    </div>

    <!-- ================= FAVORITE POSTS TABLE ================= -->
    <div class="card border-0 shadow-lg">
        <div class="card-header bg-primary text-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="bi bi-stars me-2"></i>User Favorite Collections
                </h5>
                <div class="dropdown">
                    <button class="btn btn-light btn-sm dropdown-toggle" type="button" id="filterDropdown" data-bs-toggle="dropdown">
                        <i class="bi bi-filter me-1"></i>Filter by Type
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">All Types</a></li>
                        <li><a class="dropdown-item" href="#">Customer Posts</a></li>
                        <li><a class="dropdown-item" href="#">Worker Posts</a></li>
                        <li><a class="dropdown-item" href="#">Other Content</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4 py-3">
                                <i class="bi bi-person-circle me-1"></i>
                                User
                            </th>
                            <th class="py-3">
                                <i class="bi bi-tag me-1"></i>
                                @Html.DisplayNameFor(model => model.PostType)
                            </th>
                            <th class="py-3">
                                <i class="bi bi-postcard me-1"></i>
                                Post Reference
                            </th>
                            <th class="py-3">
                                <i class="bi bi-calendar-plus me-1"></i>
                                @Html.DisplayNameFor(model => model.AddedAt)
                            </th>
                            <th class="pe-4 py-3 text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="border-top">
                                <td class="ps-4 py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            <div class="bg-primary bg-opacity-10 rounded-circle p-2">
                                                <i class="bi bi-person-fill text-primary"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="fw-bold mb-0">User @Html.DisplayFor(modelItem => item.User.UserId)</h6>
                                            <small class="text-muted">Favorite Collector</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="py-3">
                                    @{
                                        var postTypeBadgeClass = item.PostType switch
                                        {
                                            "CustomerPost" => "bg-info",
                                            "WorkerPost" => "bg-success",
                                            _ => "bg-secondary"
                                        };

                                        var postTypeIcon = item.PostType switch
                                        {
                                            "CustomerPost" => "person",
                                            "WorkerPost" => "briefcase",
                                            _ => "file-earmark"
                                        };
                                    }
                                    <span class="badge @postTypeBadgeClass bg-opacity-10 border border-@postTypeBadgeClass.Replace("bg-", "") border-opacity-25 rounded-pill px-3 py-2">
                                        <i class="bi bi-@postTypeIcon me-1"></i>@item.PostType
                                    </span>
                                </td>
                                <td class="py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            <div class="bg-warning bg-opacity-10 rounded-circle p-2">
                                                <i class="bi bi-123 text-warning"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="fw-bold mb-0">Post #@Html.DisplayFor(modelItem => item.PostId)</h6>
                                            <small class="text-muted">ID Reference</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            <div class="bg-info bg-opacity-10 rounded-circle p-2">
                                                <i class="bi bi-clock-history text-info"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="fw-bold mb-0">@item.AddedAt.ToString("MMM dd, yyyy")</h6>
                                            <small class="text-muted">@item.AddedAt.ToString("hh:mm tt")</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="pe-4 py-3 text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.FavoritePostId" class="btn btn-outline-primary btn-sm" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.FavoritePostId" class="btn btn-outline-info btn-sm" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.FavoritePostId" class="btn btn-outline-danger btn-sm" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                    <div class="mt-2">
                                        <span class="badge bg-danger bg-opacity-10 border border-danger border-opacity-25 rounded-pill px-2 py-1">
                                            <i class="bi bi-heart-fill me-1"></i>Favorite
                                        </span>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card-footer bg-light py-3">
            <div class="d-flex justify-content-between align-items-center">
                <div class="text-muted small">
                    <i class="bi bi-people me-1"></i>
                    @Model.Select(f => f.User.UserId).Distinct().Count() users have saved favorites
                </div>
                <nav aria-label="Table navigation">
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">Next</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>

    <!-- ================= QUICK STATS ================= -->
    @if (Model.Any())
    {
        <div class="row g-4 mt-4">
            <div class="col-lg-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Total Favorites</h6>
                                <h3 class="fw-bold">@Model.Count()</h3>
                            </div>
                            <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                                <i class="bi bi-heart text-primary fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Today's Saves</h6>
                                <h3 class="fw-bold">
                                    @Model.Count(f => f.AddedAt.Date == DateTime.Today)
                                </h3>
                            </div>
                            <div class="bg-success bg-opacity-10 rounded-circle p-3">
                                <i class="bi bi-calendar-day text-success fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Active Users</h6>
                                <h3 class="fw-bold">
                                    @Model.Select(f => f.User.UserId).Distinct().Count()
                                </h3>
                            </div>
                            <div class="bg-warning bg-opacity-10 rounded-circle p-3">
                                <i class="bi bi-people text-warning fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">This Week</h6>
                                <h3 class="fw-bold">
                                    @Model.Count(f => f.AddedAt >= DateTime.Now.AddDays(-7))
                                </h3>
                            </div>
                            <div class="bg-info bg-opacity-10 rounded-circle p-3">
                                <i class="bi bi-calendar-week text-info fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- ================= USER ACTIVITY ================= -->
        <div class="row mt-4">
            <div class="col-lg-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-graph-up me-2"></i>Post Type Distribution
                        </h5>
                    </div>
                    <div class="card-body">
                        @{
                            var postTypeGroups = Model.GroupBy(f => f.PostType)
                            .Select(g => new { Type = g.Key, Count = g.Count() })
                            .OrderByDescending(g => g.Count);
                        }
                        <div class="list-group list-group-flush">
                            @foreach (var group in postTypeGroups)
                            {
                                var typeColor = group.Type switch
                                {
                                    "CustomerPost" => "info",
                                    "WorkerPost" => "success",
                                    _ => "secondary"
                                };

                                var percentage = (group.Count * 100) / Model.Count();
                                var typeName = group.Type switch
                                {
                                    "CustomerPost" => "Customer Posts",
                                    "WorkerPost" => "Worker Posts",
                                    _ => group.Type
                                };

                                <div class="list-group-item border-0 px-0 py-3">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <div class="d-flex align-items-center">
                                            <span class="badge bg-@typeColor me-2">●</span>
                                            <span class="fw-semibold">@typeName</span>
                                        </div>
                                        <span class="fw-bold">@group.Count favorites</span>
                                    </div>
                                    <div class="progress" style="height: 8px;">
                                        <div class="progress-bar bg-@typeColor" role="progressbar" style="width: @percentage%"
                                             aria-valuenow="@percentage" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-trophy me-2"></i>Top Users by Favorites
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            @{
                                var topUsers = Model
                                .GroupBy(f => f.User.UserId)
                                .Select(g => new { UserId = g.Key, Count = g.Count() })
                                .OrderByDescending(g => g.Count)
                                .Take(5);

                                int rank = 1;
                            }
                            @foreach (var user in topUsers)
                            {
                                var rankClass = rank <= 3 ? "bg-warning bg-opacity-10" : "bg-secondary bg-opacity-10";

                                <div class="list-group-item border-0 px-0 py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            <div class="rounded-circle p-2 @rankClass">
                                                @if (rank <= 3)
                                                {
                                                    <i class="bi bi-trophy-fill text-warning"></i>
                                                }
                                                else
                                                {
                                                    <span class="fw-bold">#@rank</span>
                                                }
                                            </div>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <h6 class="mb-0">User @user.UserId</h6>
                                                <span class="badge bg-primary rounded-pill">@user.Count favorites</span>
                                            </div>
                                            <small class="text-muted">Top collector</small>
                                        </div>
                                    </div>
                                </div>

                                rank++;
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- ================= RECENT FAVORITES ================= -->
        <div class="card border-0 shadow-sm mt-4">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="card-title mb-0">
                    <i class="bi bi-clock-history me-2"></i>Recently Added Favorites
                </h5>
            </div>
            <div class="card-body">
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                    @foreach (var item in Model.OrderByDescending(f => f.AddedAt).Take(6))
                    {
                        <div class="col">
                            <div class="card border h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                                                <i class="bi bi-person-fill text-primary"></i>
                                            </div>
                                            <div>
                                                <h6 class="fw-bold mb-0">User @item.User.UserId</h6>
                                                <small class="text-muted">Collector</small>
                                            </div>
                                        </div>
                                        <span class="badge bg-danger bg-opacity-10 border border-danger border-opacity-25">
                                            <i class="bi bi-heart-fill"></i>
                                        </span>
                                    </div>
                                    <div class="mb-3">
                                        <div class="d-flex align-items-center mb-2">
                                            <i class="bi bi-tag text-muted me-2"></i>
                                            <span class="fw-semibold">@item.PostType</span>
                                        </div>
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-123 text-muted me-2"></i>
                                            <span class="text-muted">Post #@item.PostId</span>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">
                                            <i class="bi bi-clock me-1"></i>
                                            @item.AddedAt.ToString("hh:mm tt")
                                        </small>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@item.FavoritePostId" class="btn btn-outline-primary btn-sm">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    <!-- ================= EMPTY STATE ================= -->
    @if (!Model.Any())
    {
        <div class="card border-0 shadow-lg">
            <div class="card-body p-5 text-center">
                <div class="py-5">
                    <div class="bg-light rounded-circle d-inline-flex p-4 mb-4">
                        <i class="bi bi-heart text-muted fs-1"></i>
                    </div>
                    <h3 class="fw-bold mb-3">No Favorite Posts Found</h3>
                    <p class="text-muted mb-4">
                        No users have saved any posts as favorites yet. Favorites will appear here once users start bookmarking content.
                    </p>
                    <a asp-action="Create" class="btn btn-primary btn-lg">
                        <i class="bi bi-plus-circle me-2"></i>Add First Favorite
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">