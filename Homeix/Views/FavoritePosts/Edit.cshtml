@model Homeix.Models.FavoritePost

@{
    ViewData["Title"] = "Edit Favorite Post";
}

<div class="container-fluid mt-4">

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1>Edit Favorite Post</h1>
        </div>
    </div>

    <!-- Centered Form -->
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body">

                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <input type="hidden" asp-for="FavoritePostId" />

                        <!-- User -->
                        <div class="mb-3">
                            <label asp-for="UserId" class="form-label"></label>
                            <select asp-for="UserId"
                                    class="form-control"
                                    asp-items="ViewBag.UserId">
                            </select>
                            <span asp-validation-for="UserId" class="text-danger"></span>
                        </div>

                        <!-- Post Type -->
                        <div class="mb-3">
                            <label asp-for="PostType" class="form-label"></label>
                            <input asp-for="PostType" class="form-control" />
                            <span asp-validation-for="PostType" class="text-danger"></span>
                        </div>

                        <!-- Post Id -->
                        <div class="mb-3">
                            <label asp-for="PostId" class="form-label"></label>
                            <input asp-for="PostId" type="number" class="form-control" />
                            <span asp-validation-for="PostId" class="text-danger"></span>
                        </div>

                        <!-- Added At -->
                        <div class="mb-3">
                            <label asp-for="AddedAt" class="form-label"></label>
                            <input asp-for="AddedAt" type="datetime-local" class="form-control" />
                            <span asp-validation-for="AddedAt" class="text-danger"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Save
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left-circle"></i> Back
                            </a>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
