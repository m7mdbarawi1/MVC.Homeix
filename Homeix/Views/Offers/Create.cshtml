@model Homeix.Models.Offer

@{
    ViewData["Title"] = "Create Offer";
}

<div class="container-fluid mt-4">

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title">Create Offer</h1>
        </div>
    </div>

    <!-- Centered Form -->
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body">

                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Customer Post -->
                        <div class="mb-3">
                            <label asp-for="CustomerPostId" class="form-label"></label>
                            <select asp-for="CustomerPostId"
                                    class="form-select"
                                    asp-items="ViewBag.CustomerPostId">
                            </select>
                            <span asp-validation-for="CustomerPostId" class="text-danger"></span>
                        </div>

                        <!-- User -->
                        <div class="mb-3">
                            <label asp-for="UserId" class="form-label"></label>
                            <select asp-for="UserId"
                                    class="form-select"
                                    asp-items="ViewBag.UserId">
                            </select>
                            <span asp-validation-for="UserId" class="text-danger"></span>
                        </div>

                        <!-- Proposed Price -->
                        <div class="mb-3">
                            <label asp-for="ProposedPrice" class="form-label"></label>
                            <input asp-for="ProposedPrice"
                                   type="number"
                                   step="0.01"
                                   class="form-control" />
                            <span asp-validation-for="ProposedPrice" class="text-danger"></span>
                        </div>

                        <!-- Status -->
                        <div class="mb-3">
                            <label asp-for="Status" class="form-label"></label>
                            <input asp-for="Status" class="form-control" />
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <!-- Created At -->
                        <div class="mb-3">
                            <label asp-for="CreatedAt" class="form-label"></label>
                            <input asp-for="CreatedAt"
                                   type="datetime-local"
                                   class="form-control" />
                            <span asp-validation-for="CreatedAt" class="text-danger"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-end gap-2 mt-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Create
                            </button>

                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left-circle"></i> Back
                            </a>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
