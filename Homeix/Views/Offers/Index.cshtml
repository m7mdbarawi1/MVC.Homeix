@model IEnumerable<Homeix.Models.Offer>

@{
    ViewData["Title"] = "Offer Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 mb-5">

    <!-- ================= HEADER ================= -->
    <div class="text-center mb-5">
        <h1 class="fw-bold mb-2">
            <i class="bi bi-hand-thumbs-up me-2"></i> Offer Management
        </h1>
        <p class="text-muted">
            Manage, review, and track all service offers and proposals.
        </p>
    </div>

    <!-- ================= ACTIONS BAR ================= -->
    <div class="card bg-light border-0 shadow-sm mb-4">
        <div class="card-body p-3">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <span class="badge bg-primary rounded-pill p-2">
                        <i class="bi bi-cash-coin me-1"></i> Total Offers: @Model.Count()
                    </span>
                    <span class="ms-3 text-muted">
                        <i class="bi bi-info-circle me-1"></i> Monitor offers, proposals, and bid statuses
                    </span>
                </div>
                <div class="btn-group">
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-2"></i>Create New Offer
                    </a>
                    <button type="button" class="btn btn-primary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown">
                        <span class="visually-hidden">Toggle Dropdown</span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#"><i class="bi bi-download me-2"></i>Export Offers</a></li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-filter me-2"></i>Advanced Filters</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- ================= OFFERS TABLE ================= -->
    <div class="card border-0 shadow-lg">
        <div class="card-header bg-primary text-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="bi bi-table me-2"></i>Active Offers & Proposals
                </h5>
                <div class="d-flex gap-2">
                    <div class="dropdown">
                        <button class="btn btn-light btn-sm dropdown-toggle" type="button" id="statusFilter" data-bs-toggle="dropdown">
                            <i class="bi bi-funnel me-1"></i>Status
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">All Offers</a></li>
                            <li><a class="dropdown-item" href="#"><span class="badge bg-info me-2">●</span>Pending</a></li>
                            <li><a class="dropdown-item" href="#"><span class="badge bg-success me-2">●</span>Accepted</a></li>
                            <li><a class="dropdown-item" href="#"><span class="badge bg-danger me-2">●</span>Rejected</a></li>
                            <li><a class="dropdown-item" href="#"><span class="badge bg-secondary me-2">●</span>Expired</a></li>
                        </ul>
                    </div>
                    <div class="dropdown">
                        <button class="btn btn-light btn-sm dropdown-toggle" type="button" id="priceFilter" data-bs-toggle="dropdown">
                            <i class="bi bi-sort-numeric-down me-1"></i>Price
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Low to High</a></li>
                            <li><a class="dropdown-item" href="#">High to Low</a></li>
                            <li><a class="dropdown-item" href="#">Under $100</a></li>
                            <li><a class="dropdown-item" href="#">$100 - $500</a></li>
                            <li><a class="dropdown-item" href="#">Over $500</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4 py-3">
                                <i class="bi bi-currency-dollar me-1"></i>
                                @Html.DisplayNameFor(model => model.ProposedPrice)
                            </th>
                            <th class="py-3">
                                <i class="bi bi-activity me-1"></i>
                                @Html.DisplayNameFor(model => model.Status)
                            </th>
                            <th class="py-3">
                                <i class="bi bi-calendar me-1"></i>
                                @Html.DisplayNameFor(model => model.CreatedAt)
                            </th>
                            <th class="py-3">
                                <i class="bi bi-card-checklist me-1"></i>
                                @Html.DisplayNameFor(model => model.CustomerPost)
                            </th>
                            <th class="py-3">
                                <i class="bi bi-person-circle me-1"></i>
                                @Html.DisplayNameFor(model => model.User)
                            </th>
                            <th class="pe-4 py-3 text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="border-top">
                                <td class="ps-4 py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            <div class="bg-success bg-opacity-10 rounded-circle p-2">
                                                <i class="bi bi-cash-stack text-success"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="fw-bold mb-0">$@Html.DisplayFor(modelItem => item.ProposedPrice)</h6>
                                            <small class="text-muted">Offer #@item.OfferId</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="py-3">
                                    @{
                                        var statusBadgeClass = item.Status switch
                                        {
                                            "Pending" => "bg-info",
                                            "Accepted" => "bg-success",
                                            "Rejected" => "bg-danger",
                                            "Expired" => "bg-secondary",
                                            _ => "bg-warning"
                                        };

                                        var statusIcon = item.Status switch
                                        {
                                            "Pending" => "clock",
                                            "Accepted" => "check-circle",
                                            "Rejected" => "x-circle",
                                            "Expired" => "calendar-x",
                                            _ => "question-circle"
                                        };
                                    }
                                    <span class="badge @statusBadgeClass bg-opacity-10 border border-@statusBadgeClass.Replace("bg-", "") border-opacity-25 rounded-pill px-3 py-2">
                                        <i class="bi bi-@statusIcon me-1"></i>@item.Status
                                    </span>
                                </td>
                                <td class="py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            <div class="bg-primary bg-opacity-10 rounded-circle p-2">
                                                <i class="bi bi-calendar3 text-primary"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="fw-bold mb-0">@item.CreatedAt.ToString("MMM dd, yyyy")</h6>
                                            <small class="text-muted">@item.CreatedAt.ToString("hh:mm tt")</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            <div class="bg-warning bg-opacity-10 rounded-circle p-2">
                                                <i class="bi bi-file-post text-warning"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="fw-bold mb-0">Post #@Html.DisplayFor(modelItem => item.CustomerPost.CustomerPostId)</h6>
                                            <small class="text-muted">Service Request</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            <div class="bg-info bg-opacity-10 rounded-circle p-2">
                                                <i class="bi bi-person-fill text-info"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="fw-bold mb-0">User @Html.DisplayFor(modelItem => item.User.UserId)</h6>
                                            <small class="text-muted">Offer Provider</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="pe-4 py-3 text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.OfferId" class="btn btn-outline-primary btn-sm" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.OfferId" class="btn btn-outline-info btn-sm" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.OfferId" class="btn btn-outline-danger btn-sm" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                    <div class="mt-2">
                                        <span class="badge bg-primary bg-opacity-10 border border-primary border-opacity-25 rounded-pill px-2 py-1">
                                            <i class="bi bi-hand-thumbs-up me-1"></i>Offer
                                        </span>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card-footer bg-light py-3">
            <div class="d-flex justify-content-between align-items-center">
                <div class="text-muted small">
                    <i class="bi bi-graph-up me-1"></i>
                    Total Value: $@Model.Sum(o => o.ProposedPrice) •
                    @Model.Select(o => o.User.UserId).Distinct().Count() providers
                </div>
                <nav aria-label="Table navigation">
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">Next</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>

    <!-- ================= QUICK STATS ================= -->
    @if (Model.Any())
    {
        <div class="row g-4 mt-4">
            <div class="col-lg-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Total Offers</h6>
                                <h3 class="fw-bold">@Model.Count()</h3>
                            </div>
                            <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                                <i class="bi bi-hand-thumbs-up text-primary fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Total Value</h6>
                                <h3 class="fw-bold">
                                    $@Model.Sum(o => o.ProposedPrice)
                                </h3>
                            </div>
                            <div class="bg-success bg-opacity-10 rounded-circle p-3">
                                <i class="bi bi-cash-stack text-success fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Avg. Price</h6>
                                <h3 class="fw-bold">
                                    $@(Model.Any() ? (int)Model.Average(o => o.ProposedPrice) : 0)
                                </h3>
                            </div>
                            <div class="bg-warning bg-opacity-10 rounded-circle p-3">
                                <i class="bi bi-graph-up text-warning fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Today's Offers</h6>
                                <h3 class="fw-bold">
                                    @Model.Count(o => o.CreatedAt.Date == DateTime.Today)
                                </h3>
                            </div>
                            <div class="bg-info bg-opacity-10 rounded-circle p-3">
                                <i class="bi bi-calendar-day text-info fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- ================= OFFER ANALYSIS ================= -->
        <div class="row mt-4">
            <div class="col-lg-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-pie-chart me-2"></i>Offer Status Distribution
                        </h5>
                    </div>
                    <div class="card-body">
                        @{
                            var statusGroups = Model.GroupBy(o => o.Status)
                            .Select(g => new { Status = g.Key, Count = g.Count() })
                            .OrderByDescending(g => g.Count);
                        }
                        <div class="list-group list-group-flush">
                            @foreach (var group in statusGroups)
                            {
                                var statusColor = group.Status switch
                                {
                                    "Pending" => "info",
                                    "Accepted" => "success",
                                    "Rejected" => "danger",
                                    "Expired" => "secondary",
                                    _ => "warning"
                                };

                                var percentage = (group.Count * 100) / Model.Count();

                                <div class="list-group-item border-0 px-0 py-3">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <div class="d-flex align-items-center">
                                            <span class="badge bg-@statusColor me-2">●</span>
                                            <span class="fw-semibold">@group.Status</span>
                                        </div>
                                        <span class="fw-bold">@group.Count offers</span>
                                    </div>
                                    <div class="progress" style="height: 8px;">
                                        <div class="progress-bar bg-@statusColor" role="progressbar" style="width: @percentage%"
                                             aria-valuenow="@percentage" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-trophy me-2"></i>Top Offer Providers
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            @{
                                var topProviders = Model
                                .GroupBy(o => o.User.UserId)
                                .Select(g => new { UserId = g.Key, Count = g.Count(), TotalValue = g.Sum(o => o.ProposedPrice) })
                                .OrderByDescending(g => g.Count)
                                .Take(5);

                                int providerRank = 1;
                            }
                            @foreach (var provider in topProviders)
                            {
                                var rankClass = providerRank <= 3 ? "bg-warning bg-opacity-10" : "bg-secondary bg-opacity-10";

                                <div class="list-group-item border-0 px-0 py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            <div class="rounded-circle p-2 @rankClass">
                                                @if (providerRank <= 3)
                                                {
                                                    <i class="bi bi-award-fill text-warning"></i>
                                                }
                                                else
                                                {
                                                    <span class="fw-bold">#@providerRank</span>
                                                }
                                            </div>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <h6 class="mb-0">User @provider.UserId</h6>
                                                <div>
                                                    <span class="badge bg-primary me-1">@provider.Count offers</span>
                                                    <span class="badge bg-success">$@provider.TotalValue</span>
                                                </div>
                                            </div>
                                            <small class="text-muted">Active provider</small>
                                        </div>
                                    </div>
                                </div>

                                providerRank++;
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- ================= RECENT OFFERS ================= -->
        <div class="card border-0 shadow-sm mt-4">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="card-title mb-0">
                    <i class="bi bi-clock-history me-2"></i>Recent Offers
                </h5>
            </div>
            <div class="card-body">
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                    @foreach (var item in Model.OrderByDescending(o => o.CreatedAt).Take(6))
                    {
                        var statusColor = item.Status switch
                        {
                            "Accepted" => "success",
                            "Pending" => "info",
                            "Rejected" => "danger",
                            "Expired" => "secondary",
                            _ => "warning"
                        };

                        <div class="col">
                            <div class="card border h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                                                <i class="bi bi-person-fill text-primary"></i>
                                            </div>
                                            <div>
                                                <h6 class="fw-bold mb-0">User @item.User.UserId</h6>
                                                <small class="text-muted">Provider</small>
                                            </div>
                                        </div>
                                        <span class="badge bg-@statusColor bg-opacity-10 border border-@statusColor border-opacity-25">
                                            @item.Status
                                        </span>
                                    </div>
                                    <div class="mb-3">
                                        <div class="d-flex align-items-center mb-2">
                                            <i class="bi bi-cash-coin text-muted me-2"></i>
                                            <span class="fw-bold fs-5">$@item.ProposedPrice</span>
                                        </div>
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-file-post text-muted me-2"></i>
                                            <span class="text-muted">For Post #@item.CustomerPost.CustomerPostId</span>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">
                                            <i class="bi bi-clock me-1"></i>
                                            @item.CreatedAt.ToString("hh:mm tt")
                                        </small>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@item.OfferId" class="btn btn-outline-primary btn-sm">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.OfferId" class="btn btn-outline-secondary btn-sm">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    <!-- ================= EMPTY STATE ================= -->
    @if (!Model.Any())
    {
        <div class="card border-0 shadow-lg">
            <div class="card-body p-5 text-center">
                <div class="py-5">
                    <div class="bg-light rounded-circle d-inline-flex p-4 mb-4">
                        <i class="bi bi-hand-thumbs-up text-muted fs-1"></i>
                    </div>
                    <h3 class="fw-bold mb-3">No Offers Found</h3>
                    <p class="text-muted mb-4">
                        No offers have been made yet. Offers will appear here once providers start bidding on service requests.
                    </p>
                    <a asp-action="Create" class="btn btn-primary btn-lg">
                        <i class="bi bi-plus-circle me-2"></i>Create First Offer
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">